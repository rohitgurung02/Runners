</style>

<pc-contact-form-{{ last_part }} class="pc-contact-form">
  <div class="pc-contact-container">
    <div class="pc-left-col">
      {%- if section.settings.image != blank -%}
        {{- section.settings.image | image_url: width: section.settings.image.width, height: section.settings.image.height | image_tag: loading: 'lazy', preload: true, alt: section.settings.image.alt -}}
      {%- else -%}
        {{ 'product-1' | placeholder_svg_tag: 'pc-placeholder-image' }}
      {%- endif -%}
    </div>
    <div class="pc-right-col">
      <div class="pc-theme-switch-wrapper">
        <label class="pc-theme-switch" for="pc-checkbox-{{ last_part }}">
          <input type="checkbox" id="pc-checkbox-{{ last_part }}" />
          <div class="pc-slider pc-round"></div>
        </label>
      <div class="pc-description">{{ section.settings.dark_mode_label }}</div>
    </div>
      
      <h1 class="pc-heading">{{ section.settings.heading }}</h1>
      <p class="pc-subheading">{{ section.settings.subheading }}</p>
      
      <form id="pc-contact-form-{{ last_part }}" class="pc-contact-form" method="post">
        <label for="pc-name-{{ last_part }}">{{ section.settings.name_label }}</label>
        <input type="text" id="pc-name-{{ last_part }}" name="name" required>
        
        <label for="pc-email-{{ last_part }}">{{ section.settings.email_label }}</label>
        <input type="email" id="pc-email-{{ last_part }}" name="email" required>
        
        <label for="pc-message-{{ last_part }}">{{ section.settings.message_label }}</label>
        <textarea rows="5" id="pc-message-{{ last_part }}" name="message" required></textarea>
        
        <button type="submit" id="pc-submit-{{ last_part }}" name="submit">{{ section.settings.button_text }}</button>
      </form>
      
      <div id="pc-error-{{ last_part }}" class="pc-error"></div>
      <div id="pc-success-msg-{{ last_part }}" class="pc-success-msg"></div>
    </div>
  </div>
</pc-contact-form-{{ last_part }}>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    const toggleSwitch = document.querySelector('{{ sec_id }} .pc-theme-switch input[type="checkbox"]');
    const contactForm = document.querySelector('pc-contact-form-{{ last_part }}');
    const currentTheme = localStorage.getItem('theme');

    if (currentTheme === 'dark') {
      contactForm.classList.add('dark-mode');
      if (toggleSwitch) toggleSwitch.checked = true;
    }

    function switchTheme(e) {
      if (e.target.checked) {
        contactForm.classList.add('dark-mode');
        localStorage.setItem('theme', 'dark');
      } else {
        contactForm.classList.remove('dark-mode');
        localStorage.setItem('theme', 'light');
      }
    }

    if (toggleSwitch) {
      toggleSwitch.addEventListener('change', switchTheme, false);
    }

    const contactFormElement = document.getElementById('pc-contact-form-{{ last_part }}');
    const errorElement = document.getElementById('pc-error-{{ last_part }}');
    const successMsg = document.getElementById('pc-success-msg-{{ last_part }}');
    const submitBtn = document.getElementById('pc-submit-{{ last_part }}');

    if (contactFormElement && submitBtn) {
      const validate = (e) => {
        e.preventDefault();
        const name = document.getElementById('pc-name-{{ last_part }}');
        const email = document.getElementById('pc-email-{{ last_part }}');
        const message = document.getElementById('pc-message-{{ last_part }}');
        
        errorElement.innerHTML = '';
        successMsg.innerHTML = '';

        if (name.value.length < 3) {
          errorElement.innerHTML = '{{ section.settings.name_error_message }}';
          return false;
        } 
        
        if (!(email.value.includes('.') && (email.value.includes('@')))) {
          errorElement.innerHTML = '{{ section.settings.email_error_message }}';
          return false;
        } 

        if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value)) {
          errorElement.innerHTML = '{{ section.settings.email_error_message }}';
          return false;
        }

        if (message.value.length < 15) {
          errorElement.innerHTML = '{{ section.settings.message_error_message }}';
          return false;
        }

        successMsg.innerHTML = '{{ section.settings.success_message }}';

        setTimeout(function () {
          successMsg.innerHTML = '';
          contactFormElement.reset();
        }, 6000);

        return true;
      }

      submitBtn.addEventListener('click', validate);
    }
  });
</script>

