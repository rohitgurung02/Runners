{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

{% style %}
  {{ sec_id }} .pc-parallax-container-{{ last_part }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  {{ sec_id }} .pc-parallax-image-{{ last_part }} {
    position: relative;
    z-index: 1;
    height: {{ section.settings.desktop_height }}px;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center top;
    background-size: cover;
  }

  {{ sec_id }} .pc-parallax-overlay-{{ last_part }}::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity }}%;
    z-index: 2;
  }

  {{ sec_id }} .pc-parallax-content-{{ last_part }} {
    position: absolute;
    text-align: {{ section.settings.text_alignment }};
    top: {{ section.settings.text_vertical_position }}%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    z-index: 3;
  }

  {{ sec_id }} .pc-parallax-heading-{{ last_part }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    letter-spacing: {{ section.settings.letter_spacing }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
  }

  {{ sec_id }} .pc-parallax-subheading-{{ last_part }} {
    color: {{ section.settings.subheading_color }};
    font-size: {{ section.settings.subheading_size }}px;
    letter-spacing: {{ section.settings.letter_spacing }}px;
    margin-bottom: {{ section.settings.subheading_spacing }}px;
  }

  {{ sec_id }} .pc-parallax-button-{{ last_part }} {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: 1px solid {{ section.settings.button_border_color }};
    padding: {{ section.settings.button_padding_top }}px {{ section.settings.button_padding_sides }}px;
    font-size: {{ section.settings.button_text_size }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    display: inline-block;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-parallax-button-{{ last_part }}:hover {
    background-color: {{ section.settings.button_bg_hover_color }};
    color: {{ section.settings.button_text_hover_color }};
    border-color: {{ section.settings.button_border_hover_color }};
  }

  @media only screen and (max-width: 767px) {
    {{ sec_id }} .pc-parallax-image-{{ last_part }} {
      height: {{ section.settings.mobile_height }}px;
      background-attachment: scroll;
    }

    {{ sec_id }} .pc-parallax-heading-{{ last_part }} {
      font-size: {{ section.settings.mobile_heading_size }}px;
    }

    {{ sec_id }} .pc-parallax-subheading-{{ last_part }} {
      font-size: {{ section.settings.mobile_subheading_size }}px;
    }

    {{ sec_id }} .pc-parallax-button-{{ last_part }} {
      padding: {{ section.settings.mobile_button_padding_top }}px {{ section.settings.mobile_button_padding_sides }}px;
      font-size: {{ section.settings.mobile_button_text_size }}px;
    }
  }
{% endstyle %}

<div class="pc-parallax-container-{{ last_part }} {% unless section.settings.full_width %}page-width{% endunless %}">
  {% for block in section.blocks %}
    <div class="pc-parallax-image-{{ last_part }} {% if section.settings.show_overlay %}pc-parallax-overlay-{{ last_part }}{% endif %} lazyload"
      data-bgset="{{ block.settings.image | img_url: '2000x' }}"
      data-sizes="auto"
      data-parent-fit="cover">
      
      <div class="pc-parallax-content-{{ last_part }}">
        {% if block.settings.heading != blank %}
          <{{ section.settings.heading_tag }} class="pc-parallax-heading-{{ last_part }}">
            {{ block.settings.heading }}
          </{{ section.settings.heading_tag }}>
        {% endif %}
        
        {% if block.settings.subheading != blank %}
          <{{ section.settings.subheading_tag }} class="pc-parallax-subheading-{{ last_part }}">
            {{ block.settings.subheading }}
          </{{ section.settings.subheading_tag }}>
        {% endif %}
        
        {% if block.settings.button_label != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="pc-parallax-button-{{ last_part }}">
            {{ block.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

