{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-parallax-{{ last_part }} class="pc-parallax">
  <div class="pc-parallax__inner">
    <h1 class="pc-parallax__title">{{ section.settings.title }}</h1>
  </div>
</pc-parallax-{{ last_part }}>

{% for block in section.blocks %}
  <div class="pc-parallax__content">{{ block.settings.content }}</div>
  {% if forloop.last == false %}
    <pc-parallax-{{ last_part }} class="pc-parallax pc-parallax--{{ forloop.index }}" data-index="{{ forloop.index }}">
      <div class="pc-parallax__inner">
        <h1 class="pc-parallax__title">{{ block.settings.parallax_title }}</h1>
      </div>
    </pc-parallax-{{ last_part }}>
  {% endif %}
{% endfor %}

<style>
  {{ sec_id }} .pc-parallax {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    color: {{ section.settings.text_color }};
  }

  {{ sec_id }} .pc-parallax__inner {
    padding: {{ section.settings.desktop_padding_top }}px 0 {{ section.settings.desktop_padding_bottom }}px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  {{ sec_id }} .pc-parallax__title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    text-align: center;
    margin: 0;
    {% if section.settings.title_shadow %}
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    {% endif %}
  }

  {{ sec_id }} .pc-parallax__content {
    margin: {{ section.settings.content_margin_top }}px {{ section.settings.content_margin_sides }}px {{ section.settings.content_margin_bottom }}px;
    font-size: {{ section.settings.content_font_size }}px;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-parallax__inner {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    {{ sec_id }} .pc-parallax__title {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    {{ sec_id }} .pc-parallax__content {
      margin: {{ section.settings.mobile_content_margin_top }}px {{ section.settings.mobile_content_margin_sides }}px {{ section.settings.mobile_content_margin_bottom }}px;
      font-size: {{ section.settings.mobile_content_font_size }}px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    class PcParallax{{ last_part | capitalize }} extends HTMLElement {
      connectedCallback() {
        this.setBackground();
      }

      setBackground() {
        const index = this.dataset.index || 'main';
        const imageSetting = index === 'main' ? 'image' : `image_${index}`;
        
        // Get the image URL from the section data
        let imageUrl;
        if (index === 'main') {
          imageUrl = '{{ section.settings.image | image_url: width: 2000 }}';
        } else {
          const blockIndex = parseInt(index) - 1;
          const block = {{ section.blocks | json }}[blockIndex];
          imageUrl = block.settings.image ? '{{ block.settings.image | image_url: width: 2000 }}' : '';
        }

        if (!imageUrl) {
          imageUrl = '{{ 'product-1' | placeholder_svg_tag }}';
          // For SVG placeholder, we need to set it as background image differently
          this.style.backgroundImage = `url("data:image/svg+xml,${encodeURIComponent(imageUrl)}")`;
        } else {
          this.style.backgroundImage = `url(${imageUrl})`;
        }
      }
    }

    customElements.define('pc-parallax-{{ last_part }}', PcParallax{{ last_part | capitalize }});
    
    // Initialize all parallax elements
    const parallaxElements = document.querySelectorAll('pc-parallax-{{ last_part }}');
    parallaxElements.forEach(el => {
      const instance = new PcParallax{{ last_part | capitalize }}();
      Object.setPrototypeOf(el, instance);
      el.connectedCallback();
    });
  });
</script>

