{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-parallax-story-{{ last_part }} class="pc-parallax-story">
  {%- for block in section.blocks -%}
    {%- if block.type == 'parallax' -%}
      <div class="pc-parallax pc-parallax-{{ forloop.index }}" style="
        {%- if block.settings.image != blank -%}
          background-image: url('{{ block.settings.image | image_url: width: 2000 }}');
        {%- else -%}
          background-image: url('{{ 'product-1' | placeholder_svg_tag }}');
        {%- endif -%}
        height: {{ block.settings.height }}vh;
      "></div>
    {%- elsif block.type == 'content' -%}
      <div class="pc-content" style="
        background-color: {{ block.settings.bg_color }};
        padding-top: {{ block.settings.padding_top }}px;
        padding-bottom: {{ block.settings.padding_bottom }}px;
      ">
        {%- if block.settings.heading != blank -%}
          <h2 class="pc-heading" style="
            font-size: {{ block.settings.heading_size }}px;
            color: {{ block.settings.heading_color }};
            margin-bottom: {{ block.settings.heading_margin_bottom }}px;
          ">{{ block.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if block.settings.text != blank -%}
          <div class="pc-text" style="
            font-size: {{ block.settings.text_size }}px;
            color: {{ block.settings.text_color }};
            line-height: {{ block.settings.text_line_height }};
          ">{{ block.settings.text }}</div>
        {%- endif -%}
        
        {%- if forloop.first and section.settings.enable_audio -%}
          <div class="pc-controls" data-echo="{{ section.settings.audio_echo }}">
            <button id="pc-playPauseButton-{{ last_part }}" class="pc-control-btn" aria-label="Play">
              <span>▶️</span>
            </button>
            <button id="pc-stopButton-{{ last_part }}" class="pc-control-btn" disabled>⏹️</button>
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- endfor -%}
  
  {%- if section.settings.show_footer -%}
    <footer class="pc-footer" style="
      padding: {{ section.settings.footer_padding }}px;
      background-color: {{ section.settings.footer_bg_color }};
      color: {{ section.settings.footer_text_color }};
    ">
      {{ section.settings.footer_text }}
    </footer>
  {%- endif -%}
</pc-parallax-story-{{ last_part }}>

<style>
  {{ sec_id }} .pc-parallax-story {
    font-family: var(--font-body-family);
    scroll-behavior: smooth;
    overflow-x: hidden;
    background-color: #111;
    color: #f8f8f2;
  }
  
  {{ sec_id }} .pc-parallax {
    position: relative;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    width: 100%;
    overflow: hidden;
  }
  
  {{ sec_id }} .pc-content {
    text-align: center;
    animation: pc-fadeIn-{{ last_part }} 1.5s ease-in-out;
  }
  
  @keyframes pc-fadeIn-{{ last_part }} {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  {{ sec_id }} .pc-heading {
    text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.3);
  }
  
  {{ sec_id }} .pc-controls {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
  }
  
  {{ sec_id }} .pc-control-btn {
    width: 50px;
    height: 50px;
    font-size: 1rem;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    background: rgba(255, 255, 255, 0.1);
    color: #f8f8f8;
    transition: transform 0.2s ease, background 0.3s ease;
  }
  
  {{ sec_id }} .pc-control-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }
  
  {{ sec_id }} .pc-control-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  {{ sec_id }} .pc-footer {
    text-align: center;
  }
  
  @media (max-width: 768px) {
    {{ sec_id }} .pc-parallax {
      background-attachment: scroll;
    }
    
    {{ sec_id }} .pc-parallax::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: inherit;
      background-size: cover;
      background-position: center;
      transform: translateY(0px);
      will-change: transform;
    }
    
    {{ sec_id }} .pc-heading {
      font-size: calc({{ section.settings.mobile_heading_size }}px * 0.8) !important;
    }
    
    {{ sec_id }} .pc-text {
      font-size: calc({{ section.settings.mobile_text_size }}px * 0.9) !important;
    }
    
    {{ sec_id }} .pc-content {
      padding-top: {{ section.settings.mobile_padding_top }}px !important;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const stories = [
      {%- for block in section.blocks -%}
        {%- if block.type == 'content' and block.settings.text != blank -%}
          `{{ block.settings.text | strip_html | escape }}`{% unless forloop.last %},{% endunless %}
        {%- endif -%}
      {%- endfor -%}
    ];
    
    const playPauseButton = document.getElementById('pc-playPauseButton-{{ last_part }}');
    const stopButton = document.getElementById('pc-stopButton-{{ last_part }}');
    const storyText = document.querySelector('{{ sec_id }} .pc-text');
    
    let speech;
    let currentStoryIndex = 0;
    let isPlaying = false;
    
    if (playPauseButton) {
      playPauseButton.addEventListener('click', function() {
        if (!isPlaying) {
          playStory();
        } else {
          pauseStory();
        }
      });
    }
    
    if (stopButton) {
      stopButton.addEventListener('click', function() {
        stopStory();
      });
    }
    
    function playStory() {
      if (!speechSynthesis.speaking || speechSynthesis.paused) {
        if (speechSynthesis.paused) {
          speechSynthesis.resume();
        } else {
          if (storyText) storyText.innerHTML = stories[currentStoryIndex].replace(/\n/g, "<br>");
          speech = new SpeechSynthesisUtterance(stories[currentStoryIndex]);
          speech.lang = "en-US";
          speech.rate = 0.85;
          speech.pitch = 0.9;
          speech.volume = 0.8;
    
          speech.onend = function() {
            currentStoryIndex++;
            if (currentStoryIndex < stories.length) {
              setTimeout(playStory, 600);
            } else {
              stopStory();
              currentStoryIndex = 0;
            }
          };
    
          speechSynthesis.speak(speech);
        }
    
        isPlaying = true;
        updatePlayPauseButton();
        if (stopButton) stopButton.disabled = false;
      }
    }
    
    function pauseStory() {
      if (speechSynthesis.speaking && !speechSynthesis.paused) {
        speechSynthesis.pause();
        isPlaying = false;
        updatePlayPauseButton();
      }
    }
    
    function stopStory() {
      if (speechSynthesis.speaking || speechSynthesis.paused) {
        speechSynthesis.cancel();
        resetPlayer();
      }
    }
    
    function resetPlayer() {
      isPlaying = false;
      currentStoryIndex = 0;
      if (storyText) storyText.textContent = "{{ section.settings.initial_text | default: 'Click play to begin the tale of love and loss.' | strip_html | escape }}";
      updatePlayPauseButton();
      if (stopButton) stopButton.disabled = true;
    }
    
    function updatePlayPauseButton() {
      if (playPauseButton) playPauseButton.innerHTML = isPlaying ? "⏸️" : "▶️";
    }
  });
</script>

