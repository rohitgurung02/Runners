{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-testimonial-slider-{{ last_part }} class="pc-testimonial-slider-{{ last_part }}">
  <div class="pc-testimonial-slider__container">
    {%- if section.settings.heading != blank -%}
      <div class="pc-testimonial-slider__heading">
        <h2 class="pc-testimonial-slider__title">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}
    
    <div class="pc-testimonial-slider__wrapper">
      <div class="pc-testimonial-slider__track">
        {%- for block in section.blocks -%}
          <div class="pc-testimonial-slide" {{ block.shopify_attributes }}>
            <div class="pc-testimonial-slide__content">
              <h3 class="pc-testimonial-slide__quote">"{{ block.settings.quote }}"</h3>
              <div class="pc-testimonial-slide__text">{{ block.settings.text }}</div>
              <div class="pc-testimonial-slide__author">
                <svg width="9" height="2" viewBox="0 0 9 2" fill="none" class="pc-testimonial-slide__line">
                  <path d="M0.526123 1.13867H8.25949" stroke="currentColor" stroke-width="0.8" />
                </svg>
                <span>{{ block.settings.author }}</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
    
    <div class="pc-testimonial-slider__nav">
      <button class="pc-testimonial-slider__prev" aria-label="Previous testimonial">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <div class="pc-testimonial-slider__dots"></div>
      <button class="pc-testimonial-slider__next" aria-label="Next testimonial">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 6L15 12L9 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</pc-testimonial-slider-{{ last_part }}>

<style>
  {{ sec_id }} .pc-testimonial-slider-{{ last_part }} {
    position: relative;
    width: 100%;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }

  {{ sec_id }} .pc-testimonial-slider__container {
    max-width: {{ section.settings.section_max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    width: 100%;
  }

  {{ sec_id }} .pc-testimonial-slider__heading {
    text-align: center;
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  }

  {{ sec_id }} .pc-testimonial-slider__title {
    font-family: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
    font-weight: {{ section.settings.heading_font_weight }};
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
    line-height: 1.2;
  }

  {{ sec_id }} .pc-testimonial-slider__wrapper {
    position: relative;
    overflow: hidden;
    margin: 0 auto;
    width: 100%;
  }

  {{ sec_id }} .pc-testimonial-slider__track {
    display: flex;
    transition: transform 0.5s ease;
    will-change: transform;
  }

  {{ sec_id }} .pc-testimonial-slide {
    min-width: 100%;
    padding: 0 10px;
    box-sizing: border-box;
  }

  {{ sec_id }} .pc-testimonial-slide__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    padding: 40px;
    background-color: {{ section.settings.card_bg_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    {% if section.settings.card_shadow %}
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    {% endif %}
  }

  {{ sec_id }} .pc-testimonial-slide__quote {
    font-weight: {{ section.settings.quote_font_weight }};
    font-size: {{ section.settings.quote_font_size }}px;
    color: {{ section.settings.quote_color }};
    line-height: 1.4;
    margin-bottom: {{ section.settings.quote_margin_bottom }}px;
    font-style: italic;
  }

  {{ sec_id }} .pc-testimonial-slide__text {
    font-size: {{ section.settings.text_font_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.8;
    margin-bottom: {{ section.settings.text_margin_bottom }}px;
  }

  {{ sec_id }} .pc-testimonial-slide__author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    font-size: {{ section.settings.author_font_size }}px;
    color: {{ section.settings.author_color }};
    font-weight: {{ section.settings.author_font_weight }};
  }

  {{ sec_id }} .pc-testimonial-slider__nav {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30px;
    gap: 20px;
  }

  {{ sec_id }} .pc-testimonial-slider__prev,
  {{ sec_id }} .pc-testimonial-slider__next {
    background: none;
    border: none;
    cursor: pointer;
    color: {{ section.settings.nav_color }};
    padding: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  {{ sec_id }} .pc-testimonial-slider__dots {
    display: flex;
    gap: 10px;
  }

  {{ sec_id }} .pc-testimonial-slider__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_color }};
    opacity: 0.3;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  {{ sec_id }} .pc-testimonial-slider__dot.active {
    opacity: 1;
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-testimonial-slider-{{ last_part }} {
      padding: {{ section.settings.section_padding_top_mobile }}px 0 {{ section.settings.section_padding_bottom_mobile }}px;
    }

    {{ sec_id }} .pc-testimonial-slider__title {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }

    {{ sec_id }} .pc-testimonial-slide__content {
      padding: 30px 20px;
    }

    {{ sec_id }} .pc-testimonial-slide__quote {
      font-size: {{ section.settings.quote_font_size_mobile }}px;
    }

    {{ sec_id }} .pc-testimonial-slide__text {
      font-size: {{ section.settings.text_font_size_mobile }}px;
    }

    {{ sec_id }} .pc-testimonial-slide__author {
      font-size: {{ section.settings.author_font_size_mobile }}px;
    }
  }
</style>

<script>
  class PCTestimonialSlider{{ last_part | capitalize }} extends HTMLElement {
    constructor() {
      super();
      this.slider = this.querySelector('.pc-testimonial-slider__track');
      this.slides = this.querySelectorAll('.pc-testimonial-slide');
      this.prevBtn = this.querySelector('.pc-testimonial-slider__prev');
      this.nextBtn = this.querySelector('.pc-testimonial-slider__next');
      this.dotsContainer = this.querySelector('.pc-testimonial-slider__dots');
      this.currentIndex = 0;
      
      this.createDots();
      this.updateSlider();
      
      this.prevBtn.addEventListener('click', () => this.prevSlide());
      this.nextBtn.addEventListener('click', () => this.nextSlide());
      
      if (this.slides.length <= 1) {
        this.prevBtn.style.display = 'none';
        this.nextBtn.style.display = 'none';
        this.dotsContainer.style.display = 'none';
      }
    }
    
    createDots() {
      this.slides.forEach((_, index) => {
        const dot = document.createElement('div');
        dot.classList.add('pc-testimonial-slider__dot');
        if (index === 0) dot.classList.add('active');
        dot.addEventListener('click', () => this.goToSlide(index));
        this.dotsContainer.appendChild(dot);
      });
    }
    
    updateSlider() {
      this.slider.style.transform = `translateX(-${this.currentIndex * 100}%)`;
      
      // Update dots
      const dots = this.querySelectorAll('.pc-testimonial-slider__dot');
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === this.currentIndex);
      });
    }
    
    prevSlide() {
      this.currentIndex = (this.currentIndex - 1 + this.slides.length) % this.slides.length;
      this.updateSlider();
    }
    
    nextSlide() {
      this.currentIndex = (this.currentIndex + 1) % this.slides.length;
      this.updateSlider();
    }
    
    goToSlide(index) {
      this.currentIndex = index;
      this.updateSlider();
    }
  }
  
  customElements.define('pc-testimonial-slider-{{ last_part }}', PCTestimonialSlider{{ last_part | capitalize }});
</script>

