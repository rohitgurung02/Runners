{%- assign sec_id = '#shopify-section-' | append: section.id -%}

<style>
  {{ sec_id }} .pc-filter-section {
    position: relative;
    z-index: 1;
    padding-top: {{ section.settings.desktop_padding_top }}px;
    padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  {{ sec_id }} .pc-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 15px;
  }

  {{ sec_id }} .pc-text-center {
    text-align: center;
    margin-bottom: {{ section.settings.title_bottom_margin }}px;
  }

  {{ sec_id }} .pc-title {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    font-family: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_bottom_margin }}px;
    line-height: 1.2;
  }

  {{ sec_id }} .pc-subtitle {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    max-width: {{ section.settings.subheading_max_width }}px;
    margin: 0 auto;
    line-height: 1.4;
  }

  {{ sec_id }} .pc-filter {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 8px;
    max-width: 1050px;
    margin: 0 auto {{ section.settings.filter_bottom_margin }}px;
  }

  {{ sec_id }} .pc-btn {
    padding: {{ section.settings.filter_vertical_padding }}px {{ section.settings.filter_horizontal_padding }}px;
    display: inline-block;
    color: {{ section.settings.filter_text_color }};
    text-decoration: {{ section.settings.button_text_decoration }};
    background: {{ section.settings.filter_bg_color }};
    border: 1px solid {{ section.settings.filter_border_color }};
    transition: all 0.4s;
    border-radius: {{ section.settings.filter_border_radius }}px;
    font-size: {{ section.settings.filter_font_size }}px;
    font-weight: {{ section.settings.filter_font_weight }};
    white-space: nowrap;
  }

  {{ sec_id }} .pc-btn:hover,
  {{ sec_id }} .pc-btn-active {
    background: {{ section.settings.filter_active_bg_color }};
    color: {{ section.settings.filter_active_text_color }};
    transform: translateY(3px);
  }

  {{ sec_id }} .pc-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax({{ section.settings.image_width }}px, 1fr));
    gap: {{ section.settings.image_margin }}px;
    max-width: 1320px;
    margin: {{ section.settings.gallery_top_margin }}px auto;
    padding: 0 15px;
  }

  {{ sec_id }} .pc-gallery a {
    display: flex;
    justify-content: center;
  }

  {{ sec_id }} .pc-gallery-img {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    object-fit: cover;
    transition: transform 0.3s ease-in-out;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
  }

  {{ sec_id }} .pc-gallery-img:hover {
    transform: scale(1.05);
  }

  /* Mobile-specific styles */
  @media (max-width: 991px) {
    {{ sec_id }} .pc-filter-section {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
    
    {{ sec_id }} .pc-title {
      font-size: {{ section.settings.mobile_heading_size }}px;
    }
    
    {{ sec_id }} .pc-filter {
      gap: 6px;
    }
    
    {{ sec_id }} .pc-btn {
      padding: {{ section.settings.filter_vertical_padding | times: 0.8 }}px {{ section.settings.filter_horizontal_padding | times: 0.8 }}px;
      font-size: {{ section.settings.filter_font_size | times: 0.9 }}px;
    }
    
    {{ sec_id }} .pc-gallery {
      grid-template-columns: repeat(auto-fill, minmax({{ section.settings.mobile_image_width }}px, 1fr));
    }
    
    {{ sec_id }} .pc-gallery-img {
      height: {{ section.settings.mobile_image_height }}px;
    }
  }

  @media (max-width: 540px) {
    {{ sec_id }} .pc-gallery {
      grid-template-columns: repeat(auto-fill, minmax({{ section.settings.small_mobile_image_width }}px, 1fr));
      gap: {{ section.settings.image_margin | divided_by: 2 }}px;
    }
    
    {{ sec_id }} .pc-gallery-img {
      height: {{ section.settings.small_mobile_image_height }}px;
    }
    
    {{ sec_id }} .pc-filter {
      gap: 4px;
    }
    
    {{ sec_id }} .pc-btn {
      padding: {{ section.settings.filter_vertical_padding | times: 0.6 }}px {{ section.settings.filter_horizontal_padding | times: 0.6 }}px;
      font-size: {{ section.settings.filter_font_size | times: 0.8 }}px;
    }
  }

  /* Modal styles */
  {{ sec_id }} .pc-sets .pc-hide,
  {{ sec_id }} .pc-sets .pc-pophide {
    display: none;
  }

  {{ sec_id }} .pc-closeBtn {
    position: absolute;
    font-size: 16px;
    font-weight: 500;
    right: 15px;
    top: 15px;
    color: white;
    transition: 0.5s linear;
    padding: 6px 20px;
    border-radius: 20px;
    background: red;
    outline-offset: -4px;
    outline: 1px solid #fff;
    z-index: 10;
  }

  {{ sec_id }} .pc-closeBtn:hover {
    cursor: pointer;
    background: white;
    color: black;
    outline: 1px solid #000;
  }

  {{ sec_id }} .pc-openDiv {
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.9);
    position: fixed;
    top: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    left: 0;
    z-index: 9999;
  }

  {{ sec_id }} .pc-imgPreview {
    width: 90%;
    max-width: 800px;
    max-height: 70vh;
    object-fit: contain;
  }

  {{ sec_id }} .pc-buttonsSection {
    display: flex;
    gap: 10px;
    margin-top: 15px;
  }

  {{ sec_id }} .pc-prevButton,
  {{ sec_id }} .pc-nextButton {
    transition: all 0.3s;
    padding: 8px 20px;
    font-size: 16px;
    border: none;
    color: white;
    background: rgba(0,0,0,0.5);
    border-radius: 8px;
    border: 1px solid white;
  }

  {{ sec_id }} .pc-prevButton:hover,
  {{ sec_id }} .pc-nextButton:hover {
    background: #fff;
    color: black;
  }

  @media (max-width: 767px) {
    {{ sec_id }} .pc-imgPreview {
      width: 95%;
      max-height: 60vh;
    }
    
    {{ sec_id }} .pc-closeBtn {
      font-size: 14px;
      padding: 5px 15px;
    }
    
    {{ sec_id }} .pc-prevButton,
    {{ sec_id }} .pc-nextButton {
      padding: 6px 15px;
      font-size: 14px;
    }
  }
</style>

<div class="pc-filter-section">
  <div class="pc-container">
    <!-- Section Title Start -->
    <div class="pc-text-center">
      {%- if section.settings.heading != blank -%}
        <h2 class="pc-title">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <p class="pc-subtitle">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>

    <div class="pc-filter">
      <button class="pc-btn pc-btn-active" data-filter="all">ALL</button>
      {%- for block in section.blocks -%}
        {%- if block.type == 'filter' -%}
          <button class="pc-btn" data-filter="{{ block.settings.filter_tag | handleize }}">{{ block.settings.filter_tag }}</button>
        {%- endif -%}
      {%- endfor -%}
    </div>

    <div class="pc-gallery pc-sets">
      {%- for block in section.blocks -%}
        {%- if block.type == 'gallery_item' -%}
          <a class="pc-gallery-item pc-all pc-{{ block.settings.filter_tag | handleize }}" data-category="{{ block.settings.filter_tag | handleize }}">
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 800 | image_tag: 
                loading: 'lazy', 
                class: 'pc-gallery-img',
                alt: block.settings.image.alt | escape
              }}
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'pc-gallery-img' }}
            {%- endif -%}
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const filterButtons = document.querySelectorAll('{{ sec_id }} .pc-btn');
  const galleryItems = document.querySelectorAll('{{ sec_id }} .pc-gallery-item');
  
  // Filter functionality
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filterValue = button.dataset.filter;
      
      // Update active button
      filterButtons.forEach(btn => btn.classList.remove('pc-btn-active'));
      button.classList.add('pc-btn-active');
      
      // Filter items
      galleryItems.forEach(item => {
        if (filterValue === 'all' || item.dataset.category === filterValue) {
          item.style.display = 'flex';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
  
  // Lightbox functionality
  const images = document.querySelectorAll('{{ sec_id }} .pc-gallery-img');
  images.forEach((img, index) => {
    img.addEventListener('click', (e) => {
      e.preventDefault();
      
      const lightbox = document.createElement('div');
      lightbox.className = 'pc-openDiv';
      lightbox.innerHTML = `
        <img class="pc-imgPreview" src="${img.src}" alt="${img.alt}">
        <div class="pc-buttonsSection">
          <button class="pc-prevButton">Previous</button>
          <button class="pc-nextButton">Next</button>
        </div>
        <button class="pc-closeBtn">Close</button>
      `;
      
      document.body.appendChild(lightbox);
      document.body.style.overflow = 'hidden';
      
      // Close button
      const closeBtn = lightbox.querySelector('.pc-closeBtn');
      closeBtn.addEventListener('click', () => {
        lightbox.remove();
        document.body.style.overflow = '';
      });
      
      // Navigation buttons
      let currentIndex = index;
      const prevBtn = lightbox.querySelector('.pc-prevButton');
      const nextBtn = lightbox.querySelector('.pc-nextButton');
      const previewImg = lightbox.querySelector('.pc-imgPreview');
      
      prevBtn.addEventListener('click', () => {
        currentIndex = (currentIndex - 1 + images.length) % images.length;
        previewImg.src = images[currentIndex].src;
        previewImg.alt = images[currentIndex].alt;
      });
      
      nextBtn.addEventListener('click', () => {
        currentIndex = (currentIndex + 1) % images.length;
        previewImg.src = images[currentIndex].src;
        previewImg.alt = images[currentIndex].alt;
      });
      
      // Keyboard navigation
      document.addEventListener('keydown', function handleKeyPress(e) {
        if (e.key === 'ArrowLeft') {
          prevBtn.click();
        } else if (e.key === 'ArrowRight') {
          nextBtn.click();
        } else if (e.key === 'Escape') {
          closeBtn.click();
        }
      });
    });
  });
});
</script>

