{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<style>
  {{ sec_id }} .pc-card-carousel-{{ last_part }} {
    position: relative;
    display: flex;
  }
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-card-{{ last_part }} {
    display: inline-flex;
    position: absolute;
    overflow: hidden;
    transition: 0.4s all ease-in-out;
    opacity: 0;
    z-index: 0;
    border: none;
    box-shadow: {% if section.settings.enable_shadow %}var(--bs-box-shadow-lg){% else %}none{% endif %};
  }
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-card-{{ last_part }} .pc-card-body-{{ last_part }} {
    padding: calc(var(--pc-spacer-{{ last_part }}) * 3);
    position: relative;
    display: block;
  }
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-card-{{ last_part }} .pc-card-body-{{ last_part }} .pc-card-title-{{ last_part }},
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-card-{{ last_part }} .pc-card-body-{{ last_part }} .pc-card-text-{{ last_part }},
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-card-{{ last_part }} .pc-card-body-{{ last_part }} a {
    transform: translateY(25%);
    opacity: 1;
    visibility: hidden;
    transition: 0.4s all ease-in-out;
  }
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-card-{{ last_part }} img {
    padding: calc(var(--pc-spacer-{{ last_part }}) / 1.5);
    object-fit: cover;
    transition: 0.4s all ease-in-out;
    transform: translateX(100%);
  }
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-active-{{ last_part }} {
    position: relative;
    opacity: 1;
    z-index: 1;
  }
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-active-{{ last_part }} img {
    transform: translateX(0);
  }
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-active-{{ last_part }} .pc-card-body-{{ last_part }} .pc-card-title-{{ last_part }},
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-active-{{ last_part }} .pc-card-body-{{ last_part }} .pc-card-text-{{ last_part }},
  {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-active-{{ last_part }} .pc-card-body-{{ last_part }} a {
    transform: translateY(0);
    opacity: 1;
    transition: 0.4s all ease-in-out;
    visibility: visible;
  }
  {{ sec_id }} .pc-card-carousel-nav-{{ last_part }} {
    position: absolute;
    display: flex;
    justify-content: center;
    z-index: 2;
    bottom: 0;
  }
  {{ sec_id }} .pc-card-carousel-nav-{{ last_part }} .pc-carousel-arrow-{{ last_part }} {
    display: flex;
    justify-content: center;
    position: relative;
    cursor: pointer;
    padding: calc(var(--pc-spacer-{{ last_part }}) / 2) var(--pc-spacer-{{ last_part }});
    fill: {{ section.settings.arrow_color }};
    background-color: {{ section.settings.arrow_bg }};
    width: 25%;
  }
  {{ sec_id }} .pc-card-carousel-nav-{{ last_part }} .pc-carousel-arrow-{{ last_part }}:hover {
    background-color: {{ section.settings.arrow_bg_hover }};
  }
  {{ sec_id }} .pc-card-carousel-nav-{{ last_part }} .pc-carousel-arrow-{{ last_part }}:last-child {
    margin-left: 1px;
  }
  {{ sec_id }} .pc-card-title-{{ last_part }} {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
  }
  {{ sec_id }} .pc-card-text-{{ last_part }} {
    font-size: {{ section.settings.text_font_size }}px;
    color: {{ section.settings.text_color }};
    margin-bottom: {{ section.settings.text_margin_bottom }}px;
  }
  {{ sec_id }} .pc-card-body-{{ last_part }} {
    background-color: {{ section.settings.card_bg }};
  }
  {{ sec_id }} .pc-container-{{ last_part }} {
    margin-top: {{ section.settings.container_margin_top }}px;
  }
  {{ sec_id }} .pc-row-{{ last_part }} {
    margin-left: -{{ section.settings.gutter }}px;
    margin-right: -{{ section.settings.gutter }}px;
  }
  {{ sec_id }} .pc-col-{{ last_part }} {
    padding-left: {{ section.settings.gutter }}px;
    padding-right: {{ section.settings.gutter }}px;
  }
  @media (min-width: 768px) {
    {{ sec_id }} .pc-card-carousel-{{ last_part }} .pc-card-{{ last_part }} img {
      object-fit: contain;
    }
  }
  @media (max-width: 767px) {
    {{ sec_id }} .pc-card-title-{{ last_part }} {
      font-size: {{ section.settings.mobile_title_font_size }}px;
    }
    {{ sec_id }} .pc-card-text-{{ last_part }} {
      font-size: {{ section.settings.mobile_text_font_size }}px;
    }
    {{ sec_id }} .pc-container-{{ last_part }} {
      margin-top: {{ section.settings.mobile_container_margin_top }}px;
    }
  }
</style>

<div class="pc-container-{{ last_part }} container">
  <div class="pc-row-{{ last_part }} row g-0">
    <div class="pc-col-{{ last_part }} col pc-card-carousel-{{ last_part }}">
      <div class="pc-card-carousel-nav-{{ last_part }} col-12 col-lg-4 g-2">
        <span id="pc-moveLeft-{{ last_part }}" class="pc-carousel-arrow-{{ last_part }}">
          <svg class="pc-carousel-icon-{{ last_part }}" width="24" height="24" viewBox="0 0 24 24">
            <path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"></path>
          </svg>
        </span>
        <span id="pc-moveRight-{{ last_part }}" class="pc-carousel-arrow-{{ last_part }}">
          <svg class="pc-carousel-icon-{{ last_part }}" width="24" height="24" viewBox="0 0 24 24">
            <path d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"></path>
          </svg>
        </span>
      </div>
      
      {% for block in section.blocks %}
        <div class="pc-card-{{ last_part }}{% if forloop.first %} pc-active-{{ last_part }}{% endif %}">
          <div class="row g-0">
            <div class="pc-col-{{ last_part }} col-lg-4 d-flex align-items-center">
              <div class="pc-card-body-{{ last_part }}">
                {% if block.settings.subtitle != blank %}
                  <h6 class="pc-card-subtitle-{{ last_part }} text-uppercase">{{ block.settings.subtitle }}</h6>
                {% endif %}
                {% if block.settings.title != blank %}
                  <h3 class="pc-card-title-{{ last_part }}">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.text != blank %}
                  <p class="pc-card-text-{{ last_part }}">{{ block.settings.text }}</p>
                {% endif %}
                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="pc-card-button-{{ last_part }} btn">{{ block.settings.button_label }}</a>
                {% endif %}
              </div>
            </div>
            <div class="pc-col-{{ last_part }} col-lg-8">
              {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: block.settings.image.width, height: block.settings.image.height | image_tag: loading: 'lazy', preload: true, alt: block.settings.image.alt, class: 'img-fluid rounded-end' }}
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'img-fluid rounded-end' }}
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ last_part }}';
    const items = document.querySelectorAll('{{ sec_id }} .pc-card-{{ last_part }}');
    let current = 0;
    const total = items.length;

    function setSlide(prev, next) {
      if (next >= total) next = 0;
      if (next < 0) next = total - 1;
      
      items[prev].classList.remove('pc-active-{{ last_part }}');
      items[next].classList.add('pc-active-{{ last_part }}');
      
      current = next;
    }

    document.getElementById('pc-moveRight-{{ last_part }}').addEventListener('click', function() {
      const prev = current;
      const next = current + 1;
      setSlide(prev, next);
    });

    document.getElementById('pc-moveLeft-{{ last_part }}').addEventListener('click', function() {
      const prev = current;
      const next = current - 1;
      setSlide(prev, next);
    });

    const cardCarousel = document.querySelector('{{ sec_id }} .pc-card-carousel-{{ last_part }}');
    let touchStartX = 0;
    let touchEndX = 0;

    cardCarousel.addEventListener('touchstart', function(event) {
      touchStartX = event.changedTouches[0].screenX;
    });

    cardCarousel.addEventListener('touchmove', function(event) {
      touchEndX = event.changedTouches[0].screenX;
    });

    cardCarousel.addEventListener('touchend', function() {
      if (touchEndX < touchStartX - 50) {
        const prev = current;
        const next = current + 1;
        setSlide(prev, next);
      }
      if (touchEndX > touchStartX + 50) {
        const prev = current;
        const next = current - 1;
        setSlide(prev, next);
      }
    });
  });
</script>

