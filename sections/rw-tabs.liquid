{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<style>
  {{ sec_id }} .pc-tabs-container-{{ last_part }} {
    width: {{ section.settings.container_width }}%;
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
  }

   {{ sec_id }} .pc-tabs-heading-{{ last_part }} {
    text-align: center;
    font-size: {{ section.settings.heading_font_size }}px;
    margin-top: {{ section.settings.heading_margin_top }}px;
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
    color: {{ section.settings.heading_color }};
    background-color: {{ section.settings.heading_background_color }};
    text-align: {{ section.settings.heading_alignment }};
  }

  {{ sec_id }} .pc-tabs-{{ last_part }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.container_height }}px;
    min-height: {{ section.settings.container_min_height }}px;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
    border-radius: {{ section.settings.border_radius }}px;
    {% if section.settings.shadow_enable %}
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    {% endif %}
    margin-top: {{ section.settings.desktop_margin_top }}px;
    margin-bottom: {{ section.settings.desktop_margin_bottom }}px;
    padding: {{ section.settings.desktop_padding_top }}px {{ section.settings.desktop_padding_right }}px {{ section.settings.desktop_padding_bottom }}px {{ section.settings.desktop_padding_left }}px;
  }

  {{ sec_id }} .pc-tab-links-{{ last_part }} {
    display: flex;
    justify-content: {{ section.settings.tab_links_justify }};
    border-bottom: 1px solid {{ section.settings.tab_border_color }};
    margin-bottom: {{ section.settings.tab_content_spacing }}px;
  }

  {{ sec_id }} .pc-tab-link-{{ last_part }} {
    background: none;
    border: none;
    font-size: {{ section.settings.tab_font_size }}px;
    font-weight: {{ section.settings.tab_font_weight }};
    padding: 15px 30px;
    color: {{ section.settings.tab_color }};
    cursor: pointer;
    position: relative;
    transition: color 0.3s ease;
  }

  {{ sec_id }} .pc-tab-link-{{ last_part }}.active,
  {{ sec_id }} .pc-tab-link-{{ last_part }}:hover {
    color: {{ section.settings.tab_active_color }};
  }

  {{ sec_id }} .pc-tab-link-{{ last_part }}::after {
    content: '';
    position: absolute;
    width: 0;
    height: 3px;
    bottom: -1px;
    left: 50%;
    background: {{ section.settings.tab_active_border_color }};
    transition: all 0.4s ease;
  }

  {{ sec_id }} .pc-tab-link-{{ last_part }}.active::after {
    width: 100%;
    left: 0;
  }

  {{ sec_id }} .pc-tab-content-{{ last_part }} {
    display: none;
    animation: pc-fadeInUp-{{ last_part }} 0.5s ease;
    height: calc(100% - 60px);
    overflow-y: auto;
  }

  {{ sec_id }} .pc-tab-content-{{ last_part }}.active {
    display: block;
  }

  @keyframes pc-fadeInUp-{{ last_part }} {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  {{ sec_id }} .pc-cta-btn-{{ last_part }} {
    display: inline-block;
    padding: 12px 25px;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    cursor: pointer;
    transition: background 0.4s ease;
    font-weight: 500;
    margin-top: 20px;
  }

  {{ sec_id }} .pc-cta-btn-{{ last_part }}:hover {
    background: {{ section.settings.button_hover_background }};
  }

  {{ sec_id }} .pc-contact-form-{{ last_part }} {
    display: flex;
    flex-direction: column;
  }

  {{ sec_id }} .pc-contact-form-{{ last_part }} label {
    margin-bottom: 5px;
    font-weight: 500;
  }

  {{ sec_id }} .pc-contact-form-{{ last_part }} input,
  {{ sec_id }} .pc-contact-form-{{ last_part }} textarea {
    padding: 12px 15px;
    margin-bottom: 15px;
    border: 1px solid {{ section.settings.input_border_color }};
    border-radius: 10px;
    transition: border 0.3s ease;
  }

  {{ sec_id }} .pc-contact-form-{{ last_part }} input:focus,
  {{ sec_id }} .pc-contact-form-{{ last_part }} textarea:focus {
    border-color: {{ section.settings.input_focus_border_color }};
    outline: none;
  }

  {{ sec_id }} .pc-faq-list-{{ last_part }} {
    padding: 0;
    list-style: none;
  }

  {{ sec_id }} .pc-faq-list-{{ last_part }} li {
    margin-bottom: 10px;
  }

  {{ sec_id }} .pc-faq-list-{{ last_part }} li strong {
    font-weight: 600;
  }


  {{ sec_id }} .pc-contact-form-{{ last_part }} input:focus,
    .pc-contact-form-{{ last_part }} textarea:focus {
      outline: none;
      box-shadow: none;
    }
  

  @media screen and (max-width: 768px) {
    {{ sec_id }} .pc-tabs-container-{{ last_part }} {
      width: {{ section.settings.mobile_container_width }}%;
    }

    {{ sec_id }} .pc-tabs-{{ last_part }} {
      height: auto;
      min-height: {{ section.settings.mobile_container_min_height }}px;
      margin-top: {{ section.settings.mobile_margin_top }}px;
      margin-bottom: {{ section.settings.mobile_margin_bottom }}px;
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
    }

    {{ sec_id }} .pc-tab-links-{{ last_part }} {
      flex-direction: column;
      align-items: center;
    }

    {{ sec_id }} .pc-tab-link-{{ last_part }} {
      text-align: center;
      width: 100%;
      padding: 15px 0;
      font-size: {{ section.settings.mobile_tab_font_size }}px;
    }

    {{ sec_id }} .pc-tab-content-{{ last_part }} {
      height: auto;
    }
  }
</style>

<div class="pc-tabs-container-{{ last_part }}">
   <h1 class="pc-tabs-heading-{{ last_part }}">{{ section.settings.heading }}</h1>
  <div class="pc-tabs-{{ last_part }}">
    <div class="pc-tab-links-{{ last_part }}">
      {% for block in section.blocks %}
        <button class="pc-tab-link-{{ last_part }} {% if forloop.first %}active{% endif %}" data-tab="pc-tab-{{ last_part }}-{{ forloop.index }}">
          {{ block.settings.tab_title }}
        </button>
      {% endfor %}
    </div>

    {% for block in section.blocks %}
      <div class="pc-tab-content-{{ last_part }} {% if forloop.first %}active{% endif %}" id="pc-tab-{{ last_part }}-{{ forloop.index }}">
        {% case block.type %}
          {% when 'overview' %}
            <h2>{{ block.settings.heading }}</h2>
            <p>{{ block.settings.content }}</p>
            {% if block.settings.button_label != blank %}
              <button class="pc-cta-btn-{{ last_part }}">{{ block.settings.button_label }}</button>
            {% endif %}
          
          {% when 'details' %}
            <h2>{{ block.settings.heading }}</h2>
            <ul class="pc-details-list-{{ last_part }}">
              {% for i in (1..5) %}
                {% assign detail_key = 'detail_' | append: i %}
                {% if block.settings[detail_key] != blank %}
                  <li>{{ block.settings[detail_key] }}</li>
                {% endif %}
              {% endfor %}
            </ul>
            {% if block.settings.button_label != blank %}
              <button class="pc-cta-btn-{{ last_part }}">{{ block.settings.button_label }}</button>
            {% endif %}
          
          {% when 'contact' %}
            <h2>{{ block.settings.heading }}</h2>
            <form class="pc-contact-form-{{ last_part }}">
              <label for="pc-name-{{ last_part }}">{{ block.settings.name_label }}</label>
              <input type="text" id="pc-name-{{ last_part }}" placeholder="{{ block.settings.name_placeholder }}">
              
              <label for="pc-email-{{ last_part }}">{{ block.settings.email_label }}</label>
              <input type="email" id="pc-email-{{ last_part }}" placeholder="{{ block.settings.email_placeholder }}">
              
              <label for="pc-message-{{ last_part }}">{{ block.settings.message_label }}</label>
              <textarea id="pc-message-{{ last_part }}" placeholder="{{ block.settings.message_placeholder }}"></textarea>

              <button type="submit" class="pc-cta-btn-{{ last_part }}">{{ block.settings.button_label }}</button>
            </form>
          
          {% when 'faq' %}
            <h2>{{ block.settings.heading }}</h2>
            <p>{{ block.settings.intro_text }}</p>
            <ul class="pc-faq-list-{{ last_part }}">
              {% for i in (1..6) %}
                {% assign question_key = 'question_' | append: i %}
                {% assign answer_key = 'answer_' | append: i %}
                {% if block.settings[question_key] != blank %}
                  <li><strong>Q:</strong> {{ block.settings[question_key] }}</li>
                  <li><strong>A:</strong> {{ block.settings[answer_key] }}</li>
                {% endif %}
              {% endfor %}
            </ul>
        {% endcase %}
      </div>
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabLinks = document.querySelectorAll('{{ sec_id }} .pc-tab-link-{{ last_part }}');
    const tabContents = document.querySelectorAll('{{ sec_id }} .pc-tab-content-{{ last_part }}');

    tabLinks.forEach(link => {
      link.addEventListener('click', () => {
        tabLinks.forEach(link => link.classList.remove('active'));
        link.classList.add('active');

        tabContents.forEach(content => content.classList.remove('active'));

        const targetTab = document.getElementById(link.dataset.tab);
        targetTab.classList.add('active');
      });
    });
  });
</script>

