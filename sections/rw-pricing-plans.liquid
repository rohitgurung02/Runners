<style>
  {{ sec_id }} .pc-section-heading {
    font-size: {{ section.settings.heading_size_mobile }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    color: {{ section.settings.heading_color }};
    text-transform: {{ section.settings.heading_text_transform }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
    line-height: {{ section.settings.heading_line_height }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
    text-align: {{ section.settings.heading_alignment }};
  }

  {{ sec_id }} .pc-popular-badge {
    font-size: {{ section.settings.badge_font_size_mobile }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    color: {{ section.settings.badge_text_color }};
    background-color: {{ section.settings.badge_bg_color }};
    padding: {{ section.settings.badge_padding_top }}px {{ section.settings.badge_padding_right }}px {{ section.settings.badge_padding_bottom }}px {{ section.settings.badge_padding_left }}px;
    border-radius: {{ section.settings.badge_border_radius }}px;
  }

  {% for block in section.blocks %}
    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-plan-subtitle {
      font-size: {{ block.settings.subtitle_font_size_mobile }}px;
      font-weight: {{ block.settings.subtitle_font_weight }};
      color: {{ block.settings.subtitle_color }};
      text-transform: {{ block.settings.subtitle_text_transform }};
      letter-spacing: {{ block.settings.subtitle_letter_spacing }}px;
      margin-bottom: {{ block.settings.subtitle_margin_bottom }}px;
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-plan-title {
      font-size: {{ block.settings.title_font_size_mobile }}px;
      font-weight: {{ block.settings.title_font_weight }};
      color: {{ block.settings.title_color }};
      text-transform: {{ block.settings.title_text_transform }};
      letter-spacing: {{ block.settings.title_letter_spacing }}px;
      margin-bottom: {{ block.settings.title_margin_bottom }}px;
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-price-number {
      font-size: {{ block.settings.price_font_size_mobile }}px;
      font-weight: {{ block.settings.price_font_weight }};
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-price-symbol {
      font-size: {{ block.settings.symbol_font_size }}px;
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-price-month {
      font-size: {{ block.settings.period_font_size }}px;
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-feature-text {
      font-size: {{ block.settings.feature_font_size_mobile }}px;
      font-weight: {{ block.settings.feature_font_weight }};
      color: {{ block.settings.feature_color }};
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-feature-icon {
      width: {{ block.settings.feature_icon_size }}px;
      height: {{ block.settings.feature_icon_size }}px;
      color: {{ block.settings.feature_icon_color }};
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-feature-item {
      margin-bottom: {{ block.settings.feature_spacing }}px;
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-plan-features {
      margin-bottom: {{ block.settings.features_margin_bottom }}px;
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-plan-button {
      font-size: {{ block.settings.button_font_size_mobile }}px;
      font-weight: {{ block.settings.button_font_weight }};
      color: {{ block.settings.button_text_color }};
      background-color: {{ block.settings.button_bg_color }};
      padding: {{ block.settings.button_padding_top }}px {{ block.settings.button_padding_right }}px {{ block.settings.button_padding_bottom }}px {{ block.settings.button_padding_left }}px;
      border-radius: {{ block.settings.button_border_radius }}px;
      letter-spacing: {{ block.settings.button_letter_spacing }}px;
    }

    {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-plan-button:hover {
      color: {{ block.settings.button_hover_text_color }};
      background-color: {{ block.settings.button_hover_bg_color }};
    }
  {% endfor %}

  @media screen and (min-width: 768px) {
    {{ sec_id }} .pc-section-heading {
      font-size: {{ section.settings.heading_size }}px;
    }

    {{ sec_id }} .pc-popular-badge {
      font-size: {{ section.settings.badge_font_size }}px;
    }

    {% for block in section.blocks %}
      {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-plan-subtitle {
        font-size: {{ block.settings.subtitle_font_size }}px;
      }

      {{ sec_id }} [data-block-id="{{ block.id }}"] .pc-plan-title {
