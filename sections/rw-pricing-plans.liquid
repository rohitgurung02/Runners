{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign plan_count = section.blocks.size
-%}

<style>
  {{ sec_id }} .pc-pricing-plans {
    padding: 3rem 0;
    width: 100%;
  }

  {{ sec_id }} .pc-pricing-container {
    max-width: 1024px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  {{ sec_id }} .pc-plans-grid {
    display: grid;
    gap: 3rem 1.25rem;
  }

  {{ sec_id }} .pc-plan-card {
    position: relative;
    background-color: {{ section.settings.card_bg_color }};
    padding: 2rem 1.5rem 2.5rem;
    border-radius: 1.75rem;
    box-shadow: {% if section.settings.card_shadow %}0 12px 24px hsla({{ section.settings.hue_color }}, 61%, 16%, 0.1){% else %}none{% endif %};
    transition: 0.4s;
    height: 100%;
  }

  {{ sec_id }} .pc-plan-card:hover {
    box-shadow: {% if section.settings.card_shadow %}0 16px 24px hsla({{ section.settings.hue_color }}, 61%, 16%, 0.15){% else %}none{% endif %};
  }

  {{ sec_id }} .pc-plan-header-img {
    width: 30px;
    height: 30px;
  }

  {{ sec_id }} .pc-plan-header-circle {
    width: 40px;
    height: 40px;
    background-color: hsl({{ section.settings.hue_color }}, 14%, 96%);
    border-radius: 50%;
    margin-bottom: 1rem;
    display: grid;
    place-items: center;
  }

  {{ sec_id }} .pc-plan-subtitle {
    display: block;
    font-size: 0.813rem;
    color: hsl({{ section.settings.hue_color }}, 12%, 65%);
    text-transform: uppercase;
    margin-bottom: 0.25rem;
    font-weight: {{ section.settings.subtitle_font_weight }};
  }

  {{ sec_id }} .pc-plan-title {
    font-size: 1.75rem;
    color: hsl({{ section.settings.hue_color }}, 12%, 15%);
    margin-bottom: 1rem;
    font-weight: {{ section.settings.title_font_weight }};
  }

  {{ sec_id }} .pc-plan-price {
    position: absolute;
    background: linear-gradient(157deg, hsl({{ section.settings.hue_color }}, 96%, 69%) -12%, hsl({{ section.settings.hue_color }}, 96%, 54%) 109%);
    width: 60px;
    height: 88px;
    right: 1.5rem;
    top: -1rem;
    padding-top: 1.25rem;
    text-align: center;
  }

  {{ sec_id }} .pc-price-number {
    font-family: inherit;
  }

  {{ sec_id }} .pc-price-symbol {
    font-size: 0.75rem;
  }

  {{ sec_id }} .pc-price-number {
    font-size: 1.25rem;
  }

  {{ sec_id }} .pc-price-month {
    display: block;
    font-size: 0.625rem;
  }

  {{ sec_id }} .pc-price-number,
  {{ sec_id }} .pc-price-month {
    color: #FFF;
  }

  {{ sec_id }} .pc-plan-price::after,
  {{ sec_id }} .pc-plan-price::before {
    content: '';
    position: absolute;
  }

  {{ sec_id }} .pc-plan-price::after {
    width: 100%;
    height: 14px;
    background-color: #FFF;
    left: 0;
    bottom: 0;
    clip-path: polygon(0 100%, 50% 0, 100% 100%);
  }

  {{ sec_id }} .pc-plan-price::before {
    width: 14px;
    height: 16px;
    background-color: hsl({{ section.settings.hue_color }}, 96%, 37%);
    top: 0;
    left: -14px;
    clip-path: polygon(0 100%, 100% 0, 100% 100%);
  }

  {{ sec_id }} .pc-plan-features {
    display: grid;
    row-gap: 0.5rem;
    margin-bottom: 2rem;
  }

  {{ sec_id }} .pc-feature-item {
    display: flex;
    align-items: center;
  }

  {{ sec_id }} .pc-feature-icon {
    width: 24px;
    height: 24px;
    margin-right: 0.5rem;
    color: hsl({{ section.settings.hue_color }}, 96%, 54%);
  }

  {{ sec_id }} .pc-feature-text {
    font-size: 0.938rem;
    color: hsl({{ section.settings.hue_color }}, 12%, 35%);
  }

  {{ sec_id }} .pc-plan-button {
    padding: 1.25rem;
    border: none;
    font-size: 0.938rem;
    border-radius: 0.5rem;
    background: linear-gradient(157deg, hsl({{ section.settings.hue_color }}, 96%, 69%) -12%, hsl({{ section.settings.hue_color }}, 96%, 54%) 109%);
    color: #FFF;
    cursor: pointer;
    transition: 0.4s;
    width: 100%;
    font-weight: {{ section.settings.button_font_weight }};
  }

  {{ sec_id }} .pc-plan-button:hover {
    box-shadow: 0 12px 24px hsla({{ section.settings.hue_color }}, 97%, 54%, 0.2);
  }

  {{ sec_id }} .pc-popular-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.badge_text_color }};
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: bold;
  }

  @media screen and (max-width: 320px) {
    {{ sec_id }} .pc-pricing-container {
      padding: 0 1rem;
    }
    {{ sec_id }} .pc-plan-card {
      padding: 2rem 1.25rem;
      border-radius: 1rem;
    }
  }

  @media screen and (min-width: 568px) {
    {{ sec_id }} .pc-plans-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 968px) {
    {{ sec_id }} .pc-plans-grid {
      grid-template-columns: repeat({{ plan_count }}, 1fr);
    }
    {{ sec_id }} .pc-plan-header-circle {
      margin-bottom: 1.25rem;
    }
    {{ sec_id }} .pc-plan-subtitle {
      font-size: 0.875rem;
    }
  }
</style>

<section class="pc-pricing-plans" style="background-color: {{ section.settings.bg_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="pc-pricing-container">
    {% if section.settings.heading != blank %}
      <h2 class="pc-section-heading" style="text-align: {{ section.settings.heading_alignment }}; font-size: {{ section.settings.heading_size }}px; color: {{ section.settings.heading_color }}; margin-bottom: {{ section.settings.heading_spacing }}px;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="pc-plans-grid">
      {% for block in section.blocks %}
        <div class="pc-plan-card" {{ block.shopify_attributes }}>
          {% if block.settings.badge_text != blank %}
            <div class="pc-popular-badge">{{ block.settings.badge_text }}</div>
          {% endif %}

          <div class="pc-plan-price">
            <div class="pc-price-number">
              <span class="pc-price-symbol">{{ block.settings.currency_symbol }}</span>{{ block.settings.price }}
            </div>
            <span class="pc-price-month">{{ block.settings.billing_period }}</span>
          </div>

          <header class="pc-plan-header">
            <div class="pc-plan-header-circle">
              {%- if block.settings.icon != blank -%}
                {{ block.settings.icon | image_url: width: 30 | image_tag: class: 'pc-plan-header-img', loading: 'lazy' }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'pc-plan-header-img' }}
              {%- endif -%}
            </div>

            {% if block.settings.subtitle != blank %}
              <span class="pc-plan-subtitle">{{ block.settings.subtitle }}</span>
            {% endif %}
            <h3 class="pc-plan-title">{{ block.settings.title }}</h3>
          </header>

          <ul class="pc-plan-features">
            {% for i in (1..5) %}
              {% assign feature_text = 'feature_' | append: i | append: '_text' %}
              {% if block.settings[feature_text] != blank %}
                <li class="pc-feature-item">
                  <svg class="pc-feature-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  <span class="pc-feature-text">{{ block.settings[feature_text] }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>

          <button class="pc-plan-button" type="button">{{ block.settings.button_text }}</button>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

