{% style %}
  :root {
    --hue-color: 214;
    --first-color: {{ section.settings.primary_color }};
    --first-color-light: {{ section.settings.primary_color_light }};
    --first-color-alt: {{ section.settings.primary_color_alt }};
    --first-color-lighter: hsl(var(--hue-color), 14%, 96%);
    --title-color: {{ section.settings.title_color }};
    --text-color: {{ section.settings.text_color }};
    --text-color-light: hsl(var(--hue-color), 12%, 65%);
    --white-color: #FFF;
    --body-color: {{ section.settings.body_color }};
    --container-color: {{ section.settings.container_color }};
    
    --body-font: 'Lato', sans-serif;
    --pricing-font: 'Rubik', sans-serif;
    --biggest-font-size: 1.75rem;
    --normal-font-size: .938rem;
    --h2-font-size: 1.25rem;
    --small-font-size: .813rem;
    --smaller-font-size: .75rem;
    --tiny-font-size: .625rem;
    
    --mb-0-25: .25rem;
    --mb-0-5: .5rem;
    --mb-1: 1rem;
    --mb-1-25: 1.25rem;
    --mb-1-5: 1.5rem;
    --mb-2: 2rem;
  }

  .pricing-plans * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  .pricing-plans {
    font-family: var(--body-font);
    font-size: var(--normal-font-size);
    background-color: var(--body-color);
    color: var(--text-color);
    padding: 3rem 0;
  }

  .pricing-plans ul {
    list-style: none;
  }

  .pricing-plans img {
    max-width: 100%;
    height: auto;
  }

  .pricing-plans__container {
    max-width: 1024px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 1.5rem;
  }

  .pricing-plans__grid {
    display: grid;
    gap: 2rem;
  }

  .pricing-plan {
    position: relative;
    background-color: var(--container-color);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .pricing-plan__highlight {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--first-color);
    color: white;
    padding: 0.25rem 1rem;
    border-radius: 1rem;
    font-size: var(--smaller-font-size);
    font-weight: bold;
    text-transform: uppercase;
  }

  .pricing-plan__title {
    font-size: var(--h2-font-size);
    color: var(--title-color);
    margin-bottom: var(--mb-1);
    text-align: center;
  }

  .pricing-plan__features {
    margin: 2rem 0;
    padding: 0;
  }

  .pricing-plan__feature {
    margin-bottom: 0.75rem;
    padding: 0;
    line-height: 1.5;
  }

  .pricing-plan__feature:last-child {
    margin-bottom: 0;
  }

  .pricing-plan__button {
    display: block;
    width: 100%;
    padding: 0.75rem;
    border: none;
    font-size: var(--normal-font-size);
    border-radius: 0.5rem;
    background-color: var(--first-color);
    color: var(--white-color);
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    font-weight: bold;
  }

  .pricing-plan__button:hover {
    background-color: var(--first-color-alt);
  }

  @media screen and (min-width: 768px) {
    .pricing-plans__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
{% endstyle %}

<div class="pricing-plans">
  <div class="pricing-plans__container">
    {% if section.settings.section_title != blank %}
      <h2 class="pricing-plans__title">{{ section.settings.section_title }}</h2>
    {% endif %}
    
    <div class="pricing-plans__grid">
      {% for block in section.blocks %}
        <div class="pricing-plan" {{ block.shopify_attributes }}>
          {% if block.settings.highlight_text != blank %}
            <div class="pricing-plan__highlight">{{ block.settings.highlight_text }}</div>
          {% endif %}
          
          <h3 class="pricing-plan__title">{{ block.settings.title }}</h3>
          
          <ul class="pricing-plan__features">
            {% assign features = block.settings.features | strip_html | split: '<p>' %}
            {% for feature in features %}
              {% if feature != '' %}
                <li class="pricing-plan__feature">
                  â€¢ {{ feature | strip | replace: '</p>', '' }}
                </li>
              {% endif %}
            {% endfor %}
          </ul>
          
          {% if block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="pricing-plan__button">
              {{ block.settings.button_text }}
            </a>
          {% else %}
            <button class="pricing-plan__button">
              {{ block.settings.button_text }}
            </button>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>