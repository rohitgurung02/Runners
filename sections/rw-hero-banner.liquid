{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<pc-hero-banner-{{last_part}}>
  <div class="pc-hero-banner">
    <div class="pc-hero-banner__content">
      <h1 class="pc-hero-banner__title">{{ section.settings.title }}</h1>
      <p class="pc-hero-banner__subtitle">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.button_link }}" class="pc-hero-banner__button">{{ section.settings.button_text }}</a>
    </div>
    <div class="pc-hero-banner__secondary">
      <div class="pc-hero-banner__donation">
        <span class="pc-hero-banner__donation-label">{{ section.settings.donation_label }}</span>
        <h3 class="pc-hero-banner__donation-title">{{ section.settings.donation_title }}</h3>
        <span class="pc-hero-banner__donation-author">{{ section.settings.donation_author }}</span>
      </div>
      <div class="pc-hero-banner__brand">
        <span class="pc-hero-banner__brand-text">{{ section.settings.brand_text }}</span>
      </div>
    </div>
  </div>
</pc-hero-banner-{{last_part}}>

<style>
  {{ sec_id }} .pc-hero-banner {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.gap }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    background-color: {{ section.settings.background_color }};
  }

  {{ sec_id }} .pc-hero-banner__content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap }}px;
    max-width: {{ section.settings.content_max_width }}px;
  }

  {{ sec_id }} .pc-hero-banner__title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  {{ sec_id }} .pc-hero-banner__subtitle {
    font-size: {{ section.settings.subtitle_font_size }}px;
    font-weight: {{ section.settings.subtitle_font_weight }};
    color: {{ section.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  {{ sec_id }} .pc-hero-banner__button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    margin-top: {{ section.settings.button_margin_top }}px;
    max-width: max-content;
    {% if section.settings.button_shadow %}
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    {% endif %}
  }

  {{ sec_id }} .pc-hero-banner__secondary {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.secondary_gap }}px;
    margin-top: {{ section.settings.secondary_margin_top }}px;
  }

  {{ sec_id }} .pc-hero-banner__donation {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.donation_gap }}px;
  }

  {{ sec_id }} .pc-hero-banner__donation-label {
    font-size: {{ section.settings.donation_label_font_size }}px;
    font-weight: {{ section.settings.donation_label_font_weight }};
    color: {{ section.settings.donation_label_color }};
  }

  {{ sec_id }} .pc-hero-banner__donation-title {
    font-size: {{ section.settings.donation_title_font_size }}px;
    font-weight: {{ section.settings.donation_title_font_weight }};
    color: {{ section.settings.donation_title_color }};
    margin: 0;
  }

  {{ sec_id }} .pc-hero-banner__donation-author {
    font-size: {{ section.settings.donation_author_font_size }}px;
    font-weight: {{ section.settings.donation_author_font_weight }};
    color: {{ section.settings.donation_author_color }};
  }

  {{ sec_id }} .pc-hero-banner__brand-text {
    font-size: {{ section.settings.brand_text_font_size }}px;
    font-weight: {{ section.settings.brand_text_font_weight }};
    color: {{ section.settings.brand_text_color }};
  }

  @media (max-width: 767px) {
    {{ sec_id }} .pc-hero-banner {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
      gap: {{ section.settings.mobile_gap }}px;
    }

    {{ sec_id }} .pc-hero-banner__title {
      font-size: {{ section.settings.mobile_title_font_size }}px;
    }

    {{ sec_id }} .pc-hero-banner__subtitle {
      font-size: {{ section.settings.mobile_subtitle_font_size }}px;
    }

    {{ sec_id }} .pc-hero-banner__button {
      font-size: {{ section.settings.mobile_button_font_size }}px;
      padding: {{ section.settings.mobile_button_padding_vertical }}px {{ section.settings.mobile_button_padding_horizontal }}px;
    }

    {{ sec_id }} .pc-hero-banner__secondary {
      gap: {{ section.settings.mobile_secondary_gap }}px;
      margin-top: {{ section.settings.mobile_secondary_margin_top }}px;
    }

    {{ sec_id }} .pc-hero-banner__donation-label {
      font-size: {{ section.settings.mobile_donation_label_font_size }}px;
    }

    {{ sec_id }} .pc-hero-banner__donation-title {
