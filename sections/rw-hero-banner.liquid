{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<div class="pc-hero-{{ last_part }}">
  <div class="pc-hero__container-{{ last_part }}">
    <div class="pc-hero__content-{{ last_part }}">
      <h1 class="pc-hero__title-{{ last_part }}">{{ section.settings.title }}</h1>
      <h2 class="pc-hero__subtitle-{{ last_part }}">{{ section.settings.subtitle }}</h2>
      <p class="pc-hero__description-{{ last_part }}">{{ section.settings.description }}</p>
      <div class="pc-hero__buttons-{{ last_part }}">
        <a href="{{ section.settings.button1_link }}" class="pc-hero__button-primary-{{ last_part }}">{{ section.settings.button1_text }}</a>
        <a href="{{ section.settings.button2_link }}" class="pc-hero__button-secondary-{{ last_part }}">{{ section.settings.button2_text }}</a>
      </div>
    </div>
    {% if section.settings.image != blank %}
    <div class="pc-hero__image-wrapper-{{ last_part }}">
      {{- section.settings.image
        | image_url: width: section.settings.image.width, height: section.settings.image.height
        | image_tag: loading: 'lazy', preload: true, alt: section.settings.image.alt, class: 'pc-hero_image'
      -}}
    </div>
    {% else %}
    <div class="pc-hero__image-wrapper-{{ last_part }}">
      {{ 'product-1' | placeholder_svg_tag: 'pc-hero_image' }}
    </div>
    {% endif %}
  </div>
</div>

<style>
  {{ sec_id }} .pc-hero-{{ last_part }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.desktop_padding_top }}px;
    padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
  }

  {{ sec_id }} .pc-hero__container-{{ last_part }} {
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 40px;
    padding: 0 20px;
  }

  {{ sec_id }} .pc-hero__content-{{ last_part }} {
    flex: 1;
  }

  {{ sec_id }} .pc-hero__title-{{ last_part }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: 20px;
    line-height: 1.2;
  }

  {{ sec_id }} .pc-hero__subtitle-{{ last_part }} {
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: {{ section.settings.subtitle_weight }};
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 15px;
    line-height: 1.3;
  }

  {{ sec_id }} .pc-hero__description-{{ last_part }} {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    margin-bottom: 30px;
    line-height: 1.5;
    max-width: 600px;
  }

  {{ sec_id }} .pc-hero__buttons-{{ last_part }} {
    display: flex;
    gap: 15px;
    margin-top: 30px;
  }

  {{ sec_id }} .pc-hero__button-primary-{{ last_part }} {
    background-color: {{ section.settings.button1_bg_color }};
    color: {{ section.settings.button1_text_color }};
    padding: 12px 24px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
  }

  {{ sec_id }} .pc-hero__button-secondary-{{ last_part }} {
    background-color: {{ section.settings.button2_bg_color }};
    color: {{ section.settings.button2_text_color }};
    padding: 12px 24px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
    border: 1px solid {{ section.settings.button2_border_color }};
  }

  {{ sec_id }} .pc-hero__image-wrapper-{{ last_part }} {
    flex: 1;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: {% if section.settings.image_shadow %}0 4px 20px rgba(0,0,0,0.1){% else %}none{% endif %};
  }

  {{ sec_id }} .pc-hero_image {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-hero-{{ last_part }} {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }

    {{ sec_id }} .pc-hero__container-{{ last_part }} {
      flex-direction: column;
      gap: 30px;
    }

    {{ sec_id }} .pc-hero__title-{{ last_part }} {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    {{ sec_id }} .pc-hero__subtitle-{{ last_part }} {
      font-size: {{ section.settings.mobile_subtitle_size }}px;
    }

    {{ sec_id }} .pc-hero__description-{{ last_part }} {
      font-size: {{ section.settings.mobile_description_size }}px;
    }

    {{ sec_id }} .pc-hero__buttons-{{ last_part }} {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>

