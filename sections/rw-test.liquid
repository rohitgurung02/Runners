      "id": "primary_color",
      "label": "Primary Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#2e2d2d"
    },
    {
      "type": "color",
      "id": "frost_color",
      "label": "Frosted Color",
