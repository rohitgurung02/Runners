{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<style>
  {{ sec_id }} .pc-organic-slider-{{ last_part }} {
    font-family: 'Helvetica Neue', Arial, sans-serif;
    padding: 50px 0;
    background-color: #f9f9f9;
  }

  {{ sec_id }} .pc-slider-container-{{ last_part }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  {{ sec_id }} .pc-section-header-{{ last_part }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  {{ sec_id }} .pc-section-title-{{ last_part }} {
    text-align: left;
  }

  {{ sec_id }} .pc-section-title-{{ last_part }} h2 {
    font-size: 28px;
    font-weight: 700;
    letter-spacing: 1px;
    color: #333;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  {{ sec_id }} .pc-section-divider-{{ last_part }} {
    width: 60px;
    height: 2px;
    background-color: #333;
    margin: 0;
  }

  {{ sec_id }} .pc-slider-nav-{{ last_part }} {
    display: flex;
    gap: 10px;
  }

  {{ sec_id }} .pc-slider-button-{{ last_part }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    border: none;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-slider-button-{{ last_part }}:hover {
    transform: scale(1.05);
  }

  {{ sec_id }} .pc-slider-button-{{ last_part }} svg {
    width: 20px;
    height: 20px;
  }

  {{ sec_id }} .pc-slider-wrapper-{{ last_part }} {
    position: relative;
  }

  {{ sec_id }} .pc-slider-track-{{ last_part }} {
    display: flex;
    gap: 30px;
    transition: transform 0.5s ease;
  }

  {{ sec_id }} .pc-slide-{{ last_part }} {
    flex: 0 0 calc(50% - 15px);
  }

  {{ sec_id }} .pc-product-card-{{ last_part }} {
    background: white;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    height: 100%;
  }

  {{ sec_id }} .pc-product-image-{{ last_part }} {
    width: 100%;
    height: 300px;
    overflow: hidden;
  }

  {{ sec_id }} .pc-product-image-{{ last_part }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  {{ sec_id }} .pc-product-content-{{ last_part }} {
    padding: 25px;
    text-align: center;
  }

  {{ sec_id }} .pc-product-title-{{ last_part }} {
    font-size: 20px;
    font-weight: 600;
    color: #222;
    margin-bottom: 15px;
    text-transform: capitalize;
  }

  {{ sec_id }} .pc-product-description-{{ last_part }} {
    font-size: 15px;
    color: #666;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  {{ sec_id }} .pc-shop-button-{{ last_part }} {
    display: inline-block;
    padding: 8px 25px;
    background: transparent;
    color: #222;
    border: 2px solid #222;
    border-radius: 3px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-shop-button-{{ last_part }}:hover {
    background: #222;
    color: white;
  }

  @media (max-width: 767px) {
    {{ sec_id }} .pc-slide-{{ last_part }} {
      flex: 0 0 100%;
    }
    
    {{ sec_id }} .pc-product-image-{{ last_part }} {
      height: 250px;
    }
    
    {{ sec_id }} .pc-section-title-{{ last_part }} h2 {
      font-size: 24px;
    }
    
    {{ sec_id }} .pc-section-header-{{ last_part }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }
    
    {{ sec_id }} .pc-slider-nav-{{ last_part }} {
      align-self: flex-end;
    }
  }
</style>

<section class="pc-organic-slider-{{ last_part }}">
  <div class="pc-slider-container-{{ last_part }}">
    <div class="pc-section-header-{{ last_part }}">
      <div class="pc-section-title-{{ last_part }}">
        <h2>{{ section.settings.heading | default: 'ORGANIC PRODUCT SLIDER' }}</h2>
        <div class="pc-section-divider-{{ last_part }}"></div>
      </div>
      <div class="pc-slider-nav-{{ last_part }}">
        <button class="pc-slider-button-{{ last_part }} pc-prev-{{ last_part }}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="#333" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="pc-slider-button-{{ last_part }} pc-next-{{ last_part }}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="#333" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
    
    <div class="pc-slider-wrapper-{{ last_part }}">
      <div class="pc-slider-track-{{ last_part }}">
        {% for block in section.blocks %}
          <div class="pc-slide-{{ last_part }}">
            <div class="pc-product-card-{{ last_part }}">
              <div class="pc-product-image-{{ last_part }}">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.title }}
                {% else %}
                  {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <div class="pc-product-content-{{ last_part }}">
                <h3 class="pc-product-title-{{ last_part }}">{{ block.settings.title | default: 'Fresh And Healthy Vegetable' }}</h3>
                <p class="pc-product-description-{{ last_part }}">{{ block.settings.description | default: 'Daily updates of all special deals. Bookmark this page & come back often.' }}</p>
                <a href="{{ block.settings.button_url | default: '#' }}" class="pc-shop-button-{{ last_part }}">{{ block.settings.button_text | default: 'Shop Now' }}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sliderTrack = document.querySelector('{{ sec_id }} .pc-slider-track-{{ last_part }}');
  const slides = document.querySelectorAll('{{ sec_id }} .pc-slide-{{ last_part }}');
  const prevBtn = document.querySelector('{{ sec_id }} .pc-prev-{{ last_part }}');
  const nextBtn = document.querySelector('{{ sec_id }} .pc-next-{{ last_part }}');
  
  if (slides.length > 0) {
    let currentIndex = 0;
    const slideWidth = slides[0].offsetWidth + 30;
    const maxIndex = slides.length - 2;
    
    function updateSlider() {
      sliderTrack.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= maxIndex;
    }
    
    prevBtn.addEventListener('click', () => {
      currentIndex = Math.max(0, currentIndex - 1);
      updateSlider();
    });
    
    nextBtn.addEventListener('click', () => {
      currentIndex = Math.min(maxIndex, currentIndex + 1);
      updateSlider();
    });
    
    window.addEventListener('resize', function() {
      const newSlideWidth = slides[0].offsetWidth + 30;
      if (newSlideWidth !== slideWidth) {
        slideWidth = newSlideWidth;
        updateSlider();
      }
    });
    
    updateSlider();
  }
});
</script>

