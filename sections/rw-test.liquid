<style>
  {{ sec_id }} {
    display: grid;
    place-items: start;
    padding-block: min(20vh, 3rem);
  }

  {{ sec_id }} .pc-testimonial-container-{{ last_part }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    width: calc(min(90rem, 85%));
    margin: 0 auto;
  }

  {{ sec_id }} .pc-testimonial-title-{{ last_part }} {
    grid-column: span 12;
    margin-bottom: 2rem;
    color: {{ section.settings.title_color }};
    font-size: clamp(10px, {{ section.settings.title_max_font_size }}px, 50px);
    font-weight: {{ section.settings.title_font_weight }};
    font-style: {{ section.settings.title_font_style }};
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
    text-decoration: {{ section.settings.title_text_decoration }};
    text-decoration-color: {{ section.settings.title_text_decoration_color }};
    text-align: {{ section.settings.title_alignment }};
    padding-top: {{ section.settings.title_padding_top }}px;
    padding-bottom: {{ section.settings.title_padding_bottom }}px;
  }

  {{ sec_id }} .pc-testimonial-cards-{{ last_part }} {
    grid-column: span 12;
    display: grid;
    gap: 2rem;
  }

  {{ sec_id }} .pc-testimonial-card-{{ last_part }} {
    cursor: pointer;
    border-radius: 1rem;
    display: grid;
    grid-template-columns: auto 1fr;
    column-gap: 2.188rem;
    align-items: center;
    transition: 0.3s;
    border: 0.094rem solid transparent;
    background: {{ section.settings.card_bg_color }};
  }

  {{ sec_id }} .pc-testimonial-card-{{ last_part }} img {
    display: block;
    width: 3.35rem;
    height: 3.35rem;
    border-radius: 50%;
    filter: grayscale(1);
    transition: 0.5s;
  }

  {{ sec_id }} .pc-testimonial-card-info-{{ last_part }} {
    padding: {{ section.settings.padding }}px;
  }

  {{ sec_id }} .pc-testimonial-card-info-{{ last_part }} h3 {
    text-transform: capitalize;
    color: {{ section.settings.name_color }};
    font-size: clamp(10px, {{ section.settings.name_max_font_size }}px, 50px);
    font-weight: {{ section.settings.name_font_weight }};
    font-style: {{ section.settings.name_font_style }};
    letter-spacing: {{ section.settings.name_letter_spacing }}px;
    text-decoration: {{ section.settings.Name_text_decoration }};
    text-decoration-color: {{ section.settings.name_text_decoration_color }};
    padding-top: {{ section.settings.name_padding_top }}px;
    padding-bottom: {{ section.settings.name_padding_bottom }}px;
    margin: 0;
  }

  {{ sec_id }} .pc-testimonial-card-info-{{ last_part }} p {
    text-transform: capitalize;
    color: {{ section.settings.role_color }};
    font-size: clamp(10px, {{ section.settings.role_max_font_size }}px, 50px);
    font-weight: {{ section.settings.role_font_weight }};
    font-style: {{ section.settings.role_font_style }};
    letter-spacing: {{ section.settings.role_letter_spacing }}px;
    text-decoration: {{ section.settings.role_text_decoration }};
    text-decoration-color: {{ section.settings.role_text_decoration_color }};
    padding-top: {{ section.settings.role_padding_top }}px;
    padding-bottom: {{ section.settings.role_padding_bottom }}px;
    margin: 0;
  }

  {{ sec_id }} .pc-testimonial-card-{{ last_part }}.pc-active {
    background: {{ section.settings.card_active_bg }};
    border: 0.094rem solid {{ section.settings.card_active_border }};
    position: relative;
  }

  {{ sec_id }} .pc-testimonial-card-{{ last_part }}.pc-active img,
  {{ sec_id }} .pc-testimonial-card-{{ last_part }}:hover img {
    filter: grayscale(0);
  }

  {{ sec_id }} .pc-testimonial-gradient-{{ last_part }} {
    background-image: linear-gradient(
      to right,
      #4755690a,
      #9d0cb28a,
      #4343c899,
      #4755690a
    );
    width: 50%;
    height: 0.094rem;
    position: absolute;
    content: "";
    bottom: -0.063rem;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0px 0.125rem 0.75rem #4343c84d;
  }

  {{ sec_id }} .pc-testimonial-content-{{ last_part }} {
    grid-column: span 12;
    position: relative;
    width: 100%;
    overflow: inherit;
    margin-top: 2rem;
    min-height: 200px;
  }

  {{ sec_id }} .pc-testimonial-content-box-{{ last_part }} {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: start;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

  {{ sec_id }} .pc-testimonial-content-box-{{ last_part }}.pc-active {
  opacity: 1;
  pointer-events: auto;
}

  {{ sec_id }} .pc-testimonial-text-{{ last_part }} {
