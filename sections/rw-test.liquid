{% assign sec_id = '#shopify-section-' | append: section.id %}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-space-slider-{{ last_part }} class="pc-space-slider-{{ last_part }}">

  <div class="pc-slider-wrapper-{{ last_part }}">
    <div class="pc-slider-track-{{ last_part }}">
      {%- for block in section.blocks -%}
        <div class="pc-slider-item-{{ last_part }}">
          <h2 class="pc-slider-title-{{ last_part }}">{{ block.settings.heading }}</h2>
          <p class="pc-slider-desc-{{ last_part }}">{{ block.settings.description }}</p>
        </div>
      {%- endfor -%}
    </div>

    <button id="pc-next-{{ last_part }}" class="pc-nav-btn-{{ last_part }}">&#62;</button>
    <button id="pc-prev-{{ last_part }}" class="pc-nav-btn-{{ last_part }}">&#60;</button>
  </div>

</pc-space-slider-{{ last_part }}>

<style>
  {{ sec_id }} .pc-space-slider-{{ last_part }} {
    background-image: url('{{ section.settings.bg_image | image_url: width: section.settings.bg_image.width, height: section.settings.bg_image.height }}');
    min-height: 100vh;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: monospace;
    background-size: cover;
    background-repeat: no-repeat;
  }

  {{ sec_id }} .pc-slider-wrapper-{{ last_part }} {
    position: relative;
    margin-top: 100px;
    width: 100%;
    height: 370px;
    overflow: hidden;
  }

  {{ sec_id }} .pc-slider-track-{{ last_part }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  {{ sec_id }} .pc-slider-item-{{ last_part }} {
    position: absolute;
    width: 200px;
    height: 320px;
    text-align: justify;
    background-color: #fff;
    border-radius: 10px;
    padding: 20px;
    transition: 0.5s;
    left: calc(50% - 110px);
    top: 0;
  }

  {{ sec_id }} .pc-nav-btn-{{ last_part }} {
    position: absolute;
    top: 40%;
    color: #fff;
    background: none;
    border: none;
    font-size: xxx-large;
    font-family: monospace;
    font-weight: bold;
    opacity: 0.5;
    transition: opacity 0.5s;
    z-index: 10;
  }

  {{ sec_id }} #pc-prev-{{ last_part }} {
    left: 50px;
  }

  {{ sec_id }} #pc-next-{{ last_part }} {
    right: 50px;
  }

  {{ sec_id }} .pc-nav-btn-{{ last_part }}:hover {
    opacity: 1;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const items = document.querySelectorAll('{{ sec_id }} .pc-slider-item-{{ last_part }}');
    const next = document.getElementById('pc-next-{{ last_part }}');
    const prev = document.getElementById('pc-prev-{{ last_part }}');
    let active = 3;

    function loadShow() {
      items.forEach((item, index) => {
        item.style.transition = '0.5s';
        item.style.zIndex = 0;
        item.style.filter = 'blur(5px)';
        item.style.opacity = '0';
      });

      items[active].style.transform = `none`;
      items[active].style.zIndex = 1;
      items[active].style.filter = 'none';
      items[active].style.opacity = 1;

      let stt = 0;
      for (let i = active + 1; i < items.length; i++) {
        stt++;
        items[i].style.transform = `translateX(${120 * stt}px) scale(${1 - 0.2 * stt}) perspective(16px) rotateY(-1deg)`;
        items[i].style.zIndex = -stt;
        items[i].style.opacity = stt > 2 ? 0 : 0.6;
      }
      stt = 0;
      for (let i = active - 1; i >= 0; i--) {
        stt++;
        items[i].style.transform = `translateX(${-120 * stt}px) scale(${1 - 0.2 * stt}) perspective(16px) rotateY(1deg)`;
        items[i].style.zIndex = -stt;
        items[i].style.opacity = stt > 2 ? 0 : 0.6;
      }
    }

    loadShow();

    next.onclick = function () {
      active = active + 1 < items.length ? active + 1 : active;
      loadShow();
    };

    prev.onclick = function () {
      active = active - 1 >= 0 ? active - 1 : active;
      loadShow();
    };
  });
</script>

{% schema %}
{
  "name": "PWC - Facts Slider #1",
  "tag": "section",
  "class": "space-slider-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Space Fact"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Interesting fact about space."
        }
      ]
    }
  ],
  "max_blocks": 15,
  "presets": [
    {
      "name": "PWC - Facts Slider #1",
      "category": "Sliders",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}