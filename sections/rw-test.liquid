{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-glass-magnifier-{{ last_part }}>
  <div class="pc-grid-pattern-{{ last_part }}"></div>
  <div class="pc-floating-elements-{{ last_part }}">
    <div class="pc-floating-element-{{ last_part }}"></div>
    <div class="pc-floating-element-{{ last_part }}"></div>
    <div class="pc-floating-element-{{ last_part }}"></div>
  </div>

  <div class="pc-cursor-glow-{{ last_part }}"></div>
  <div class="pc-glass-magnifier-{{ last_part }}">
    <div class="pc-magnified-content-{{ last_part }}"></div>
    <div class="pc-glass-reflection-{{ last_part }}"></div>
  </div>

  <div class="pc-page-content-{{ last_part }}">
    <div class="pc-text-content-{{ last_part }}">
      <div class="pc-effect-label-{{ last_part }}">{{ section.settings.effect_label }}</div>
      <h1 class="pc-main-title-{{ last_part }}">{{ section.settings.main_title }}</h1>
      <p class="pc-subtitle-{{ last_part }}">{{ section.settings.subtitle }}</p>
    </div>

    <div class="pc-feature-grid-{{ last_part }}">
      {% for block in section.blocks %}
        <div class="pc-feature-item-{{ last_part }}">
          <h3>{{ block.settings.feature_title }}</h3>
          <p>{{ block.settings.feature_description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</pc-glass-magnifier-{{ last_part }}>

<style>
  {{ sec_id }} pc-glass-magnifier-{{ last_part }} * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  {{ sec_id }} pc-glass-magnifier-{{ last_part }} {
    min-height: 100vh;
    background: linear-gradient(135deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    cursor: none;
    overflow-x: hidden;
    position: relative;
  }

  {{ sec_id }} .pc-page-content-{{ last_part }} {
    position: relative;
    z-index: 1;
    padding: {{ section.settings.desktop_padding }}px;
  }

  {{ sec_id }} .pc-grid-pattern-{{ last_part }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(
        circle at 25% 25%,
        rgba(255, 255, 255, 0.1) 2px,
        transparent 2px
      ),
      radial-gradient(
        circle at 75% 75%,
        rgba(255, 255, 255, 0.05) 1px,
        transparent 1px
      );
    background-size: 80px 80px, 40px 40px;
    animation: pc-gridMove-{{ last_part }} 20s linear infinite;
    z-index: 0;
  }

  {{ sec_id }} .pc-floating-elements-{{ last_part }} {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  {{ sec_id }} .pc-floating-element-{{ last_part }} {
    position: absolute;
    border-radius: 50%;
    animation: pc-float-{{ last_part }} 8s ease-in-out infinite;
  }

  {{ sec_id }} .pc-floating-element-{{ last_part }}:nth-child(1) {
    width: 120px;
    height: 120px;
    top: 10%;
    left: 5%;
    background: rgba(255, 107, 107, 0.15);
    animation-delay: 0s;
  }

  {{ sec_id }} .pc-floating-element-{{ last_part }}:nth-child(2) {
    width: 80px;
    height: 80px;
    top: 70%;
    right: 10%;
    background: rgba(78, 205, 196, 0.15);
    animation-delay: 2s;
  }

  {{ sec_id }} .pc-floating-element-{{ last_part }}:nth-child(3) {
    width: 100px;
    height: 100px;
    bottom: 20%;
    left: 70%;
    background: rgba(69, 183, 209, 0.15);
    animation-delay: 4s;
  }

  {{ sec_id }} .pc-text-content-{{ last_part }} {
    text-align: center;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 3rem;
  }

  {{ sec_id }} .pc-main-title-{{ last_part }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(45deg, #fff, #e0e0e0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  {{ sec_id }} .pc-effect-label-{{ last_part }} {
    font-size: 1.2rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1rem;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  {{ sec_id }} .pc-subtitle-{{ last_part }} {
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: 300;
    opacity: 0.8;
    margin-bottom: 2rem;
  }

  {{ sec_id }} .pc-feature-grid-{{ last_part }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    max-width: 1000px;
    margin: 0 auto;
  }

  {{ sec_id }} .pc-feature-item-{{ last_part }} {
    background: rgba(255, 255, 255, 0.1);
    padding: 1.5rem;
    border-radius: 16px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-feature-item-{{ last_part }}:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  {{ sec_id }} .pc-feature-item-{{ last_part }} h3 {
    font-size: {{ section.settings.feature_title_size }}px;
    margin-bottom: 0.5rem;
    color: white;
  }

  {{ sec_id }} .pc-feature-item-{{ last_part }} p {
    font-size: {{ section.settings.feature_text_size }}px;
    opacity: 0.8;
    line-height: 1.4;
  }

  {{ sec_id }} .pc-glass-magnifier-{{ last_part }} {
    position: fixed;
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.1);
    z-index: 1000;
    pointer-events: none;
    transition: all 0.1s ease-out;
    opacity: 0;
    overflow: hidden;
  }

  {{ sec_id }} .pc-glass-magnifier-{{ last_part }}::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    border-radius: 50%;
    background: linear-gradient(
      45deg,
      rgba(255, 255, 255, 0.3) 0%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0.3) 100%
    );
    z-index: -1;
  }

  {{ sec_id }} .pc-magnified-content-{{ last_part }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
  }

  {{ sec_id }} .pc-glass-reflection-{{ last_part }} {
    position: absolute;
    top: 15%;
    left: 15%;
    width: 35%;
    height: 35%;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.6) 0%,
      rgba(255, 255, 255, 0.2) 50%,
      transparent 100%
    );
    border-radius: 50%;
    filter: blur(1px);
    z-index: 10;
  }

  {{ sec_id }} .pc-cursor-glow-{{ last_part }} {
    position: fixed;
    width: 200px;
    height: 200px;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.08) 0%,
      rgba(255, 255, 255, 0.04) 40%,
      transparent 70%
    );
    border-radius: 50%;
    pointer-events: none;
    z-index: 999;
    transition: all 0.2s ease-out;
    opacity: 0;
  }

  {{ sec_id }} .pc-magnifier-active-{{ last_part }} .pc-glass-magnifier-{{ last_part }} {
    opacity: 1;
  }

  {{ sec_id }} .pc-magnifier-active-{{ last_part }} .pc-cursor-glow-{{ last_part }} {
    opacity: 1;
  }

  @keyframes pc-gridMove-{{ last_part }} {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(80px, 80px);
    }
  }

  @keyframes pc-float-{{ last_part }} {
    0%, 100% {
      transform: translateY(0px) scale(1);
      opacity: 0.7;
    }
    50% {
      transform: translateY(-20px) scale(1.1);
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-main-title-{{ last_part }} {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    {{ sec_id }} .pc-feature-grid-{{ last_part }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_grid_gap }}px;
    }

    {{ sec_id }} .pc-glass-magnifier-{{ last_part }} {
      width: 120px;
      height: 120px;
    }

    {{ sec_id }} .pc-page-content-{{ last_part }} {
      padding: {{ section.settings.mobile_padding }}px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const glassMagnifier = document.querySelector('{{ sec_id }} .pc-glass-magnifier-{{ last_part }}');
    const magnifiedContent = document.querySelector('{{ sec_id }} .pc-magnified-content-{{ last_part }}');
    const cursorGlow = document.querySelector('{{ sec_id }} .pc-cursor-glow-{{ last_part }}');
    const body = document.querySelector('{{ sec_id }} pc-glass-magnifier-{{ last_part }}');
    let mouseX = 0;
    let mouseY = 0;
    let isActive = false;

    function updateMagnifiedContent() {
      magnifiedContent.innerHTML = "";

      const viewport = document.createElement("div");
      viewport.style.position = "absolute";
      viewport.style.top = "0";
      viewport.style.left = "0";
      viewport.style.width = "100%";
      viewport.style.height = "100%";
      viewport.style.overflow = "hidden";
      viewport.style.borderRadius = "50%";

      const magnifiedView = document.createElement("div");
      magnifiedView.style.position = "absolute";
      magnifiedView.style.width = "100vw";
      magnifiedView.style.height = "100vh";

      const centerX = 75;
      const centerY = 75;
      const magnification = 2;
      magnifiedView.style.left = `${centerX - mouseX * magnification}px`;
      magnifiedView.style.top = `${centerY - mouseY * magnification}px`;
      magnifiedView.style.transform = `scale(${magnification})`;
      magnifiedView.style.transformOrigin = "0 0";

      magnifiedView.innerHTML = `
        <div style="
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: linear-gradient(135deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);
        "></div>
        
        <div style="
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-image: 
            radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 2px, transparent 2px),
            radial-gradient(circle at 75% 75%, rgba(255,255,255,0.05) 1px, transparent 1px);
          background-size: 80px 80px, 40px 40px;
        "></div>
        
        ${document.querySelector('{{ sec_id }} .pc-floating-elements-{{ last_part }}').outerHTML}
        ${document.querySelector('{{ sec_id }} .pc-page-content-{{ last_part }}').outerHTML}
      `;
      viewport.appendChild(magnifiedView);
      magnifiedContent.appendChild(viewport);
    }

    document.addEventListener("mousemove", (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;

      glassMagnifier.style.left = mouseX - 75 + "px";
      glassMagnifier.style.top = mouseY - 75 + "px";

      cursorGlow.style.left = mouseX - 100 + "px";
      cursorGlow.style.top = mouseY - 100 + "px";

      updateMagnifiedContent();
      if (!isActive) {
        body.classList.add("pc-magnifier-active-{{ last_part }}");
        isActive = true;
      }
    });

    document.addEventListener("mouseleave", () => {
      body.classList.remove("pc-magnifier-active-{{ last_part }}");
      isActive = false;
    });
    
    document.addEventListener("mouseenter", () => {
      if (mouseX !== 0 || mouseY !== 0) {
        body.classList.add("pc-magnifier-active-{{ last_part }}");
        isActive = true;
      }
    });
  });
</script>

