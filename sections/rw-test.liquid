{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<style>

  {{ sec_id }} {
    min-height: 100vh;
    background: linear-gradient(135deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);
    overflow-x: hidden;
    position: relative;
  }

  {{ sec_id }} .pc-page-content-{{ last_part }} {
    position: relative;
    z-index: 1;
    padding: {{ section.settings.desktop_padding }}px;
  }

  {{ sec_id }} .pc-grid-pattern-{{ last_part }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(
        circle at 25% 25%,
        rgba(255, 255, 255, 0.1) 2px,
        transparent 2px
      ),
      radial-gradient(
        circle at 75% 75%,
        rgba(255, 255, 255, 0.05) 1px,
        transparent 1px
      );
    background-size: 80px 80px, 40px 40px;
    animation: pc-gridMove-{{ last_part }} 20s linear infinite;
    z-index: 0;
  }

  {{ sec_id }} .pc-floating-elements-{{ last_part }} {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  {{ sec_id }} .pc-floating-element-{{ last_part }} {
    position: absolute;
    border-radius: 50%;
    animation: pc-float-{{ last_part }} 8s ease-in-out infinite;
  }

  {{ sec_id }} .pc-floating-element-{{ last_part }}:nth-child(1) {
    width: 120px;
    height: 120px;
    top: 10%;
    left: 5%;
    background: rgba(255, 107, 107, 0.15);
    animation-delay: 0s;
  }

  {{ sec_id }} .pc-floating-element-{{ last_part }}:nth-child(2) {
    width: 80px;
    height: 80px;
    top: 70%;
    right: 10%;
    background: rgba(78, 205, 196, 0.15);
    animation-delay: 2s;
  }

  {{ sec_id }} .pc-floating-element-{{ last_part }}:nth-child(3) {
    width: 100px;
    height: 100px;
    bottom: 20%;
    left: 70%;
    background: rgba(69, 183, 209, 0.15);
    animation-delay: 4s;
  }

  {{ sec_id }} .pc-text-content-{{ last_part }} {
    text-align: center;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 3rem;
  }

  {{ sec_id }} .pc-effect-label-{{ last_part }} {
    font-size: {{ section.settings.label_size }}px;
    color: {{ section.settings.label_color }};
    font-weight: {{ section.settings.label_font_weight }};
    text-decoration: {{ section.settings.label_text_decoration }};
    text-decoration-color: {{ section.settings.label_text_decoration_color }};
    padding-top: {{ section.settings.label_padding_top }}px;
    padding-bottom: {{ section.settings.label_padding_bottom }}px;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  {{ sec_id }} .pc-main-title-{{ last_part }} {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    text-decoration: {{ section.settings.title_text_decoration }};
    text-decoration-color: {{ section.settings.title_text_decoration_color }};
    padding-top: {{ section.settings.title_padding_top }}px;
    padding-bottom: {{ section.settings.title_padding_bottom }}px;
    margin: 0;
  }

  {{ sec_id }} .pc-subtitle-{{ last_part }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    font-weight: {{ section.settings.subtitle_font_weight }};
    text-decoration: {{ section.settings.subtitle_text_decoration }};
    text-decoration-color: {{ section.settings.subtitle_text_decoration_color }};
    padding-top: {{ section.settings.subtitle_padding_top }}px;
    padding-bottom: {{ section.settings.subtitle_padding_bottom }}px;
    opacity: 0.8;
    margin: 0;
  }

  {{ sec_id }} .pc-feature-grid-{{ last_part }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    max-width: 1000px;
    margin: 0 auto;
  }

  {{ sec_id }} .pc-feature-item-{{ last_part }} {
    background: rgba(255, 255, 255, 0.1);
    padding: {{ section.settings.feature_padding_desktop }}px;
    border-radius: 16px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-feature-item-{{ last_part }}:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  {{ sec_id }} .pc-feature-item-{{ last_part }} h3 {
    font-size: {{ section.settings.feature_title_size }}px;
    color: {{ section.settings.feature_title_color }};
    font-weight: {{ section.settings.feature_title_font_weight }};
    text-decoration: {{ section.settings.feature_title_text_decoration }};
    text-decoration-color: {{ section.settings.feature_title_text_decoration_color }};
    font-size: {{ section.settings.feature_title_size }}px;
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  {{ sec_id }} .pc-feature-item-{{ last_part }} p {
    font-size: {{ section.settings.feature_text_size }}px;
    color: {{ section.settings.feature_text_color }};
    opacity: 0.8;
    line-height: 1.4;
    margin: 0;
  }

  @keyframes pc-gridMove-{{ last_part }} {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(80px, 80px);
    }
  }

  @keyframes pc-float-{{ last_part }} {
    0%, 100% {
      transform: translateY(0px) scale(1);
      opacity: 0.7;
    }
    50% {
      transform: translateY(-20px) scale(1.1);
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-main-title-{{ last_part }} {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    {{ sec_id }} .pc-subtitle-{{ last_part }} {
      font-size: {{ section.settings.subtitle_size_mobile }}px;
    }

    {{ sec_id }} .pc-feature-item-{{ last_part }} h3 {
      font-size: {{ section.settings.feature_title_mobile }}px;
    }

     {{ sec_id }} .pc-feature-item-{{ last_part }} p {
       font-size: {{ section.settings.feature_description_mobile }}px;
     }

    {{ sec_id }} .pc-feature-grid-{{ last_part }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_grid_gap }}px;
    }

    {{ sec_id }} .pc-page-content-{{ last_part }} {
      padding: {{ section.settings.mobile_padding }}px;
    }
    
    {{ sec_id }} .pc-effect-label-{{ last_part }} {
      font-size: {{ section.settings.mobile_label_size }}px;
    }

    {{ sec_id }} .pc-feature-item-{{ last_part }} {
      padding: {{ section.settings.feature_padding_mobile }}px;
    }
  }
</style>

<div class="pc-box-content-{{ last_part }}">
<div class="pc-page-content-{{ last_part }}">
  <div class="pc-text-content-{{ last_part }}">
    <div class="pc-effect-label-{{ last_part }}">{{ section.settings.effect_label }}</div>
    <h1 class="pc-main-title-{{ last_part }}">{{ section.settings.main_title }}</h1>
    <p class="pc-subtitle-{{ last_part }}">{{ section.settings.subtitle }}</p>
  </div>

  <div class="pc-feature-grid-{{ last_part }}">
    {% for block in section.blocks %}
      <div class="pc-feature-item-{{ last_part }}" {{ block.shopify_attributes }}>
        <h3>{{ block.settings.feature_title }}</h3>
        <p>{{ block.settings.feature_description }}</p>
      </div>
    {% endfor %}
  </div>
</div>
