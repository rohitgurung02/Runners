{% assign sec_id = '#shopify-section-' | append: section.id %}
{% assign parts = sec_id | split: '_' %}
{% assign last_lower = parts | last %}
{% assign last_part = last_lower | downcase %}

<pc-product-slider-{{ last_part }} id="pc-product-slider-{{ last_part }}">
  <section class="pc-product__slider-{{ last_part }}">
    <div class="pc-container-{{ last_part }}">
      <div class="pc-section__header-{{ last_part }}">
        <h3 class="pc-heading-{{ last_part }}">{{ section.settings.heading }}</h3>
        <div id="slider-controls-{{ last_part }}" class="pc-slider__controls-{{ last_part }}">
          <button class="pc-prev-btn-{{ last_part }}" aria-label="Previous">
            <svg viewBox="0 0 24 24" width="24" height="24"><path d="M15 6l-6 6 6 6" stroke="currentColor" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </button>
          <button class="pc-next-btn-{{ last_part }}" aria-label="Next">
            <svg viewBox="0 0 24 24" width="24" height="24"><path d="M9 6l6 6-6 6" stroke="currentColor" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </button>
        </div>
      </div>
      <div class="pc-slider__wrapper-{{ last_part }}">
        <div class="pc-slider-{{ last_part }}">
          {% for block in section.blocks %}
            <div class="pc-slider__item-{{ last_part }}">
              <div class="pc-card-{{ last_part }}">
                <div class="pc-card__image-{{ last_part }}">
                  {% if block.settings.image %}
                    {{- block.settings.image
                      | image_url: width: block.settings.image.width, height: block.settings.image.height
                      | image_tag: loading: 'lazy', preload: true, alt: block.settings.image.alt
                    -}}
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag }}
                  {% endif %}
                </div>
                <div class="pc-card__body-{{ last_part }}">
                  <h4 class="pc-card__title-{{ last_part }}">{{ block.settings.title }}</h4>
                  <p class="pc-card__description-{{ last_part }}">{{ block.settings.description }}</p>
                  <a href="{{ block.settings.button_link }}" class="pc-card__button-{{ last_part }}">{{ block.settings.button_label }}</a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
</pc-product-slider-{{ last_part }}>

<style>
  {{ sec_id }} .pc-product__slider-{{ last_part }} {
    background-color: {{ section.settings.bg_color }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_side }}px {{ section.settings.padding_bottom }}px;
  }

  {{ sec_id }} .pc-heading-{{ last_part }} {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
    text-align: center;
  }

  {{ sec_id }} .pc-slider__controls-{{ last_part }} {
    display: flex;
    justify-content: center;
    gap: 10px;
  }

  {{ sec_id }} .pc-slider__item-{{ last_part }} {
    padding: 10px;
    flex: 0 0 auto;
    width: 100%;
    max-width: 300px;
  }

  {{ sec_id }} .pc-card-{{ last_part }} {
    border: 1px solid rgba(0,0,0,0.1);
    border-radius: 8px;
    overflow: hidden;
    background: #fff;
    transition: box-shadow 0.3s ease;
    {% if section.settings.shadow %}box-shadow: 0 2px 8px rgba(0,0,0,0.1);{% endif %}
  }

  {{ sec_id }} .pc-card__image-{{ last_part }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  {{ sec_id }} .pc-card__body-{{ last_part }} {
    padding: 15px;
  }

  {{ sec_id }} .pc-card__title-{{ last_part }} {
    font-size: {{ section.settings.title_font_size }}px;
    margin: 0 0 10px;
  }

  {{ sec_id }} .pc-card__description-{{ last_part }} {
    font-size: 14px;
    opacity: 0.8;
  }

  {{ sec_id }} .pc-card__button-{{ last_part }} {
    display: inline-block;
    margin-top: 10px;
    text-decoration: none;
    color: {{ section.settings.button_color }};
    font-weight: bold;
  }

  @media screen and (max-width: 749px) {
    {{ sec_id }} .pc-product__slider-{{ last_part }} {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_side }}px {{ section.settings.mobile_padding_bottom }}px;
    }

    {{ sec_id }} .pc-heading-{{ last_part }} {
      font-size: {{ section.settings.mobile_heading_font_size }}px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.querySelector('.pc-slider-{{ last_part }}');
    const prev = document.querySelector('.pc-prev-btn-{{ last_part }}');
    const next = document.querySelector('.pc-next-btn-{{ last_part }}');

    let scrollAmount = 0;
    const scrollStep = 320;

    next.addEventListener('click', () => {
      container.scrollBy({ left: scrollStep, behavior: 'smooth' });
    });

    prev.addEventListener('click', () => {
      container.scrollBy({ left: -scrollStep, behavior: 'smooth' });
    });
  });
</script>


