{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-space-facts-carousel-{{ last_part }} class="pc-space-facts-carousel">
  <div class="pc-carousel-container">
    {%- for block in section.blocks -%}
      <div class="pc-space-fact-item" {{ block.shopify_attributes }}>
        <h2 class="pc-space-fact-title">{{ block.settings.title }}</h2>
        <div class="pc-space-fact-content">{{ block.settings.content }}</div>
      </div>
    {%- endfor -%}
  </div>

  <button class="pc-carousel-button pc-carousel-prev">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6 1.41-1.41z"/></svg>
  </button>
  <button class="pc-carousel-button pc-carousel-next">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/></svg>
  </button>
</pc-space-facts-carousel-{{ last_part }}>

<style>
  {{ sec_id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
    position: relative;
  }

  {{ sec_id }} .pc-space-facts-carousel {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    overflow: hidden;
  }

  {{ sec_id }} .pc-carousel-container {
    position: relative;
    width: 100%;
    height: {{ section.settings.slider_height_desktop }}px;
  }

  {{ sec_id }} .pc-space-fact-item {
    position: absolute;
    width: {{ section.settings.card_width_desktop }}px;
    height: {{ section.settings.card_height_desktop }}px;
    text-align: center;
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    transition: all {{ section.settings.transition_speed }}s ease;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    box-shadow: {% if section.settings.enable_shadow %}0 4px 12px rgba(0,0,0,0.1){% else %}none{% endif %};
    opacity: 0;
    z-index: 0;
  }

  {{ sec_id }} .pc-space-fact-title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size_desktop }}px;
    margin-bottom: {{ section.settings.title_spacing }}px;
    font-weight: bold;
  }

  {{ sec_id }} .pc-space-fact-content {
    color: {{ section.settings.content_color }};
    font-size: {{ section.settings.content_size_desktop }}px;
    line-height: 1.5;
  }

  {{ sec_id }} .pc-carousel-button {
    position: absolute;
    color: {{ section.settings.arrow_color }};
    background: {{ section.settings.arrow_background }};
    border: none;
    border-radius: 50%;
    width: {{ section.settings.arrow_size }}px;
    height: {{ section.settings.arrow_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.7;
    transition: opacity 0.3s;
    cursor: pointer;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    padding: 0;
  }

  {{ sec_id }} .pc-carousel-button svg {
    width: 60%;
    height: 60%;
    fill: currentColor;
  }

  {{ sec_id }} .pc-carousel-button:hover {
    opacity: 1;
  }

  {{ sec_id }} .pc-carousel-prev {
    left: {{ section.settings.arrow_offset }}px;
  }

  {{ sec_id }} .pc-carousel-next {
    right: {{ section.settings.arrow_offset }}px;
  }

  @media (max-width: 768px) {
    {{ sec_id }} {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
    }

    {{ sec_id }} .pc-carousel-container {
      height: {{ section.settings.slider_height_mobile }}px;
    }

    {{ sec_id }} .pc-space-fact-item {
      width: {{ section.settings.card_width_mobile }}px;
      height: {{ section.settings.card_height_mobile }}px;
      padding: {{ section.settings.card_padding_mobile }}px;
    }

    {{ sec_id }} .pc-space-fact-title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }

    {{ sec_id }} .pc-space-fact-content {
      font-size: {{ section.settings.content_size_mobile }}px;
    }

    {{ sec_id }} .pc-carousel-button {
      width: {{ section.settings.arrow_size_mobile }}px;
      height: {{ section.settings.arrow_size_mobile }}px;
    }

    {{ sec_id }} .pc-carousel-prev {
      left: {{ section.settings.arrow_offset_mobile }}px;
    }

    {{ sec_id }} .pc-carousel-next {
      right: {{ section.settings.arrow_offset_mobile }}px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('pc-space-facts-carousel-{{ last_part }}');
    if (!carousel) return;
    
    const container = carousel.querySelector('.pc-carousel-container');
    const items = carousel.querySelectorAll('.pc-space-fact-item');
    const nextBtn = carousel.querySelector('.pc-carousel-next');
    const prevBtn = carousel.querySelector('.pc-carousel-prev');
    
    if (items.length === 0) return;
    
    let activeIndex = 0;
    const itemCount = items.length;
    const itemWidth = items[0].offsetWidth;
    const visibleCount = 3;
    
    function positionItems() {
      items.forEach((item, index) => {
        const position = (index - activeIndex) % itemCount;
        const absPosition = position < 0 ? position + itemCount : position;
        
        let transform = '';
        let zIndex = 0;
        let opacity = 0;
        let scale = 1;
        
        if (absPosition === 0) {
          // Center item
          transform = 'translateX(0)';
          zIndex = 10;
          opacity = 1;
          scale = 1;
        } else if (absPosition <= visibleCount / 2) {
          // Right side items
          transform = `translateX(${absPosition * (itemWidth * 0.8)}px)`;
          zIndex = 10 - absPosition;
          opacity = 1 - (absPosition * 0.3);
          scale = 1 - (absPosition * 0.1);
        } else if (itemCount - absPosition <= visibleCount / 2) {
          // Left side items
          const leftPos = itemCount - absPosition;
          transform = `translateX(-${leftPos * (itemWidth * 0.8)}px)`;
          zIndex = 10 - leftPos;
          opacity = 1 - (leftPos * 0.3);
          scale = 1 - (leftPos * 0.1);
        } else {
          // Hidden items
          opacity = 0;
          zIndex = -1;
        }
        
        item.style.transform = `${transform} scale(${scale})`;
        item.style.zIndex = zIndex;
        item.style.opacity = opacity;
      });
    }
    
    function nextSlide() {
      activeIndex = (activeIndex + 1) % itemCount;
      positionItems();
    }
    
    function prevSlide() {
      activeIndex = (activeIndex - 1 + itemCount) % itemCount;
      positionItems();
    }
    
    // Initialize
    positionItems();
    
    // Event listeners
    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);
    
    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowRight') nextSlide();
      if (e.key === 'ArrowLeft') prevSlide();
    });
  });
</script>

