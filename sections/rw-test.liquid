{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-lightbox-gallery-{{ last_part }}>
  <div class="pc-lightbox-wrapper-{{ last_part }}">
    <div class="pc-lightbox-container-{{ last_part }}">
      <div 
        class="pc-lightbox-hero-{{ last_part }}"
        style="background-image: url('{{ section.blocks[0].settings.image | image_url: width: 1200 }}')"
      ></div>
      <nav class="pc-lightbox-nav-{{ last_part }}">
        {%- for block in section.blocks -%}
          <button 
            class="pc-lightbox-thumb-btn-{{ last_part }}" 
            data-index="{{ forloop.index0 }}"
            {% if forloop.first %}aria-current="true"{% endif %}
          >
            {% assign image_class = 'pc-lightbox-thumb-img-' | append: last_part %}
            {{ 
              block.settings.image
              | image_url: width: 200
              | image_tag: 
                  loading: 'lazy',
                  class: image_class,
                  alt: block.settings.image.alt
            }}
          </button>
        {%- endfor -%}
      </nav>
    </div>
  </div>
</pc-lightbox-gallery-{{ last_part }}>

<style>
  {{ sec_id }} {
    --pc-active-opacity-{{ last_part }}: 1;
    --pc-inactive-opacity-{{ last_part }}: 0.9;
  }

  {{ sec_id }} .pc-lightbox-wrapper-{{ last_part }} {
    height: 100vh;
    display: grid;
    place-items: center;
    padding: 20px;
  }

  {{ sec_id }} .pc-lightbox-container-{{ last_part }} {
    width: min(450px, 90vw);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  {{ sec_id }} .pc-lightbox-hero-{{ last_part }} {
    aspect-ratio: 4/3;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  {{ sec_id }} .pc-lightbox-nav-{{ last_part }} {
    display: flex;
    justify-content: space-between;
    gap: 0.25rem;
  }

  {{ sec_id }} .pc-lightbox-nav-{{ last_part }}:hover .pc-lightbox-thumb-img-{{ last_part }}:not(:hover) {
    opacity: var(--pc-inactive-opacity-{{ last_part }});
  }

  {{ sec_id }} .pc-lightbox-thumb-btn-{{ last_part }} {
    width: 100%;
    aspect-ratio: 1;
    border: none;
    outline: none;
    background-color: transparent;
    cursor: pointer;
    padding: 0;
  }

  {{ sec_id }} .pc-lightbox-thumb-img-{{ last_part }} {
    width: inherit;
    height: 100%;
    object-fit: cover;
    opacity: var(--pc-inactive-opacity-{{ last_part }});
    transition: opacity 0.3s;
  }

  {{ sec_id }} .pc-lightbox-thumb-btn-{{ last_part }}:hover .pc-lightbox-thumb-img-{{ last_part }} {
    opacity: var(--pc-active-opacity-{{ last_part }});
  }

  {{ sec_id }} .pc-lightbox-thumb-btn-{{ last_part }}[aria-current="true"] .pc-lightbox-thumb-img-{{ last_part }} {
    opacity: var(--pc-active-opacity-{{ last_part }});
  }

  @media (max-width: 749px) {
    {{ sec_id }} .pc-lightbox-container-{{ last_part }} {
      width: 100%;
    }
    
    {{ sec_id }} .pc-lightbox-nav-{{ last_part }} {
      gap: 0.1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const lightboxEl = document.querySelector('{{ sec_id }} .pc-lightbox-container-{{ last_part }}');
    const heroEl = lightboxEl.querySelector('.pc-lightbox-hero-{{ last_part }}');
    const thumbButtons = lightboxEl.querySelectorAll('.pc-lightbox-thumb-btn-{{ last_part }}');
    
    // Get all image URLs from section blocks
    const imageUrls = [
      {%- for block in section.blocks -%}
        '{{ block.settings.image | image_url: width: 1200 }}'{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ];
    
    // Set up click handlers for thumbnails
    thumbButtons.forEach(button => {
      button.addEventListener('click', function() {
        const index = this.dataset.index;
        
        // Update hero image
        heroEl.style.backgroundImage = `url(${imageUrls[index]})`;
        
        // Update active state
        thumbButtons.forEach(btn => btn.removeAttribute('aria-current'));
        this.setAttribute('aria-current', 'true');
      });
    });
  });
</script>

