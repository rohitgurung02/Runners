<script>
document.addEventListener('DOMContentLoaded', function() {
  const testimonialSlider = document.querySelector('pc-testimonial-slider-{{ last_part }}');
  if (!testimonialSlider) return;
  
  const testimonials = [
    {
      text: `{{ section.settings.testimonial_1_text | escape }}`,
      name: `{{ section.settings.testimonial_1_name | escape }}`,
      role: `{{ section.settings.testimonial_1_role | escape }}`,
      {% if section.settings.testimonial_1_image != blank %}
        image: `{{ section.settings.testimonial_1_image | image_url: width: 150 }}`,
      {% else %}
        image: '',
      {% endif %}
    },
    {
      text: `{{ section.settings.testimonial_2_text | escape }}`,
      name: `{{ section.settings.testimonial_2_name | escape }}`,
      role: `{{ section.settings.testimonial_2_role | escape }}`,
      {% if section.settings.testimonial_2_image != blank %}
        image: `{{ section.settings.testimonial_2_image | image_url: width: 150 }}`,
      {% else %}
        image: '',
      {% endif %}
    },
    {
      text: `{{ section.settings.testimonial_3_text | escape }}`,
      name: `{{ section.settings.testimonial_3_name | escape }}`,
      role: `{{ section.settings.testimonial_3_role | escape }}`,
      {% if section.settings.testimonial_3_image != blank %}
        image: `{{ section.settings.testimonial_3_image | image_url: width: 150 }}`,
      {% else %}
        image: '',
      {% endif %}
    }
  ].filter(testimonial => testimonial.text && testimonial.name);
  
  if (testimonials.length <= 1) return;
  
  const textElement = testimonialSlider.querySelector('.pc-testimonial-text-{{ last_part }}');
  const nameElement = testimonialSlider.querySelector('.pc-username-{{ last_part }}');
  const roleElement = testimonialSlider.querySelector('.pc-user-role-{{ last_part }}');
  const imageElement = testimonialSlider.querySelector('.pc-user-image-{{ last_part }}') || 
                       testimonialSlider.querySelector('.pc-user-image-placeholder-{{ last_part }}');
  
  let index = 0;
  
  function updateTestimonial() {
    index = (index + 1) % testimonials.length;
    const { text, name, role, image } = testimonials[index];
    
    textElement.textContent = text;
    nameElement.textContent = name;
    roleElement.textContent = role;
    
    if (image && imageElement) {
      if (imageElement.tagName === 'IMG') {
        imageElement.src = image;
      } else if (imageElement.tagName === 'svg' && image) {
        const img = document.createElement('img');
        img.src = image;
        img.alt = name;
        img.classList.add('pc-user-image-{{ last_part }}');
        img.style.borderRadius = '50%';
        img.style.height = '{{ section.settings.image_size }}px';
        img.style.width = '{{ section.settings.image_size }}px';
        img.style.objectFit = 'cover';
        imageElement.parentNode.replaceChild(img, imageElement);
      }
    }
  }
  
  setInterval(updateTestimonial, {{ section.settings.rotation_interval | times: 1000 }});
});
</script>

