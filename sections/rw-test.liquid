{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<style>
  [data-section-id="{{ section.id }}"] .pc-testimonial-container {
    position: relative;
    width: 100%;
    padding: {{ section.settings.desktop_padding_top }}px 0 {{ section.settings.desktop_padding_bottom }}px;
    overflow: hidden;
  }

  [data-section-id="{{ section.id }}"] .pc-testimonial-slider {
    display: flex;
    transition: transform 0.5s ease;
    width: 100%;
  }

  [data-section-id="{{ section.id }}"] .pc-testimonial-card {
    min-width: 100%;
    padding: 0 15px;
    box-sizing: border-box;
    flex-shrink: 0;
  }

  [data-section-id="{{ section.id }}"] .pc-testimonial-inner {
    background: {{ section.settings.card_bg }};
    border-radius: 16px;
    padding: 40px;
    border: 1px solid {{ section.settings.card_border }};
    position: relative;
    overflow: hidden;
    height: 100%;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  [data-section-id="{{ section.id }}"] .pc-testimonial-inner::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, {{ section.settings.glow_color }} 0%, transparent 70%);
    opacity: 0.15;
    z-index: 0;
  }

  [data-section-id="{{ section.id }}"] .pc-testimonial-text {
    font-size: {{ section.settings.text_size_desktop }}px;
    line-height: 1.5;
    margin: 0 auto 20px;
    position: relative;
    z-index: 2;
    color: {{ section.settings.text_color }};
    max-width: 600px;
    font-style: italic;
  }

  [data-section-id="{{ section.id }}"] .pc-slider-nav {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    gap: 10px;
  }

  [data-section-id="{{ section.id }}"] .pc-slider-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  [data-section-id="{{ section.id }}"] .pc-slider-dot.active {
    background: {{ section.settings.glow_color }};
    transform: scale(1.2);
  }

  [data-section-id="{{ section.id }}"] .pc-slider-arrows {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: calc(100% - 40px);
    left: 20px;
    display: flex;
    justify-content: space-between;
    pointer-events: none;
    z-index: 3;
  }

  [data-section-id="{{ section.id }}"] .pc-slider-arrow {
    background: rgba(255,255,255,0.2);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    pointer-events: all;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255,255,255,0.3);
  }

  [data-section-id="{{ section.id }}"] .pc-slider-arrow:hover {
    background: rgba(255,255,255,0.4);
  }

  [data-section-id="{{ section.id }}"] .pc-slider-arrow svg {
    width: 16px;
    height: 16px;
    color: {{ section.settings.text_color }};
  }

  @media (max-width: 767px) {
    [data-section-id="{{ section.id }}"] .pc-testimonial-container {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    [data-section-id="{{ section.id }}"] .pc-testimonial-inner {
      padding: 30px 20px;
    }

    [data-section-id="{{ section.id }}"] .pc-testimonial-text {
      font-size: {{ section.settings.text_size_mobile }}px;
    }

    [data-section-id="{{ section.id }}"] .pc-slider-arrows {
      width: calc(100% - 30px);
      left: 15px;
    }

    [data-section-id="{{ section.id }}"] .pc-slider-arrow {
      width: 30px;
      height: 30px;
    }
  }
</style>

<div class="pc-testimonial-container" data-section-id="{{ section.id }}">
  <div class="pc-slider-arrows">
    <div class="pc-slider-arrow prev-arrow">
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <div class="pc-slider-arrow next-arrow">
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </div>

  <div class="pc-testimonial-slider">
    {% for block in section.blocks %}
      <div class="pc-testimonial-card">
        <div class="pc-testimonial-inner">
          <div class="pc-testimonial-text">{{ block.settings.testimonial }}</div>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="pc-slider-nav">
    {% for block in section.blocks %}
      <div class="pc-slider-dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></div>
    {% endfor %}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.querySelector('[data-section-id="{{ section.id }}"]');
  if (!section) return;

  class TestimonialSlider {
    constructor(container) {
      this.container = container;
      this.slider = container.querySelector('.pc-testimonial-slider');
      this.dots = container.querySelectorAll('.pc-slider-dot');
      this.prevBtn = container.querySelector('.prev-arrow');
      this.nextBtn = container.querySelector('.next-arrow');
      this.currentIndex = 0;
      this.totalSlides = container.querySelectorAll('.pc-testimonial-card').length;
      this.autoplaySpeed = {{ section.settings.autoplay_speed }} * 1000;
      
      this.init();
    }
    
    init() {
      this.prevBtn.addEventListener('click', () => this.prevSlide());
      this.nextBtn.addEventListener('click', () => this.nextSlide());
      
      this.dots.forEach(dot => {
        dot.addEventListener('click', () => {
          this.goToSlide(parseInt(dot.dataset.index));
        });
      });
      
      if (this.totalSlides > 1) {
        this.initAutoPlay();
      }
    }
    
    updateSlider() {
      this.slider.style.transform = `translateX(-${this.currentIndex * 100}%)`;
      this.dots.forEach(dot => dot.classList.remove('active'));
      this.dots[this.currentIndex].classList.add('active');
    }
    
    prevSlide() {
      this.currentIndex = (this.currentIndex - 1 + this.totalSlides) % this.totalSlides;
      this.updateSlider();
      this.resetAutoPlay();
    }
    
    nextSlide() {
      this.currentIndex = (this.currentIndex + 1) % this.totalSlides;
      this.updateSlider();
      this.resetAutoPlay();
    }
    
    goToSlide(index) {
      this.currentIndex = index;
      this.updateSlider();
      this.resetAutoPlay();
    }
    
    initAutoPlay() {
      this.autoPlayInterval = setInterval(() => this.nextSlide(), this.autoplaySpeed);
    }
    
    resetAutoPlay() {
      clearInterval(this.autoPlayInterval);
      this.initAutoPlay();
    }
  }

  new TestimonialSlider(section);
});
</script>

