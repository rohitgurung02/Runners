{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-hero-slider-{{ last_part }}>
  <div class="pc-slider-wrapper-{{ last_part }}">
    <div class="pc-main-slider-{{ last_part }}">
      <div class="pc-swiper-wrapper-{{ last_part }}">
        {%- for block in section.blocks -%}
          <div class="pc-swiper-slide-{{ last_part }}">
            <div class="pc-slide-item-{{ last_part }}">
              {%- if block.settings.media_type == 'image' -%}
                {%- if block.settings.image != blank -%}
                  {% assign image_class = 'pc-slide-image-' | append: last_part %}
                  {{ 
                    block.settings.image
                    | image_url: width: 2000
                    | image_tag: 
                        loading: 'lazy',
                        class: image_class,
                        alt: block.settings.image.alt
                  }}
                  <div class="pc-image-overlay-{{ last_part }}"></div>
                {%- else -%}
                  {{ 'lifestyle-1' | placeholder_svg_tag: class: 'pc-slide-placeholder-' | append: last_part }}
                {%- endif -%}
              {%- else -%}
                {%- if block.settings.video != blank -%}
                  <video autoplay loop muted playsinline class="pc-slide-video-{{ last_part }}">
                    <source src="{{ block.settings.video }}" type="video/mp4">
                    {{ 'general.accessibility.video_no_support' | t }}
                  </video>
                  <div class="pc-image-overlay-{{ last_part }}"></div>
                {%- else -%}
                  {{ 'lifestyle-1' | placeholder_svg_tag: class: 'pc-slide-placeholder-' | append: last_part }}
                {%- endif -%}
              {%- endif -%}
              
              <div class="pc-slide-content-{{ last_part }}">
                <div class="pc-content-inner-{{ last_part }}">
                  {%- if block.settings.heading != blank -%}
                    <h2 class="pc-slide-heading-{{ last_part }}">{{ block.settings.heading }}</h2>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <p class="pc-slide-text-{{ last_part }}">{{ block.settings.text }}</p>
                  {%- endif -%}
                  {%- if block.settings.button_text != blank -%}
                    <a href="{{ block.settings.button_link }}" class="pc-slide-button-{{ last_part }}">
                      {{ block.settings.button_text }}
                    </a>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      <div class="pc-swiper-pagination-{{ last_part }}"></div>
    </div>
  </div>
</pc-hero-slider-{{ last_part }}>

<style>
  {{ sec_id }} .pc-slider-wrapper-{{ last_part }} {
    position: relative;
    width: 100%;
    margin: auto;
    color: #262626;
    background: black;
  }

  {{ sec_id }} .pc-slide-item-{{ last_part }} {
    position: relative;
    width: 100vw;
    height: 100vh;
    padding-inline: 2rem;
  }

  {{ sec_id }} .pc-slide-image-{{ last_part }},
  {{ sec_id }} .pc-slide-video-{{ last_part }} {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  {{ sec_id }} .pc-image-overlay-{{ last_part }} {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    inset: 0;
    z-index: 1;
  }

  {{ sec_id }} .pc-slide-content-{{ last_part }} {
    padding: 3rem 2rem; 
    position: relative;
    z-index: 2;
    color: white;
  }

  {{ sec_id }} .pc-content-inner-{{ last_part }} {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  {{ sec_id }} .pc-slide-heading-{{ last_part }} {
    text-transform: uppercase;
    font-size: 3.9rem;
    font-weight: 300;
  }

  {{ sec_id }} .pc-slide-text-{{ last_part }} {
    font-size: 2.1rem;
    font-weight: 300;
  }

  {{ sec_id }} .pc-slide-button-{{ last_part }} {
    width: 100%;
    max-width: 17.2rem;
    height: 5.5rem;
    font-size: 1.4rem;
    margin-top: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-slide-button-{{ last_part }}:hover {
    background: #ebebeb;
    color: #4c4c4c;
  }

  {{ sec_id }} .pc-swiper-pagination-{{ last_part }} {
    width: 100%;
    bottom: 5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.4rem;
    font-weight: 500;
    padding-inline: 4rem;
  }

  {{ sec_id }} .pc-swiper-pagination-{{ last_part }} .pc-svg-icon-{{ last_part }} {
    width: 1.5rem;
    height: 1.5rem;
  }

  {{ sec_id }} .pc-swiper-pagination-{{ last_part }} .pc-svg-icon-{{ last_part }} path {
    fill: white;
  }

  {{ sec_id }} .pc-swiper-pagination-{{ last_part }} .swiper-pagination-bullet {
    color: white;
    opacity: 1;
    width: initial;
    height: initial;
    background: transparent;
  }

  {{ sec_id }} .pc-swiper-pagination-{{ last_part }} .swiper-pagination-bullet button {
    background: transparent;
    border: 0;
    display: flex;
    cursor: pointer;
  }

  {{ sec_id }} .pc-bullet-content-{{ last_part }} {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  {{ sec_id }} .pc-icon-{{ last_part }} {
    position: absolute;
    z-index: 1;
  }

  {{ sec_id }} .pc-percentage-{{ last_part }} {
    --colorf3: #1C69D4;
    --color13: #1C69D4;
    width: 3.4rem;
    aspect-ratio: 1;
    mask: radial-gradient(transparent 55%, black 60% 100%);
    -webkit-mask: radial-gradient(transparent 55%, black 60% 100%);
    transition: opacity 0.6s ease;
    opacity: 0;
    background: conic-gradient(
        transparent 0,
        transparent var(--p),
        #c9d6d7 0
      ),
      conic-gradient(
        var(--colorf3),
        #1C69D4,
        #1C69D4,
        #1C69D4,
        var(--colorf3)
      ),
      conic-gradient(transparent, transparent 10%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  {{ sec_id }} .pc-percentage-{{ last_part }}.pc-show-{{ last_part }} {
    opacity: 1;
  }

  {{ sec_id }} .pc-number-{{ last_part }} {
    width: 80%;
    aspect-ratio: 1;
    display: inherit;
    align-items: inherit;
    justify-content: inherit;
    background: white;
    border-radius: inherit;
    font-size: 16px;
    font-style: normal;
    font-weight: 800;
    line-height: 24px;
    color: var(--color13);
  }

  @media (max-width: 749px) {
    {{ sec_id }} .pc-slide-heading-{{ last_part }} {
      font-size: 2.8rem;
    }
    
    {{ sec_id }} .pc-slide-text-{{ last_part }} {
      font-size: 1.6rem;
    }
    
    {{ sec_id }} .pc-slide-button-{{ last_part }} {
      height: 4.5rem;
      font-size: 1.2rem;
      max-width: 15rem;
    }
    
    {{ sec_id }} .pc-swiper-pagination-{{ last_part }} {
      bottom: 3rem;
      padding-inline: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sliderEl = document.querySelector('{{ sec_id }} .pc-main-slider-{{ last_part }}');
    const paginationEl = sliderEl.querySelector('.pc-swiper-pagination-{{ last_part }}');

    let progress = 0;
    let duration = 6000;
    let isPlaying = true;
    let startTime;
    let rafId;
    let swiper;

    const playSVG = `<svg xmlns="http://www.w3.org/2000/svg" class="pc-svg-icon-{{ last_part }}" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>`;
    const pauseSVG = `<svg xmlns="http://www.w3.org/2000/svg" class="pc-svg-icon-{{ last_part }}" viewBox="0 0 24 24"><path d="M6 19h4V5H6zm8-14v14h4V5h-4z"/></svg>`;

    swiper = new Swiper(sliderEl, {
      effect: 'fade',
      speed: 1000,
      fadeEffect: {
        crossFade: true,
      },
      loop: true,
      pagination: {
        el: paginationEl,
        clickable: true,
        renderBullet: function (index, className) {
          return `<span class="${className}" data-index="${index}">
                    <span class="pc-number-{{ last_part }}">${index + 1}</span>
                  </span>`;
        }
      },
      on: {
        init(swiperInstance) {
          swiper = swiperInstance;
          startCustomAutoplay();
          resetLoaders();
        },
        slideChangeTransitionStart() {
          progress = 0;
          startTime = performance.now();
          resetLoaders();
        }
      }
    });

    function startCustomAutoplay() {
      startTime = performance.now();
      loop();
    }

    function loop(now) {
      if (!isPlaying) return;
      if (!startTime) startTime = now;
      const elapsed = now - startTime;
      progress = Math.min((elapsed / duration) * 100, 100);
      if (swiper) updateLoader(swiper.realIndex, Math.round(progress));
      if (progress >= 100) {
        swiper.slideNext();
        progress = 0;
        startTime = performance.now();
      }
      rafId = requestAnimationFrame(loop);
    }

    function pauseAutoplay() {
      isPlaying = false;
      cancelAnimationFrame(rafId);
    }

    function resumeAutoplay() {
      isPlaying = true;
      startTime = performance.now() - (progress / 100) * duration;
      loop();
    }

    function resetLoaders() {
      paginationEl.querySelectorAll('.swiper-pagination-bullet').forEach((bullet, i) => {
        const isActive = bullet.classList.contains('swiper-pagination-bullet-active');
        if (isActive) {
          bullet.innerHTML = `
            <div class="pc-bullet-content-{{ last_part }}">
              <button class="pc-icon-{{ last_part }} pc-playpause-btn-{{ last_part }}">
                ${isPlaying ? pauseSVG : playSVG}
              </button>    
              <div class="pc-percentage-{{ last_part }}" style="--p: ${progress}%"></div>
            </div>
          `;

          setTimeout(() => {
            const percentage = bullet.querySelector('.pc-percentage-{{ last_part }}');
            if (percentage) {
              percentage.classList.add('pc-show-{{ last_part }}');
            }
          }, 100);

          const btn = bullet.querySelector('.pc-playpause-btn-{{ last_part }}');
          btn.addEventListener('click', () => {
            if (isPlaying) {
              pauseAutoplay();
              btn.innerHTML = playSVG;
            } else {
              resumeAutoplay();
              btn.innerHTML = pauseSVG;
            }
          });
        } else {
          const index = bullet.dataset.index;
          bullet.innerHTML = `<span class="pc-number-{{ last_part }}">${parseInt(index) + 1}</span>`;
        }
      });
    }

    function updateLoader(index, percent) {
      const bullet = paginationEl.querySelectorAll('.swiper-pagination-bullet')[index];
      if (bullet) {
        const percentage = bullet.querySelector('.pc-percentage-{{ last_part }}');
        if (percentage) {
          percentage.style.setProperty('--p', `${percent}%`);
        }
      }
    }
  });
</script>

