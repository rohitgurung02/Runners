{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<style>
  {{ sec_id }} {
    background-image: url({{ section.settings.background_image | image_url: width: 2000 }});
    min-height: 100vh;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-size: cover;
    background-position: center;
  }

  {{ sec_id }} .pc-slider-{{ last_part }} {
    position: relative;
    margin-top: {{ section.settings.desktop_margin_top }}px;
    width: 100%;
    height: {{ section.settings.slide_height }}px;
    overflow: hidden;
  }

  {{ sec_id }} .pc-slide-{{ last_part }} {
    position: absolute;
    width: {{ section.settings.slide_width }}px;
    height: {{ section.settings.slide_height | minus: 50 }}px;
    text-align: justify;
    background-color: {{ section.settings.slide_bg_color }};
    border-radius: {{ section.settings.slide_border_radius }}px;
    padding: {{ section.settings.slide_padding }}px;
    transition: 0.5s;
    left: calc(50% - {{ section.settings.slide_width | divided_by: 2 | plus: 10 }}px);
    top: 0;
    {% if section.settings.enable_shadow %}
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    {% endif %}
  }

  {{ sec_id }} .pc-slide-{{ last_part }} h1 {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
    font-weight: {{ section.settings.heading_font_weight }};
    font-style: {{ section.settings.heading_font_style }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
    text-decoration: {{ section.settings.heading_text_decoration }};
    {% if section.settings.heading_text_decoration != 'none' %}
    text-decoration-color: {{ section.settings.heading_text_decoration_color }};
    {% endif %}
    padding-top: {{ section.settings.heading_padding_top }}px;
    padding-bottom: {{ section.settings.heading_padding_bottom }}px;
    margin-bottom: 5px;
  }

  {{ sec_id }} .pc-slide-{{ last_part }} p {
    font-size: {{ section.settings.text_font_size }}px;
    color: {{ section.settings.text_color }};
    font-weight: {{ section.settings.text_font_weight }};
    font-style: {{ section.settings.text_font_style }};
    letter-spacing: {{ section.settings.text_letter_spacing }}px;
    text-decoration: {{ section.settings.text_decoration }};
    {% if section.settings.text_decoration != 'none' %}
    text-decoration-color: {{ section.settings.text_decoration_color }};
    {% endif %}
    padding-top: {{ section.settings.text_padding_top }}px;
    padding-bottom: {{ section.settings.text_padding_bottom }}px;
    line-height: 1.4;
    margin: 0;
  }

  {{ sec_id }} .pc-nav-button-{{ last_part }} {
    position: absolute;
    color: {{ section.settings.nav_button_color }};
    background: none;
    border: none;
    font-size: {{ section.settings.nav_button_size }}px;
    opacity: {{ section.settings.nav_button_opacity }};
    transition: opacity 0.5s;
    cursor: pointer;
    z-index: 10;
  }

  {{ sec_id }} .pc-nav-button-{{ last_part }}:hover {
    opacity: 1;
  }

  {{ sec_id }} .pc-next-button-{{ last_part }} {
    right: 50px;
    top: 40%;
  }

  {{ sec_id }} .pc-prev-button-{{ last_part }} {
    left: 50px;
    top: 40%;
  }

  @media (max-width: 768px) {
    {{ sec_id }} {
      padding: 20px;
      min-height: {{ section.settings.mobile_min_height }}px;
    }

    {{ sec_id }} .pc-slider-{{ last_part }} {
      margin-top: {{ section.settings.mobile_margin_top }}px;
      height: {{ section.settings.mobile_slide_height }}px;
    }

    {{ sec_id }} .pc-slide-{{ last_part }} {
      width: {{ section.settings.mobile_slide_width }}px;
      height: {{ section.settings.mobile_slide_height | minus: 30 }}px;
      left: calc(54% - {{ section.settings.mobile_slide_width | divided_by: 2 | plus: 10 }}px);
      padding: {{ section.settings.mobile_slide_padding }}px;
    }

    {{ sec_id }} .pc-slide-{{ last_part }} h1 {
      font-size: {{ section.settings.mobile_heading_font_size }}px;
    }

    {{ sec_id }} .pc-slide-{{ last_part }} p {
      font-size: {{ section.settings.mobile_text_font_size }}px;
    }

    {{ sec_id }} .pc-nav-button-{{ last_part }} {
      font-size: {{ section.settings.mobile_nav_button_size }}px;
    }

    {{ sec_id }} .pc-next-button-{{ last_part }} {
      right: 20px;
    }

    {{ sec_id }} .pc-prev-button-{{ last_part }} {
      left: 20px;
    }
  }
</style>

<div class="pc-slider-{{ last_part }}">
  {% for block in section.blocks %}
    <div class="pc-slide-{{ last_part }}" id="pc-slide-{{ last_part }}-{{ forloop.index }}">
      <h1>{{ block.settings.title }}</h1>
      <p>{{ block.settings.content }}</p>
    </div>
  {% endfor %}
  
  <button class="pc-nav-button-{{ last_part }} pc-prev-button-{{ last_part }}" id="pc-prev-{{ last_part }}">
    &lt;
  </button>
  <button class="pc-nav-button-{{ last_part }} pc-next-button-{{ last_part }}" id="pc-next-{{ last_part }}">
    &gt;
  </button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const secId = '{{ sec_id }}';
    const lastPart = '{{ last_part }}';
    const items = document.querySelectorAll(`${secId} .pc-slide-${lastPart}`);
    let active = 1; // Start with the 2nd card (index 1)
    
    function loadShow() {
      if (items.length === 0) return;
      
      // Reset all items first (optional, but helps prevent glitches)
      items.forEach(item => {
        item.style.transform = '';
        item.style.zIndex = '';
        item.style.filter = '';
        item.style.opacity = '';
      });
      
      // Active item
      items[active].style.transform = `none`;
      items[active].style.zIndex = 1;
      items[active].style.filter = "none";
      items[active].style.opacity = 1;
      
      // Right-side cards (next items)
      let stt = 0;
      for (let i = active + 1; i < items.length; i++) {
        stt++;
        items[i].style.transform = `translateX(${120 * stt}px) scale(${1 - 0.2 * stt}) perspective(16px) rotateY(-1deg)`;
        items[i].style.zIndex = 0;
        items[i].style.filter = "blur(5px)";
        items[i].style.opacity = stt > 2 ? 0 : 0.6;
      }
      
      // Left-side cards (previous items)
      stt = 0;
      for (let i = active - 1; i >= 0; i--) {
        stt++;
        items[i].style.transform = `translateX(${-120 * stt}px) scale(${1 - 0.2 * stt}) perspective(16px) rotateY(1deg)`;
        items[i].style.zIndex = 1;
        items[i].style.filter = "blur(5px)";
        items[i].style.opacity = stt > 2 ? 0 : 0.6;
      }
    }
    
    loadShow();
    
    const nextBtn = document.getElementById(`pc-next-${lastPart}`);
    const prevBtn = document.getElementById(`pc-prev-${lastPart}`);
    
    if (nextBtn) {
      nextBtn.addEventListener('click', function() {
        active = (active + 1) % items.length; // Loops back to 0 if exceeds max
        loadShow();
      });
    }
    
    if (prevBtn) {
      prevBtn.addEventListener('click', function() {
        active = (active - 1 + items.length) % items.length; // Loops to last if < 0
        loadShow();
      });
    }
  });
</script>

