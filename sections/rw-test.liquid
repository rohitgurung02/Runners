{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
  assign image = section.settings.image
  assign heading = section.settings.heading
  assign description = section.settings.description
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
-%}

<style>
  {{ sec_id }} {
    --content-bg: {{ section.settings.content_bg_color }};
    --heading-color: {{ section.settings.heading_color }};
    --desc-color: {{ section.settings.description_color }};
    --btn-bg: {{ section.settings.button_bg_color }};
    --btn-text: {{ section.settings.button_text_color }};
    --btn-hover: {{ section.settings.button_hover_bg_color }};
    --btn-radius: {{ section.settings.button_border_radius }}px;
    --heading-spacing: {{ section.settings.heading_spacing }}px;
    --desc-spacing: {{ section.settings.description_spacing }}px;
    
    /* Mobile variables */
    --mobile-min-height: {{ section.settings.mobile_min_height }}vh;
    --mobile-padding: {{ section.settings.mobile_content_padding }}px;
    --mobile-heading: {{ section.settings.mobile_heading_size }}px;
    --mobile-desc: {{ section.settings.mobile_description_size }}px;
    --mobile-btn-y: {{ section.settings.mobile_button_padding_y }}px;
    --mobile-btn-x: {{ section.settings.mobile_button_padding_x }}px;
    --mobile-btn-font: {{ section.settings.mobile_button_font_size }}px;
    
    /* Desktop variables */
    --desktop-min-height: {{ section.settings.desktop_min_height }}vh;
    --desktop-padding: {{ section.settings.desktop_content_padding }}px;
    --desktop-heading: {{ section.settings.desktop_heading_size }}px;
    --desktop-desc: {{ section.settings.desktop_description_size }}px;
    --text-max-width: {{ section.settings.text_max_width }}%;
    --desktop-btn-y: {{ section.settings.desktop_button_padding_y }}px;
    --desktop-btn-x: {{ section.settings.desktop_button_padding_x }}px;
    --desktop-btn-font: {{ section.settings.desktop_button_font_size }}px;
  }

  {{ sec_id }} .pc-split-hero-wrapper {
    position: relative;
    overflow: hidden;
  }

  {{ sec_id }} .pc-split-hero-container {
    display: flex;
    flex-direction: column;
    min-height: var(--mobile-min-height);
  }

  {{ sec_id }} .pc-split-hero-content {
    flex: 1;
    background: var(--content-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--mobile-padding);
    order: {{ section.settings.mobile_content_order }};
  }

  {{ sec_id }} .pc-split-hero-text {
    text-align: {{ section.settings.mobile_text_alignment }};
    max-width: 100%;
  }

  {{ sec_id }} .pc-split-hero-heading {
    font-size: var(--mobile-heading);
    font-weight: {{ section.settings.heading_weight }};
    color: var(--heading-color);
    margin-bottom: var(--heading-spacing);
    line-height: 1.2;
  }

  {{ sec_id }} .pc-split-hero-description {
    font-size: var(--mobile-desc);
    color: var(--desc-color);
    margin-bottom: var(--desc-spacing);
    line-height: 1.5;
  }

  {{ sec_id }} .pc-split-hero-button {
    display: inline-block;
    background: var(--btn-bg);
    color: var(--btn-text);
    padding: var(--mobile-btn-y) var(--mobile-btn-x);
    border-radius: var(--btn-radius);
    text-decoration: none;
    font-weight: {{ section.settings.button_font_weight }};
    font-size: var(--mobile-btn-font);
    transition: all 0.3s ease;
    {% if section.settings.enable_button_shadow %}
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    {% endif %}
  }

  {{ sec_id }} .pc-split-hero-button:hover {
    background: var(--btn-hover);
    transform: translateY(-2px);
    {% if section.settings.enable_button_shadow %}
      box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    {% endif %}
  }

  {{ sec_id }} .pc-split-hero-image {
    flex: 1;
    position: relative;
    overflow: hidden;
    order: {{ section.settings.mobile_image_order }};
  }

  {{ sec_id }} .pc-split-hero-img-{{ last_part }},
  {{ sec_id }} .pc-split-hero-placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (min-width: 768px) {
    {{ sec_id }} .pc-split-hero-container {
      flex-direction: row;
      min-height: var(--desktop-min-height);
    }

    {{ sec_id }} .pc-split-hero-content {
      padding: var(--desktop-padding);
      order: {{ section.settings.desktop_content_order }};
    }

    {{ sec_id }} .pc-split-hero-text {
      text-align: {{ section.settings.desktop_text_alignment }};
      max-width: var(--text-max-width);
    }

    {{ sec_id }} .pc-split-hero-heading {
      font-size: var(--desktop-heading);
    }

    {{ sec_id }} .pc-split-hero-description {
      font-size: var(--desktop-desc);
    }

    {{ sec_id }} .pc-split-hero-button {
      padding: var(--desktop-btn-y) var(--desktop-btn-x);
      font-size: var(--desktop-btn-font);
    }

    {{ sec_id }} .pc-split-hero-image {
      order: {{ section.settings.desktop_image_order }};
    }
  }

  {%- if section.settings.mobile_content_order != section.settings.desktop_content_order -%}
    @media (max-width: 767px) {
      {{ sec_id }} .pc-split-hero-content {
        order: {{ section.settings.mobile_content_order }} !important;
      }
      {{ sec_id }} .pc-split-hero-image {
        order: {{ section.settings.mobile_image_order }} !important;
      }
    }
  {%- endif -%}
</style>

<pc-split-hero-{{ last_part }} class="pc-split-hero-wrapper">
  <div class="pc-split-hero-container">
    <div class="pc-split-hero-content">
      <div class="pc-split-hero-text">
        <h2 class="pc-split-hero-heading">{{ heading }}</h2>
        <p class="pc-split-hero-description">{{ description }}</p>
        {%- if button_text != blank and button_link != blank -%}
          <a href="{{ button_link }}" class="pc-split-hero-button">{{ button_text }}</a>
        {%- endif -%}
      </div>
    </div>
    <div class="pc-split-hero-image">
      {%- if image != blank -%}
        {%- assign image_class = 'pc-split-hero-img-' | append: last_part -%}
        {{-
          image
          | image_url: width: 1200
          | image_tag:
            loading: 'lazy',
            widths: '400, 600, 800, 1000, 1200',
            class: image_class,
            alt: image.alt | default: heading
        -}}
      {%- else -%}
        {{- 'lifestyle-1' | placeholder_svg_tag: 'pc-split-hero-placeholder' -}}
      {%- endif -%}
    </div>
  </div>
</pc-split-hero-{{ last_part }}>



