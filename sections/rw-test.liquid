{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<pc-news-carousel-{{ last_part }} class="pc-news-carousel">
  <div class="pc-container">
    <div class="pc-row">
      <div class="pc-col">
        <div class="pc-carousel-wrapper">
          <div class="pc-carousel pc-carousel-{{ last_part }}">
            {%- for block in section.blocks -%}
              <div class="pc-carousel-item">
                <article class="pc-news-teaser">
                  <div class="pc-date">
                    <div class="pc-day">{{ block.settings.category }}</div>
                    <div class="pc-year">{{ block.settings.date }}</div>
                  </div>
                  <div class="pc-image">
                    {%- if block.settings.image != blank -%}
                      {% assign image_class = 'pc-news-image-' | append: last_part %}
                      {{ 
                        block.settings.image
                        | image_url: width: 600
                        | image_tag: 
                            loading: 'lazy',
                            class: image_class,
                            alt: block.settings.title
                      }}
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag }}
                    {%- endif -%}
                  </div>
                  <div class="pc-title">
                    <span>{{ block.settings.title }}</span>
                  </div>
                  <div class="pc-url">
                    <a href="{{ block.settings.url }}" rel="bookmark" title="{{ block.settings.title | escape }}">> {{ section.settings.read_more_text }}</a>
                  </div>    
                </article>
              </div>
            {%- endfor -%}
          </div>
          <div class="pc-link-wrapper">
            <a href="{{ section.settings.all_articles_url }}" class="pc-button">{{ section.settings.all_articles_text }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</pc-news-carousel-{{ last_part }}>

<style>
  {{ sec_id }} .pc-news-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding-top: {{ section.settings.desktop_padding_top }}px;
    padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  {{ sec_id }} .pc-container {
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
  }

  {{ sec_id }} .pc-row {
    display: flex;
    flex-wrap: wrap;
    margin-right: -15px;
    margin-left: -15px;
  }

  {{ sec_id }} .pc-col {
    flex: 0 0 100%;
    max-width: 100%;
    padding-left: {{ section.settings.desktop_offset }}%;
  }

  {{ sec_id }} .pc-carousel-wrapper {
    position: relative;
  }

  {{ sec_id }} .pc-carousel {
    display: grid;
    grid-template-areas: 
      "carousel carousel" 
      "btn navigation";
    grid-template-rows: 1fr 40px;
    grid-column-gap: 20px;
    grid-row-gap: 25px;
    grid-template-columns: 40px 1fr;
  }

  {{ sec_id }} .pc-carousel .owl-nav {
    grid-area: btn;
  }

  {{ sec_id }} .pc-carousel .owl-dots {
    grid-area: navigation;
  }

  {{ sec_id }} .pc-carousel .owl-stage-outer {
    grid-area: carousel;
  }

  {{ sec_id }} .pc-carousel .owl-dots,
  {{ sec_id }} .pc-carousel .owl-nav {
    min-height: 40px;
    display: flex !important;
    align-items: center;
    flex-wrap: nowrap;
    margin-top: 0;
    width: 90%;
  }

  {{ sec_id }} .pc-carousel .owl-item img {
    margin: 0 auto;
  }

  {{ sec_id }} .pc-carousel .owl-dots .owl-dot span {
    margin-bottom: 0;
  }

  {{ sec_id }} .pc-carousel .owl-dots .owl-dot {
    width: 100%;
    padding: 15px 0 !important;
  }

  {{ sec_id }} .pc-carousel .owl-dots .owl-dot span {
    width: 100%;
    height: 2px;
    margin: 0;
    margin-left: 20px;
    background: {{ section.settings.dot_color }};
    display: block;
    transition: opacity 0.2s ease;
  }

  {{ sec_id }} .pc-carousel .owl-dots .owl-dot.active span,
  {{ sec_id }} .pc-carousel .owl-dots .owl-dot:hover span {
    background: {{ section.settings.dot_active_color }};
  }

  {{ sec_id }} .pc-carousel .owl-nav span {
    padding: 10px;
  }

  {{ sec_id }} .pc-news-teaser {
    border-left: 1px solid {{ section.settings.border_color }};
    padding: 0 20px;
    padding-bottom: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 400px;
    width: 265px;
  }

  {{ sec_id }} .pc-date {
    color: {{ section.settings.date_color }};
    font-size: {{ section.settings.date_font_size }}px;
    line-height: 2rem;
  }

  {{ sec_id }} .pc-day {
    font-size: {{ section.settings.category_font_size }}px;
    font-weight: bold;
    text-transform: uppercase;
  }

  {{ sec_id }} .pc-title span {
    font-weight: bold;
    margin: 15px 0;
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
  }

  {{ sec_id }} .pc-url a {
    color: {{ section.settings.link_color }};
    font-size: {{ section.settings.link_font_size }}px;
  }

  {{ sec_id }} .pc-image .field {
    height: 150px;
    width: 100%;
  }

  {{ sec_id }} .pc-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  {{ sec_id }} .pc-link-wrapper {
    display: grid;
    grid-template-columns: 1fr 4fr;
    grid-column-gap: 10px;
    position: relative;
    bottom: 40px;
  }

  {{ sec_id }} .pc-button {
    background-color: {{ section.settings.button_color }};
    border-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    padding: {{ section.settings.button_padding_top }}px {{ section.settings.button_padding_right }}px;
    font-size: {{ section.settings.button_font_size }}px;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  @media (max-width: 767.98px) {
    {{ sec_id }} .pc-news-carousel {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }

    {{ sec_id }} .pc-col {
      padding-left: 0;
    }

    {{ sec_id }} .pc-carousel {
      grid-template-columns: 1fr;
    }

    {{ sec_id }} .pc-carousel .owl-nav,
    {{ sec_id }} .pc-carousel .owl-dots {
      grid-area: btn;
    }

    {{ sec_id }} .pc-link-wrapper {
      grid-template-columns: 1fr;
      bottom: -25px;
      margin: 0 35px;
    }

    {{ sec_id }} .pc-date {
      line-height: 2.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('{{ sec_id }} .pc-carousel');
    if (carousel) {
      $(carousel).owlCarousel({
        margin: 15,
        nav: true,
        dots: true,
        center: false,
        navText: [
          `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="{{ section.settings.arrow_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>`,
          `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="{{ section.settings.arrow_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>`
        ],
        responsive: {
          0: {
            items: 1
          },
          600: {
            items: 2
          },
          1000: {
            items: 3
          }
        }
      });
    }
  });
</script>

