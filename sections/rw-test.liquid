{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<style>
  {{ sec_id }} .pc-popular-products-{{ last_part }} {
    position: relative;
    width: 100%;
    padding: 60px 0;
    text-align: center;
    background-color: {{ section.settings.bg_color }};
  }

  {{ sec_id }} .pc-popular-products-{{ last_part }}__title {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    margin-bottom: 30px;
    font-weight: {{ section.settings.title_font_weight }};
  }

  {{ sec_id }} .pc-popular-products-{{ last_part }}__subtitle {
    font-size: {{ section.settings.subtitle_font_size }}px;
    color: {{ section.settings.subtitle_color }};
    font-style: italic;
    margin-top: 20px;
  }

  {{ sec_id }} .pc-popular-products-{{ last_part }}__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.desktop_columns }}, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  {{ sec_id }} .pc-product-card-{{ last_part }} {
    text-align: center;
    {% if section.settings.enable_shadow %}
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    {% endif %}
    padding: 15px;
    border-radius: 8px;
    background: #fff;
  }

  {{ sec_id }} .pc-product-card-{{ last_part }} img {
    max-width: 100%;
    height: auto;
    margin-bottom: 10px;
  }

  {{ sec_id }} .pc-product-card-{{ last_part }} h3 {
    margin: 10px 0 5px;
    font-size: 16px;
  }

  {{ sec_id }} .pc-product-card-{{ last_part }} p {
    color: {{ section.settings.subtitle_color }};
    margin: 0;
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-popular-products-{{ last_part }} {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    {{ sec_id }} .pc-popular-products-{{ last_part }}__title {
      font-size: {{ section.settings.mobile_title_font_size }}px;
    }

    {{ sec_id }} .pc-popular-products-{{ last_part }}__subtitle {
      font-size: {{ section.settings.mobile_subtitle_font_size }}px;
    }

    {{ sec_id }} .pc-popular-products-{{ last_part }}__grid {
      grid-template-columns: repeat({{ section.settings.mobile_columns }}, 1fr);
      gap: 15px;
      padding: 0 15px;
    }
  }
</style>

<div class="pc-popular-products-{{ last_part }}">
  <h2 class="pc-popular-products-{{ last_part }}__title">{{ section.settings.title }}</h2>
  
  <div class="pc-popular-products-{{ last_part }}__grid">
    {% for product in collections[section.settings.collection].products limit: section.settings.product_limit %}
      <div class="pc-product-card-{{ last_part }}">
        {% if product.featured_image %}
          {{ product.featured_image | image_url: width: 400, height: 400 | image_tag: loading: 'lazy', alt: product.title }}
        {% else %}
          {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
        <h3>{{ product.title }}</h3>
        <p>{{ product.price | money }}</p>
      </div>
    {% else %}
      {% for i in (1..4) %}
        <div class="pc-product-card-{{ last_part }}">
          {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
          <h3>Sample Product {{ i }}</h3>
          <p>$19.99</p>
        </div>
      {% endfor %}
    {% endfor %}
  </div>
  
  <p class="pc-popular-products-{{ last_part }}__subtitle">{{ section.settings.subtitle }}</p>
</div>

{% schema %}
{
  "name": "PWC - Popular Products #1",
  "tag": "section",
  "class": "shopify-section--popular-products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Discover our most popular products"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title Font Size (Desktop)",
      "min": 16,
      "max": 72,
      "step": 2,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "mobile_title_font_size",
      "label": "Title Font Size (Mobile)",
      "min": 12,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 24
    },
    {
      "type": "select",
      "id": "title_font_weight",
      "label": "Title Font Weight",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Semi-bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "700"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Made with love by frens"
    },
    {
      "type": "range",
      "id": "subtitle_font_size",
      "label": "Subtitle Font Size (Desktop)",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "mobile_subtitle_font_size",
      "label": "Subtitle Font Size (Mobile)",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#666666"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Number of Products",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "desktop_columns",
      "label": "Columns (Desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "mobile_columns",
      "label": "Columns (Mobile)",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "label": "Top Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "label": "Bottom Padding (Mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "enable_shadow",
      "label": "Enable Shadow on Product Cards",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "PWC - Popular Products #1",
      "category": "Custom"
    }
  ]
}
{% endschema %}