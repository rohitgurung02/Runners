{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<style>
  {{ sec_id }} .pc-slider-container-{{ last_part }} {
    height: 100vh;
    margin: 0;
    display: flex;
    align-items: center;
    background-color: var(--pc-primary-{{ last_part }});
    overflow: hidden;
    transition: all 1s ease-in-out;
  }

  {{ sec_id }} .pc-slider-container-{{ last_part }}::before {
    content: "";
    position: fixed;
    inset: 0;
    background-color: rgba(255, 255, 255, 0.2);
    pointer-events: none;
  }

  {{ sec_id }} .pc-slider-card-{{ last_part }} {
    height: 200px;
    max-width: 80vw;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    border-radius: 5px;
    overflow: hidden;
    background-color: var(--pc-frost-{{ last_part }});
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: {% if section.settings.enable_shadow %}0 8px 32px rgba(0, 0, 0, 0.1){% else %}none{% endif %};
  }

  {{ sec_id }} .pc-slider-content-{{ last_part }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 50;
    background-color: var(--pc-primary-{{ last_part }});
  }

  {{ sec_id }} .pc-slider-title-{{ last_part }} {
    font-weight: {{ section.settings.title_weight }};
    font-family: var(--pc-font-family-{{ last_part }});
    color: var(--pc-secondary-{{ last_part }});
    font-size: {{ section.settings.mobile_title_size }}px;
  }

  {{ sec_id }} .pc-slider-image-{{ last_part }} {
    overflow: hidden;
  }

  {{ sec_id }} .pc-slide-{{ last_part }} {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  {{ sec_id }} .pc-slider-dots-{{ last_part }} {
    width: 100%;
    position: absolute;
    bottom: 10px;
    left: 0;
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: center;
  }

  {{ sec_id }} .pc-dot-{{ last_part }} {
    height: 15px;
    width: 15px;
    display: inline-block;
    border-radius: 50%;
    background-color: var(--pc-frost-{{ last_part }});
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  {{ sec_id }} .pc-active-{{ last_part }} {
    background-color: var(--pc-primary-{{ last_part }});
  }

  @keyframes pc-slidein-{{ last_part }} {
    from {
      transform: translateX(-3000px);
    }
    to {
      transform: translateX(0);
    }
  }

  @media (width >= 48rem) {
    {{ sec_id }} .pc-slider-title-{{ last_part }} {
      font-size: {{ section.settings.desktop_title_size }}px;
    }
    {{ sec_id }} .pc-slider-card-{{ last_part }} {
      height: {{ section.settings.desktop_card_height }}px;
    }
  }
</style>

<pc-slider-container-{{ last_part }} class="pc-slider-container-{{ last_part }}">
  <pc-slider-card-{{ last_part }} class="pc-slider-card-{{ last_part }}">
    <div class="pc-slider-content-{{ last_part }}">
      <h1 class="pc-slider-title-{{ last_part }}">{{ section.settings.slides[0].title }}</h1>
    </div>
    <div class="pc-slider-image-{{ last_part }}">
      {%- if section.settings.slides[0].image != blank -%}
        {% assign image_class = 'pc-slide-' | append: last_part %}
        {{ 
          section.settings.slides[0].image 
          | image_url: width: 1000 
          | image_tag: 
              loading: 'lazy', 
              class: image_class,
              alt: section.settings.slides[0].image.alt 
        }}
      {%- else -%}
        {{ 'product-1' | placeholder_svg_tag: class: 'pc-slide-' | append: last_part }}
      {%- endif -%}
    </div>
  </pc-slider-card-{{ last_part }}>
  <div class="pc-slider-dots-{{ last_part }}">
    {%- for block in section.blocks -%}
      <span class="pc-dot-{{ last_part }} {% if forloop.first %}pc-active-{{ last_part }}{% endif %}" data-index="{{ forloop.index0 }}"></span>
    {%- endfor -%}
  </div>
</pc-slider-container-{{ last_part }}>

<script>
  class PCSlider{{ last_part | capitalize }} extends HTMLElement {
    constructor() {
      super();
      this.slides = {{ section.settings.slides | json }};
      this.current = 0;
      this.autoRotate = {{ section.settings.auto_rotate }};
      this.rotateSpeed = {{ section.settings.rotate_speed }};
      this.interval = null;
      
      this.querySelectorAll('.pc-dot-{{ last_part }}').forEach(dot => {
        dot.addEventListener('click', () => {
          this.current = parseInt(dot.dataset.index);
          this.updateSlider();
        });
      });
      
      if (this.autoRotate) {
        this.startRotation();
      }
    }
    
    updateSlider() {
      const slide = this.querySelector('.pc-slide-{{ last_part }}');
      const title = this.querySelector('.pc-slider-title-{{ last_part }}');
      const dots = this.querySelectorAll('.pc-dot-{{ last_part }}');
      
      if (this.slides[this.current].image) {
        slide.src = '{{ section.settings.slides[0].image | image_url: width: 1000 }}'.replace('{{ section.settings.slides[0].image | image_url: width: 1000 | split: '/' | last }}', this.slides[this.current].image);
      }
      slide.alt = this.slides[this.current].image?.alt || '';
      title.textContent = this.slides[this.current].title;
      
      slide.style.animation = 'none';
      void slide.offsetWidth;
      slide.style.animation = `pc-slidein-{{ last_part }} 0.5s ease-in-out forwards`;
      
      this.style.background = `url(${this.slides[this.current].image})`;
      this.style.backgroundPosition = 'center';
      this.style.backgroundSize = 'cover';
      
      dots.forEach((dot, index) => {
        if (index === this.current) {
          dot.classList.add('pc-active-{{ last_part }}');
        } else {
          dot.classList.remove('pc-active-{{ last_part }}');
        }
      });
    }
    
    startRotation() {
      this.interval = setInterval(() => {
        this.current = (this.current + 1) % this.slides.length;
        this.updateSlider();
      }, this.rotateSpeed * 1000);
    }
    
    disconnectedCallback() {
      if (this.interval) {
        clearInterval(this.interval);
      }
    }
  }
  
  customElements.define('pc-slider-container-{{ last_part }}', PCSlider{{ last_part | capitalize }});
</script>

