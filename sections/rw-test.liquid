{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-space-facts-carousel-{{ last_part }} class="pc-space-facts-carousel">
  <div class="pc-carousel-wrapper">
    <div class="pc-carousel-container">
      {%- for block in section.blocks -%}
        <div class="pc-space-fact-item" {{ block.shopify_attributes }}>
          <h2 class="pc-space-fact-title">{{ block.settings.title }}</h2>
          <div class="pc-space-fact-content">{{ block.settings.content }}</div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <button class="pc-carousel-button pc-carousel-prev">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6 1.41-1.41z"/></svg>
  </button>
  <button class="pc-carousel-button pc-carousel-next">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/></svg>
  </button>
</pc-space-facts-carousel-{{ last_part }}>

<style>
  {{ sec_id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
    position: relative;
    overflow: hidden;
  }

  {{ sec_id }} .pc-space-facts-carousel {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  {{ sec_id }} .pc-carousel-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    position: relative;
  }

  {{ sec_id }} .pc-carousel-container {
    position: relative;
    width: calc({{ section.settings.card_width_desktop }}px * 3);
    height: {{ section.settings.slider_height_desktop }}px;
    margin: 0 auto;
  }

  {{ sec_id }} .pc-space-fact-item {
    position: absolute;
    width: {{ section.settings.card_width_desktop }}px;
    height: {{ section.settings.card_height_desktop }}px;
    text-align: center;
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    transition: all {{ section.settings.transition_speed }}s ease;
    top: 50%;
    transform: translateY(-50%);
    box-shadow: {% if section.settings.enable_shadow %}0 4px 12px rgba(0,0,0,0.1){% else %}none{% endif %};
    opacity: 0;
    z-index: 0;
  }

  /* Rest of your CSS remains the same */

  @media (max-width: 768px) {
    {{ sec_id }} .pc-carousel-container {
      width: calc({{ section.settings.card_width_mobile }}px * 3);
      height: {{ section.settings.slider_height_mobile }}px;
    }

    {{ sec_id }} .pc-space-fact-item {
      width: {{ section.settings.card_width_mobile }}px;
      height: {{ section.settings.card_height_mobile }}px;
      padding: {{ section.settings.card_padding_mobile }}px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('pc-space-facts-carousel-{{ last_part }}');
    if (!carousel) return;
    
    const container = carousel.querySelector('.pc-carousel-container');
    const items = carousel.querySelectorAll('.pc-space-fact-item');
    const nextBtn = carousel.querySelector('.pc-carousel-next');
    const prevBtn = carousel.querySelector('.pc-carousel-prev');
    
    if (items.length === 0) return;
    
    let activeIndex = 0;
    const itemCount = items.length;
    const itemWidth = items[0].offsetWidth;
    const containerWidth = container.offsetWidth;
    
    function positionItems() {
      const centerPosition = containerWidth / 2 - itemWidth / 2;
      
      items.forEach((item, index) => {
        const position = (index - activeIndex) % itemCount;
        const absPosition = position < 0 ? position + itemCount : position;
        
        let transformX = centerPosition + (position * (itemWidth * 0.8));
        let zIndex = 0;
        let opacity = 0;
        let scale = 1;
        
        if (position === 0) {
          // Center item
          zIndex = 10;
          opacity = 1;
          scale = 1;
        } else if (Math.abs(position) <= 1) {
          // Adjacent items
          zIndex = 5;
          opacity = 0.7;
          scale = 0.9;
        } else {
          // Hidden items
          opacity = 0;
          zIndex = -1;
        }
        
        item.style.transform = `translateX(${transformX}px) translateY(-50%) scale(${scale})`;
        item.style.zIndex = zIndex;
        item.style.opacity = opacity;
      });
    }
    
    function nextSlide() {
      activeIndex = (activeIndex + 1) % itemCount;
      positionItems();
    }
    
    function prevSlide() {
      activeIndex = (activeIndex - 1 + itemCount) % itemCount;
      positionItems();
    }
    
    // Initialize
    positionItems();
    
    // Event listeners
    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);
    
    // Handle window resize
    window.addEventListener('resize', positionItems);
  });
</script>

