<style>
  {{ sec_id }} .pc-slider-item-{{ last_part }} {
    position: relative;
    height: 100%;
  }

  {{ sec_id }} .pc-item-content-{{ last_part }} {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  {{ sec_id }} .pc-img-box-{{ last_part }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1/1;
    flex-shrink: 0;
  }

  {{ sec_id }} .pc-slider-body-{{ last_part }} {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  {{ sec_id }} .pc-slider-body-{{ last_part }} a {
    margin-top: auto;
    align-self: flex-start;
  }

  {{ sec_id }} .pc-slider-{{ last_part }} {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: calc((100% - ({{ section.settings.items_per_view_mobile | minus: 1 }} * 15px)) / {{ section.settings.items_per_view_mobile }});
    gap: 15px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
  }

  @media (min-width: 768px) {
    {{ sec_id }} .pc-slider-{{ last_part }} {
      grid-auto-columns: calc((100% - ({{ section.settings.items_per_view_tablet | minus: 1 }} * 15px)) / {{ section.settings.items_per_view_tablet }});
    }
  }

  @media (min-width: 992px) {
    {{ sec_id }} .pc-slider-{{ last_part }} {
      grid-auto-columns: calc((100% - ({{ section.settings.items_per_view_desktop | minus: 1 }} * 15px)) / {{ section.settings.items_per_view_desktop }});
    }
  }
</style>

<section class="pc-product-slider-{{ last_part }}">
  <div class="pc-container-{{ last_part }}">
    <div class="pc-section-header-{{ last_part }}">
      <h3>{{ section.settings.heading }}</h3>
      <div class="pc-slider-controls-{{ last_part }}">
        <button class="pc-btn-{{ last_part }} pc-previous-{{ last_part }}">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="{{ section.settings.arrow_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="pc-btn-{{ last_part }} pc-next-{{ last_part }}">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="{{ section.settings.arrow_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
    <div class="pc-slider-wrapper-{{ last_part }}">
      <div class="pc-slider-{{ last_part }}">
        {% for block in section.blocks %}
          <div class="pc-slider-item-{{ last_part }}">
            <div class="pc-item-content-{{ last_part }}">
              <div class="pc-img-box-{{ last_part }}">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: block.settings.image.alt }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <div class="pc-slider-body-{{ last_part }}">
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.text }}</p>
                <a href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const slider = document.querySelector('{{ sec_id }} .pc-slider-{{ last_part }}');
  const prevBtn = document.querySelector('{{ sec_id }} .pc-previous-{{ last_part }}');
  const nextBtn = document.querySelector('{{ sec_id }} .pc-next-{{ last_part }}');
  
  if (slider) {
    let currentIndex = 0;
    const itemWidth = slider.firstElementChild.offsetWidth + 15; // width + gap
    
    const updateSlider = () => {
      slider.scrollTo({
        left: currentIndex * itemWidth,
        behavior: 'smooth'
      });
    };
    
    prevBtn.addEventListener('click', () => {
      currentIndex = Math.max(0, currentIndex - 1);
      updateSlider();
    });
    
    nextBtn.addEventListener('click', () => {
      currentIndex = Math.min(
        slider.children.length - getVisibleItems(), 
        currentIndex + 1
      );
      updateSlider();
    });
    
    function getVisibleItems() {
      if (window.innerWidth >= 992) return {{ section.settings.items_per_view_desktop }};
      if (window.innerWidth >= 768) return {{ section.settings.items_per_view_tablet }};
      return {{ section.settings.items_per_view_mobile }};
    }
    
    // Handle responsive changes
    window.addEventListener('resize', () => {
      itemWidth = slider.firstElementChild.offsetWidth + 15;
      updateSlider();
    });
  }
});
</script>

