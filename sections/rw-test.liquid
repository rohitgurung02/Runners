{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<style>
  
  {{ sec_id }} .pc-financial-score-{{ last_part }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    justify-content: {{ section.settings.cards_alignment }};
    flex-wrap: wrap;
    gap: {{ section.settings.cards_gap }}px;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }
  
  {{ sec_id }} .pc-card-{{ last_part }} {
    display: flex;
    align-items: center;
    width: 100%;
    max-width: {{ section.settings.card_max_width }}px;
  }
  
  {{ sec_id }} .pc-card-surface-{{ last_part }} {
    animation: pc-fade-in-{{ last_part }} 1s cubic-bezier(0.33, 1, 0.68, 1);
    background: {{ section.settings.card_bg_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    {% if section.settings.card_shadow %}
    box-shadow: 0 {{ section.settings.card_shadow_offset }}px {{ section.settings.card_shadow_blur }}px rgba(0,0,0,{{ section.settings.card_shadow_opacity }});
    {% endif %}
    min-width: 0;
    transition: all 0.3s ease;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
  }
  
  {{ sec_id }} .pc-card-header-{{ last_part }},
  {{ sec_id }} .pc-card-badge-{{ last_part }},
  {{ sec_id }} .pc-card-graph-container-{{ last_part }},
  {{ sec_id }} .pc-card-description-{{ last_part }},
  {{ sec_id }} .pc-card-score-button-{{ last_part }} {
    animation: pc-fade-slide-up-{{ last_part }} 0.8s cubic-bezier(0.33, 1, 0.68, 1) forwards;
    opacity: 0;
  }
  
  {{ sec_id }} .pc-card-header-{{ last_part }} {
    display: flex;
    gap: {{ section.settings.header_gap }}px;
    justify-content: space-between;
    align-items: center;
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }
  
  {{ sec_id }} .pc-card-title-{{ last_part }} {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: {{ section.settings.title_color }};
    font-family: {{ section.settings.title_font.family }}, {{ section.settings.title_font.fallback_families }};
    letter-spacing: {{ section.settings.title_letter_spacing }}em;
    line-height: {{ section.settings.title_line_height }};
  }
  
  {{ sec_id }} .pc-card-badge-{{ last_part }} {
    animation-delay: 0.8s;
    border-radius: {{ section.settings.badge_border_radius }}px;
    flex-shrink: 0;
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    line-height: {{ section.settings.badge_line_height }};
    opacity: 0;
    padding: {{ section.settings.badge_padding_vertical }}px {{ section.settings.badge_padding_horizontal }}px;
    text-transform: {{ section.settings.badge_text_transform }};
    transform: translateY(67%);
    transition: all 0.3s ease;
  }
  
  {{ sec_id }} .pc-card-badge-weak-{{ last_part }} {
    background-color: {{ section.settings.weak_badge_bg_color }};
    color: {{ section.settings.weak_badge_text_color }};
  }
  
  {{ sec_id }} .pc-card-badge-moderate-{{ last_part }} {
    background-color: {{ section.settings.moderate_badge_bg_color }};
    color: {{ section.settings.moderate_badge_text_color }};
  }
  
  {{ sec_id }} .pc-card-badge-strong-{{ last_part }} {
    background-color: {{ section.settings.strong_badge_bg_color }};
    color: {{ section.settings.strong_badge_text_color }};
  }
  
  {{ sec_id }} .pc-card-graph-container-{{ last_part }} {
    animation-delay: 0.1s;
    position: relative;
    margin-bottom: {{ section.settings.graph_margin_bottom }}px;
  }
  
  {{ sec_id }} .pc-card-half-circle-{{ last_part }} {
    display: block;
    margin: auto;
    width: auto;
    max-width: 100%;
    height: {{ section.settings.graph_height }}px;
  }
  
  {{ sec_id }} .pc-card-half-circle-track-{{ last_part }} {
    stroke: {{ section.settings.graph_track_color }};
    stroke-width: {{ section.settings.graph_stroke_width }}px;
    transition: stroke 0.3s;
  }
  
  {{ sec_id }} .pc-card-description-{{ last_part }} {
    animation-delay: 0.2s;
    color: {{ section.settings.description_color }};
    margin-top: {{ section.settings.description_margin_top }}px;
    margin-bottom: {{ section.settings.description_margin_bottom }}px;
    min-height: {{ section.settings.description_min_height }}px;
    text-align: center;
    transition: color 0.3s;
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: {{ section.settings.description_font_weight }};
    line-height: {{ section.settings.description_line_height }};
    padding: 0 {{ section.settings.description_padding_horizontal }}px;
  }
  
  {{ sec_id }} .pc-card-score-{{ last_part }} {
    font-size: {{ section.settings.score_font_size }}px;
    font-weight: {{ section.settings.score_font_weight }};
    height: {{ section.settings.score_height }}px;
    overflow: hidden;
    position: relative;
    color: {{ section.settings.score_color }};
  }
  
  {{ sec_id }} .pc-card-score-digit-{{ last_part }} {
    display: inline-block;
  }
  
  {{ sec_id }} .pc-card-score-digits-{{ last_part }} {
    position: absolute;
    inset: 0;
  }
  
  {{ sec_id }} .pc-card-score-digits-dimmed-{{ last_part }} {
    color: {{ section.settings.dimmed_score_color }};
  }
  
  {{ sec_id }} .pc-card-score-digits-{{ last_part }} + .pc-card-score-digits-{{ last_part }} {
    transform: translateY(100%);
  }
  
  {{ sec_id }} .pc-card-score-animated-{{ last_part }} .pc-card-score-digit-{{ last_part }} {
    animation: pc-slide-to-top-{{ last_part }} 0.8s 0.4s cubic-bezier(0.65, 0, 0.35, 1) forwards;
  }
  
  {{ sec_id }} .pc-card-score-display-{{ last_part }} {
    position: absolute;
    top: 43px;
    width: 100%;
    text-align: center;
  }
  
  {{ sec_id }} .pc-card-score-label-{{ last_part }} {
    color: {{ section.settings.score_label_color }};
    text-transform: {{ section.settings.score_label_text_transform }};
    transition: color 0.3s;
    font-size: {{ section.settings.score_label_font_size }}px;
    font-weight: {{ section.settings.score_label_font_weight }};
    margin-top: {{ section.settings.score_label_margin_top }}px;
  }
  
  {{ sec_id }} .pc-card-score-button-{{ last_part }} {
    animation-delay: 0.3s;
    background-color: {{ section.settings.button_bg_color }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    box-shadow: 0 0 0 3px transparent;
    color: {{ section.settings.button_text_color }};
    cursor: pointer;
    font-size: {{ section.settings.button_font_size }}px;
    outline: transparent;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    width: 100%;
    transition: all 0.3s ease;
    font-family: {{ section.settings.button_font.family }}, {{ section.settings.button_font.fallback_families }};
    font-weight: {{ section.settings.button_font_weight }};
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing }}em;
  }
  
  {{ sec_id }} .pc-card-score-button-outlined-{{ last_part }} {
    background: transparent;
    border: {{ section.settings.button_outline_border_width }}px solid {{ section.settings.button_outline_border_color }};
    color: {{ section.settings.button_outline_text_color }};
  }
  
  {{ sec_id }} .pc-card-container-{{ last_part }} {
    overflow: hidden;
  }
  
  {{ sec_id }} .pc-card-content-{{ last_part }} {
    padding: {{ section.settings.card_padding_vertical }}px {{ section.settings.card_padding_horizontal }}px;
  }
  
  @keyframes pc-fade-in-{{ last_part }} {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes pc-fade-slide-up-{{ last_part }} {
    from {
      opacity: 0;
      transform: translateY(3em);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes pc-slide-to-top-{{ last_part }} {
    from { transform: translateY(0); }
    to { transform: translateY(-100%); }
  }

  /* Responsive styles */
  @media (max-width: 749px) {
    
    {{ sec_id }} .pc-financial-score-{{ last_part }} {
      gap: {{ section.settings.cards_gap_mobile }}px;
      padding-top: {{ section.settings.section_padding_top_mobile }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
      justify-content: {{ section.settings.cards_alignment_mobile }};
    }
    
    {{ sec_id }} .pc-card-{{ last_part }} {
      max-width: {{ section.settings.card_max_width_mobile }}px;
    }
    
    {{ sec_id }} .pc-card-title-{{ last_part }} {
      font-size: {{ section.settings.title_font_size_mobile }}px;
    }
    
    {{ sec_id }} .pc-card-score-button-{{ last_part }} {
      font-size: {{ section.settings.button_font_size_mobile }}px;
    }
    
    {{ sec_id }} .pc-card-content-{{ last_part }} {
      padding: {{ section.settings.card_padding_vertical_mobile }}px {{ section.settings.card_padding_horizontal_mobile }}px;
    }
  }
</style>

<div class="pc-financial-score-{{ last_part }}">
  {% for block in section.blocks %}
    {% assign score = block.settings.initial_score | default: nil %}
    {% assign max_score = section.settings.max_score %}
    {% assign has_score = false %}
    {% if score != blank %}
      {% assign has_score = true %}
    {% endif %}
    
    {% if has_score %}
      {% assign score_value = score | times: 1 %}
      {% if score_value >= section.settings.strong_threshold %}
        {% assign strength = 'strong' %}
      {% elsif score_value >= section.settings.moderate_threshold %}
        {% assign strength = 'moderate' %}
      {% else %}
        {% assign strength = 'weak' %}
      {% endif %}
    {% else %}
      {% assign strength = 'none' %}
    {% endif %}
    
    <div class="pc-card-{{ last_part }}" data-has-score="{{ has_score }}" data-initial-score="{{ score_value | default: 0 }}" data-block-id="{{ block.id }}">
      <div class="pc-card-surface-{{ last_part }}">
        <div class="pc-card-container-{{ last_part }}">
          <div class="pc-card-content-{{ last_part }}">
            <div class="pc-card-header-{{ last_part }}">
              <h2 class="pc-card-title-{{ last_part }}">{{ block.settings.title }}</h2>
              {% if strength != 'none' %}
                <span class="pc-card-badge-{{ last_part }} pc-card-badge-{{ strength }}-{{ last_part }}">{{ strength }}</span>
              {% endif %}
            </div>
            
            <div class="pc-card-graph-container-{{ last_part }}">
              <svg class="pc-card-half-circle-{{ last_part }}" viewBox="0 0 100 50" aria-hidden="true">
                <defs>
                  <linearGradient id="grad-{{ last_part }}-{{ forloop.index }}" x1="0" y1="0" x2="1" y2="0">
                    {% if strength == 'none' %}
                      <stop offset="0%" stop-color="{{ section.settings.graph_track_color }}" />
                      <stop offset="100%" stop-color="{{ section.settings.graph_track_color }}" />
                    {% elsif strength == 'weak' %}
                      <stop offset="0%" stop-color="{{ section.settings.weak_graph_start_color }}" />
                      <stop offset="50%" stop-color="{{ section.settings.weak_graph_mid_color }}" />
                      <stop offset="100%" stop-color="{{ section.settings.weak_graph_end_color }}" />
                    {% elsif strength == 'moderate' %}
                      <stop offset="0%" stop-color="{{ section.settings.moderate_graph_start_color }}" />
                      <stop offset="50%" stop-color="{{ section.settings.moderate_graph_mid_color }}" />
                      <stop offset="100%" stop-color="{{ section.settings.moderate_graph_end_color }}" />
                    {% elsif strength == 'strong' %}
                      <stop offset="0%" stop-color="{{ section.settings.strong_graph_start_color }}" />
                      <stop offset="50%" stop-color="{{ section.settings.strong_graph_mid_color }}" />
                      <stop offset="100%" stop-color="{{ section.settings.strong_graph_end_color }}" />
                    {% endif %}
                  </linearGradient>
                </defs>
                <g fill="none" stroke-width="{{ section.settings.graph_stroke_width }}" transform="translate(50, 50.5)">
                  <circle class="pc-card-half-circle-track-{{ last_part }}" r="45" />
                  <circle stroke="url(#grad-{{ last_part }}-{{ forloop.index }})" 
                          stroke-dasharray="141.37 141.37" 
                          r="45" 
                          stroke-dashoffset="{% if has_score %}{{ score_value | times: -1.4137 }}{% else %}-35.3425{% endif %}" />
                </g>
              </svg>
              
              <div class="pc-card-score-display-{{ last_part }}">
                <div class="pc-card-score-{{ last_part }} {% if has_score %}pc-card-score-animated-{{ last_part }}{% endif %}">
                  <div class="pc-card-score-digits-{{ last_part }} pc-card-score-digits-dimmed-{{ last_part }}">
                    <div class="pc-card-score-digit-{{ last_part }}">0</div>
                  </div>
                  <div class="pc-card-score-digits-{{ last_part }}">
                    {% if has_score %}
                      {% assign digits = score | split: '' %}
                      {% for digit in digits %}
                        <span class="pc-card-score-digit-{{ last_part }}">{{ digit }}</span>
                      {% endfor %}
                    {% endif %}
                  </div>
                </div>
                <div class="pc-card-score-label-{{ last_part }}">
                  {% if has_score %}out of {{ max_score }}{% else %}No score{% endif %}
                </div>
              </div>
            </div>
            
            <p class="pc-card-description-{{ last_part }}">{{ block.settings.description }}</p>
        
            <button class="pc-card-score-button-{{ last_part }} {% if has_score %}pc-card-score-button-outlined-{{ last_part }}{% endif %}" 
                    type="button" 
                    data-button-link="{{ block.settings.button_link | default: '#' }}">
              {% if has_score %}{{ block.settings.button_text }}{% else %}{{ section.settings.calculate_button_text }}{% endif %}
            </button>
          
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('{{ sec_id }} .pc-card-{{ last_part }}');
    
    // Initialize animations
    cards.forEach((card, index) => {
      setTimeout(() => {
        const container = card.querySelector('.pc-card-container-{{ last_part }}');
        if (container) {
          container.style.height = container.scrollHeight + 'px';
        }
      }, 300 + (index * 200));
    });

    // Handle button clicks
    document.querySelectorAll('{{ sec_id }} .pc-card-score-button-{{ last_part }}').forEach(button => {
      button.addEventListener('click', function() {
        const card = this.closest('.pc-card-{{ last_part }}');
        const hasScore = card.dataset.hasScore === 'true';
        const buttonLink = this.dataset.buttonLink;

        if (hasScore && buttonLink && buttonLink !== '#') {
          window.location.href = buttonLink;
        } else if (!hasScore) {
          // Generate random score
          const initialScore = parseInt(card.dataset.initialScore) || 0;
          const randomScore = Math.floor(Math.random() * {{ section.settings.max_score }}) + 1;
          
          // Update the score display
          const digitsContainer = card.querySelector('.pc-card-score-digits-{{ last_part }}:last-child');
          digitsContainer.innerHTML = '';
          
          String(randomScore).split('').forEach(digit => {
            digitsContainer.innerHTML += `<span class="pc-card-score-digit-{{ last_part }}">${digit}</span>`;
          });

          // Update the badge
          const badgeContainer = card.querySelector('.pc-card-badge-{{ last_part }}');
          if (badgeContainer) {
            let strength = 'none';
            if (randomScore >= {{ section.settings.strong_threshold }}) strength = 'strong';
            else if (randomScore >= {{ section.settings.moderate_threshold }}) strength = 'moderate';
            else strength = 'weak';
            
            badgeContainer.className = `pc-card-badge-{{ last_part }} pc-card-badge-${strength}-{{ last_part }}`;
            badgeContainer.textContent = strength;
          }

          // Update the button
          this.classList.add('pc-card-score-button-outlined-{{ last_part }}');
          this.textContent = '{{ section.settings.button_text }}';
          card.dataset.hasScore = 'true';
        }
      });
    });
  });
</script>

