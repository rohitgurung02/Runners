      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Slide Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "PWC - Image Slider #1",
      "category": "Image",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "title": "Elegance"
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "Mechanics"
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "Adventure"
          }
        }
      ]
