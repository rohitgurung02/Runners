{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<style>
  {{ sec_id }} {
    --pc-text-color: {{ section.settings.text_color }};
    --pc-glow-color: {{ section.settings.glow_color }};
    --pc-highlight-color: {{ section.settings.highlight_color }};
    --pc-card-bg: {{ section.settings.card_bg }};
    --pc-card-border: {{ section.settings.card_border }};
  }

  {{ sec_id }} .pc-testimonial-container-{{ last_part }} {
    position: relative;
    width: 100%;
    padding: {{ section.settings.desktop_padding_top }}px 0 {{ section.settings.desktop_padding_bottom }}px;
    overflow: hidden;
  }

  {{ sec_id }} .pc-testimonial-slider-{{ last_part }} {
    display: flex;
    transition: transform 0.5s ease;
    width: 100%;
  }

  {{ sec_id }} pc-testimonial-card-{{ last_part }} {
    display: block;
    min-width: calc(100% / {{ section.settings.slides_to_show }});
    padding: 0 15px;
    box-sizing: border-box;
  }

  {{ sec_id }} .pc-testimonial-inner-{{ last_part }} {
    background: var(--pc-card-bg);
    border-radius: 12px;
    padding: 30px;
    border: 1px solid var(--pc-card-border);
    position: relative;
    overflow: hidden;
    height: 100%;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-testimonial-inner-{{ last_part }}::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, var(--pc-glow-color) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: 0;
  }

  {{ sec_id }} .pc-testimonial-inner-{{ last_part }}:hover::before {
    opacity: 0.3;
  }

  {{ sec_id }} .pc-testimonial-text-{{ last_part }} {
    font-size: {{ section.settings.text_size_desktop }}px;
    line-height: 1.4;
    margin-bottom: 15px;
    position: relative;
    z-index: 2;
    color: var(--pc-text-color);
  }

  {{ sec_id }} .pc-testimonial-highlight-{{ last_part }} {
    color: var(--pc-highlight-color);
    font-weight: 700;
  }

  {{ sec_id }} .pc-slider-nav-{{ last_part }} {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    gap: 10px;
  }

  {{ sec_id }} .pc-slider-dot-{{ last_part }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-slider-dot-{{ last_part }}.active {
    background: var(--pc-highlight-color);
    transform: scale(1.2);
  }

  {{ sec_id }} .pc-slider-arrows-{{ last_part }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: calc(100% - 60px);
    left: 30px;
    display: flex;
    justify-content: space-between;
    pointer-events: none;
    z-index: 3;
  }

  {{ sec_id }} .pc-slider-arrow-{{ last_part }} {
    background: rgba(255,255,255,0.2);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    pointer-events: all;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255,255,255,0.3);
  }

  {{ sec_id }} .pc-slider-arrow-{{ last_part }}:hover {
    background: rgba(255,255,255,0.4);
  }

  {{ sec_id }} .pc-slider-arrow-icon-{{ last_part }} {
    width: 16px;
    height: 16px;
    color: var(--pc-text-color);
  }

  @media (max-width: 767px) {
    {{ sec_id }} .pc-testimonial-container-{{ last_part }} {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    {{ sec_id }} pc-testimonial-card-{{ last_part }} {
      min-width: 100%;
    }

    {{ sec_id }} .pc-testimonial-inner-{{ last_part }} {
      padding: 20px;
    }

    {{ sec_id }} .pc-testimonial-text-{{ last_part }} {
      font-size: {{ section.settings.text_size_mobile }}px;
    }

    {{ sec_id }} .pc-slider-arrows-{{ last_part }} {
      width: calc(100% - 40px);
      left: 20px;
    }

    {{ sec_id }} .pc-slider-arrow-{{ last_part }} {
      width: 30px;
      height: 30px;
    }
  }
</style>

<div class="pc-testimonial-container-{{ last_part }}">
  <div class="pc-slider-arrows-{{ last_part }}">
    <div class="pc-slider-arrow-{{ last_part }} prev-arrow-{{ last_part }}">
      <svg class="pc-slider-arrow-icon-{{ last_part }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <div class="pc-slider-arrow-{{ last_part }} next-arrow-{{ last_part }}">
      <svg class="pc-slider-arrow-icon-{{ last_part }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </div>

  <div class="pc-testimonial-slider-{{ last_part }}">
    {% for block in section.blocks %}
      <pc-testimonial-card-{{ last_part }}>
        <div class="pc-testimonial-inner-{{ last_part }}">
          <div class="pc-testimonial-text-{{ last_part }}">
            {% assign text_parts = block.settings.testimonial | split: '||' %}
            {% for part in text_parts %}
              {% if forloop.index0 == 1 %}
                <span class="pc-testimonial-highlight-{{ last_part }}">{{ part }}</span>
              {% else %}
                {{ part }}
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </pc-testimonial-card-{{ last_part }}>
    {% endfor %}
  </div>

  <div class="pc-slider-nav-{{ last_part }}">
    {% for block in section.blocks %}
      <div class="pc-slider-dot-{{ last_part }} {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></div>
    {% endfor %}
  </div>
</div>

<script>
  class PCTestimonialSlider{{ last_part | capitalize }} extends HTMLElement {
    constructor() {
      super();
      this.slider = this.querySelector('.pc-testimonial-slider-{{ last_part }}');
      this.dots = this.querySelectorAll('.pc-slider-dot-{{ last_part }}');
      this.prevBtn = this.querySelector('.prev-arrow-{{ last_part }}');
      this.nextBtn = this.querySelector('.next-arrow-{{ last_part }}');
      this.currentIndex = 0;
      this.totalSlides = this.querySelectorAll('pc-testimonial-card-{{ last_part }}').length;
      this.slidesToShow = {{ section.settings.slides_to_show }};
      
      this.prevBtn.addEventListener('click', () => this.prevSlide());
      this.nextBtn.addEventListener('click', () => this.nextSlide());
      
      this.dots.forEach(dot => {
        dot.addEventListener('click', () => {
          this.goToSlide(parseInt(dot.dataset.index));
        });
      });
      
      this.initAutoPlay();
      this.updateSlider();
    }
    
    updateSlider() {
      const slideWidth = 100 / this.slidesToShow;
      this.slider.style.transform = `translateX(-${this.currentIndex * slideWidth}%)`;
      this.dots.forEach(dot => dot.classList.remove('active'));
      this.dots[this.currentIndex].classList.add('active');
    }
    
    prevSlide() {
      this.currentIndex = (this.currentIndex - 1 + this.totalSlides) % this.totalSlides;
      this.updateSlider();
      this.resetAutoPlay();
    }
    
    nextSlide() {
      this.currentIndex = (this.currentIndex + 1) % this.totalSlides;
      this.updateSlider();
      this.resetAutoPlay();
    }
    
    goToSlide(index) {
      this.currentIndex = index;
      this.updateSlider();
      this.resetAutoPlay();
    }
    
    initAutoPlay() {
      this.autoPlayInterval = setInterval(() => this.nextSlide(), {{ section.settings.autoplay_speed }}000);
    }
    
    resetAutoPlay() {
      clearInterval(this.autoPlayInterval);
      this.initAutoPlay();
    }
  }

  customElements.define('pc-testimonial-slider-{{ last_part }}', PCTestimonialSlider{{ last_part | capitalize }});
</script>

