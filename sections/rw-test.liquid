{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<pc-news-carousel-{{ last_part }} class="pc-news-carousel">
  <div class="pc-container">
    <div class="pc-row">
      <div class="pc-col">
        <div class="pc-carousel-wrapper">
          <div class="pc-carousel pc-carousel-{{ last_part }}">
            {%- for block in section.blocks -%}
              <div class="pc-carousel-item">
                <article class="pc-news-teaser">
                  <div class="pc-date">
                    <div class="pc-day">{{ block.settings.category | default: "Category" }}</div>
                    <div class="pc-year">{{ block.settings.date | default: "Date" }}</div>
                  </div>
                  <div class="pc-image">
                    {%- if block.settings.image != blank -%}
                      {% assign image_class = 'pc-news-image-' | append: last_part %}
                      {{ 
                        block.settings.image
                        | image_url: width: 600
                        | image_tag: 
                            loading: 'lazy',
                            class: image_class,
                            alt: block.settings.title | escape
                      }}
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag: 'pc-placeholder-image' }}
                    {%- endif -%}
                  </div>
                  <div class="pc-title">
                    <span>{{ block.settings.title | default: "News title" }}</span>
                  </div>
                  <div class="pc-url">
                    <a href="{{ block.settings.url | default: '#' }}" rel="bookmark" title="{{ block.settings.title | escape | default: 'Read more' }}">> {{ section.settings.read_more_text | default: "Lire l'article" }}</a>
                  </div>    
                </article>
              </div>
            {%- else -%}
              {%- for i in (1..3) -%}
                <div class="pc-carousel-item">
                  <article class="pc-news-teaser">
                    <div class="pc-date">
                      <div class="pc-day">Category {{ i }}</div>
                      <div class="pc-year">{{ "now" | date: "%d %B %Y" }}</div>
                    </div>
                    <div class="pc-image">
                      {{ 'product-' | append: i | placeholder_svg_tag: 'pc-placeholder-image' }}
                    </div>
                    <div class="pc-title">
                      <span>Sample news title {{ i }}</span>
                    </div>
                    <div class="pc-url">
                      <a href="#" rel="bookmark" title="Sample news">> Lire l'article</a>
                    </div>    
                  </article>
                </div>
              {%- endfor -%}
            {%- endfor -%}
          </div>
          
          {%- if section.settings.all_articles_url != blank -%}
            <div class="pc-link-wrapper">
              <a href="{{ section.settings.all_articles_url }}" class="pc-button">
                {{ section.settings.all_articles_text | default: "Tous les articles" }}
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="{{ section.settings.button_text_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</pc-news-carousel-{{ last_part }}>

<style>
  {{ sec_id }} .pc-news-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding-top: {{ section.settings.desktop_padding_top }}px;
    padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  {{ sec_id }} .pc-container {
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
  }

  {{ sec_id }} .pc-row {
    display: flex;
    flex-wrap: wrap;
    margin-right: -15px;
    margin-left: -15px;
  }

  {{ sec_id }} .pc-col {
    flex: 0 0 100%;
    max-width: 100%;
    padding-left: {{ section.settings.desktop_offset }}%;
  }

  {{ sec_id }} .pc-carousel-wrapper {
    position: relative;
  }

  {{ sec_id }} .pc-carousel {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    margin-bottom: 40px;
  }

  {{ sec_id }} .pc-carousel-item {
    scroll-snap-align: start;
    flex: 0 0 300px;
    margin-right: 15px;
  }

  {{ sec_id }} .pc-news-teaser {
    border-left: 1px solid {{ section.settings.border_color }};
    padding: 0 20px;
    padding-bottom: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 400px;
    width: 265px;
  }

  {{ sec_id }} .pc-date {
    color: {{ section.settings.date_color }};
    font-size: {{ section.settings.date_font_size }}px;
    line-height: 2rem;
  }

  {{ sec_id }} .pc-day {
    font-size: {{ section.settings.category_font_size }}px;
    font-weight: bold;
    text-transform: uppercase;
  }

  {{ sec_id }} .pc-title span {
    font-weight: bold;
    margin: 15px 0;
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
  }

  {{ sec_id }} .pc-url a {
    color: {{ section.settings.link_color }};
    font-size: {{ section.settings.link_font_size }}px;
    text-decoration: none;
  }

  {{ sec_id }} .pc-image {
    height: 150px;
    width: 100%;
    margin-bottom: 15px;
  }

  {{ sec_id }} .pc-image img,
  {{ sec_id }} .pc-image svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  {{ sec_id }} .pc-link-wrapper {
    display: flex;
    justify-content: flex-start;
    position: relative;
    margin-top: 20px;
  }

  {{ sec_id }} .pc-button {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    padding: {{ section.settings.button_padding_top }}px {{ section.settings.button_padding_right }}px;
    font-size: {{ section.settings.button_font_size }}px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-button:hover {
    opacity: 0.9;
  }

  {{ sec_id }} .pc-button svg {
    width: {{ section.settings.button_font_size }}px;
    height: {{ section.settings.button_font_size }}px;
  }

  /* Carousel Navigation */
  {{ sec_id }} .owl-nav {
    display: flex;
    gap: 10px;
    position: absolute;
    right: 0;
    top: -60px;
  }

  {{ sec_id }} .owl-nav button {
    background: {{ section.settings.arrow_bg_color }} !important;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .owl-nav button:hover {
    background: {{ section.settings.arrow_bg_hover_color }} !important;
  }

  {{ sec_id }} .owl-nav button span {
    display: none;
  }

  /* Admin-specific styles */
  .shopify-design-mode {{ sec_id }} .pc-carousel {
    display: flex !important;
    flex-wrap: wrap;
    gap: 20px;
  }

  .shopify-design-mode {{ sec_id }} .pc-carousel-item {
    flex: 0 0 calc(33.333% - 20px);
  }

  @media (max-width: 767.98px) {
    {{ sec_id }} .pc-news-carousel {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }

    {{ sec_id }} .pc-col {
      padding-left: 0;
    }

    {{ sec_id }} .pc-link-wrapper {
      justify-content: center;
    }

    {{ sec_id }} .pc-date {
      line-height: 2.5rem;
    }

    {{ sec_id }} .owl-nav {
      position: static;
      justify-content: center;
      margin-top: 20px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Only initialize carousel in live view, not in theme editor
    if (!document.querySelector('html').classList.contains('shopify-design-mode')) {
      const carousel = document.querySelector('{{ sec_id }} .pc-carousel');
      if (carousel && typeof $.fn.owlCarousel === 'function') {
        $(carousel).owlCarousel({
          margin: 15,
          nav: true,
          dots: true,
          center: false,
          navText: [
            `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 18L9 12L15 6" stroke="{{ section.settings.arrow_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>`,
            `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 18L15 12L9 6" stroke="{{ section.settings.arrow_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>`
          ],
          responsive: {
            0: {
              items: 1
            },
            600: {
              items: 2
            },
            1000: {
              items: 3
            }
          }
        });
      }
    }
  });
</script>

