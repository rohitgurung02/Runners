{%- assign sec_id = '#shopify-section-' | append: section.id -%}
{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<style>
  {{ sec_id }} .pc-split-hero-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }  

  {{ sec_id }} .pc-split-hero-container {
    display: flex;
    flex-direction: column;
    min-height: {{ section.settings.mobile_min_height }}vh;
  }

  {{ sec_id }} .pc-split-hero-content {
    flex: 1;
    background-color: {{ section.settings.content_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.mobile_content_padding }}px;
    order: {{ section.settings.mobile_content_order }};
  }

  {{ sec_id }} .pc-split-hero-text {
    text-align: {{ section.settings.mobile_text_alignment }};
    max-width: 100%;
  }

  {{ sec_id }} .pc-split-hero-heading {
    font-size: {{ section.settings.mobile_heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
    line-height: 1.2;
  }

  {{ sec_id }} .pc-split-hero-description {
    font-size: {{ section.settings.mobile_description_size }}px;
    color: {{ section.settings.description_color }};
    margin-bottom: {{ section.settings.description_spacing }}px;
    line-height: 1.5;
  }

  {{ sec_id }} .pc-split-hero-button {
    display: inline-block;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: {{ section.settings.mobile_button_padding_y }}px {{ section.settings.mobile_button_padding_x }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    text-decoration: none;
    font-weight: {{ section.settings.button_font_weight }};
    font-size: {{ section.settings.mobile_button_font_size }}px;
    {% if section.settings.enable_button_shadow %}
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    {% endif %}
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-split-hero-button:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    transform: translateY(-2px);
    {% if section.settings.enable_button_shadow %}
      box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    {% endif %}
  }

  {{ sec_id }} .pc-split-hero-image {
    flex: 1;
    position: relative;
    overflow: hidden;
    order: {{ section.settings.mobile_image_order }};
  }

  {{ sec_id }} .pc-split-hero-img-{{ last_part }},
  {{ sec_id }} .pc-split-hero-placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (min-width: 768px) {
    {{ sec_id }} .pc-split-hero-container {
      flex-direction: row;
      min-height: {{ section.settings.desktop_min_height }}vh;
    }

    {{ sec_id }} .pc-split-hero-content {
      padding: {{ section.settings.desktop_content_padding }}px;
      order: {{ section.settings.desktop_content_order }};
    }

    {{ sec_id }} .pc-split-hero-text {
      text-align: {{ section.settings.desktop_text_alignment }};
      max-width: {{ section.settings.text_max_width }}%;
    }

    {{ sec_id }} .pc-split-hero-heading {
      font-size: {{ section.settings.desktop_heading_size }}px;
    }

    {{ sec_id }} .pc-split-hero-description {
      font-size: {{ section.settings.desktop_description_size }}px;
    }

    {{ sec_id }} .pc-split-hero-button {
      padding: {{ section.settings.desktop_button_padding_y }}px {{ section.settings.desktop_button_padding_x }}px;
      font-size: {{ section.settings.desktop_button_font_size }}px;
    }

    {{ sec_id }} .pc-split-hero-image {
      order: {{ section.settings.desktop_image_order }};
    }
  }
</style>

<pc-split-hero-{{ last_part }} class="pc-split-hero-wrapper">
  <div class="pc-split-hero-container">
    <div class="pc-split-hero-content">
      <div class="pc-split-hero-text">
        <h2 class="pc-split-hero-heading">{{ section.settings.heading }}</h2>
        <p class="pc-split-hero-description">{{ section.settings.description }}</p>
        <a href="{{ section.settings.button_link }}" class="pc-split-hero-button">{{ section.settings.button_text }}</a>
      </div>
    </div>
    <div class="pc-split-hero-image">
      {%- if section.settings.image != blank -%}
        {% assign image_class = 'pc-split-hero-img-' | append: last_part %}
        {{ 
          section.settings.image
          | image_url: width: 1200
          | image_tag: 
              loading: 'lazy', 
              class: image_class,
              alt: section.settings.image.alt
        }}
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'pc-split-hero-placeholder' }}
      {%- endif -%}
    </div>
  </div>
</pc-split-hero-{{ last_part }}>

