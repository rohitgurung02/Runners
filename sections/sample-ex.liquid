{%- style -%}
  .faq-section {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: var(--font-body-family);
  }
  
  .faq-section__divider {
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    margin: 30px 0;
  }
  
  .faq-item {
    margin-bottom: 20px;
  }
  
  .faq-question {
    font-weight: bold;
    margin-bottom: 10px;
    cursor: pointer;
    position: relative;
    padding-left: 25px;
    font-size: 1.6rem;
  }
  
  .faq-question:before {
    content: "+";
    position: absolute;
    left: 0;
    font-size: 2rem;
    line-height: 1;
  }
  
  .faq-item.active .faq-question:before {
    content: "-";
  }
  
  .faq-answer {
    padding-left: 25px;
    display: none;
    font-size: 1.4rem;
  }
  
  .faq-item.active .faq-answer {
    display: block;
  }
  
  .contact-form {
    margin-top: 20px;
  }
  
  .form-field {
    margin-bottom: 15px;
  }
  
  .form-field label {
    display: block;
    margin-bottom: 5px;
    font-size: 1.4rem;
  }
  
  .form-field input,
  .form-field textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 4px;
    font-size: 1.4rem;
  }
  
  .form-field textarea {
    min-height: 100px;
  }
  
  .send-button {
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    padding: 12px 24px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1.4rem;
    transition: opacity 0.3s ease;
  }
  
  .send-button:hover {
    opacity: 0.9;
  }
  
  @media screen and (min-width: 750px) {
    .faq-section {
      padding: 60px 20px;
    }
  }
{%- endstyle -%}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      question.addEventListener('click', () => {
        item.classList.toggle('active');
      });
    });
  });
</script>

<div class="faq-section">
  <h1 class="h0">{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>
  
  <div class="faq-section__divider"></div>
  <div class="flex-items">
  {%- if section.settings.show_international_question -%}
    <h2 class="h2">{{ section.settings.international_heading }}</h2>
  {%- endif -%}
  
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'question' -%}
        <div class="faq-item" {{ block.shopify_attributes }}>
          <h3 class="faq-question">{{ block.settings.question }}</h3>
          <div class="faq-answer">{{ block.settings.answer }}</div>
        </div>
    {%- endcase -%}
  {%- endfor -%}
  
  {%- if section.settings.show_contact_form -%}
    <div class="faq-section__divider"></div>
    
    <h2 class="h2">{{ section.settings.contact_heading }}</h2>
    <p>{{ section.settings.contact_subheading }}</p>
    </div>
  
    <div class="contact-form">
      {%- form 'contact', id: 'FAQContactForm' -%}
        {%- if form.posted_successfully? -%}
          <div class="form-status form-status-list form__message" tabindex="-1" autofocus>
            {% render 'icon-success' %}
            {{ 'templates.contact.form.post_success' | t }}
          </div>
        {%- elsif form.errors -%}
          <div class="form__message">
            <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
              {% render 'icon-error' %}
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
          </div>
          <ul class="form-status-list caption-large" role="list">
            <li>
              <a href="#FAQContactForm-email">
                {{ form.errors.translated_fields['email'] | capitalize }}
                {{ form.errors.messages['email'] }}
              </a>
            </li>
          </ul>
        {%- endif -%}
        
        <div class="form-field">
          <label for="FAQContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
          <input
            type="text"
            name="contact[name]"
            id="FAQContactForm-name"
            autocomplete="name"
            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
          >
        </div>
        
        <div class="form-field">
          <label for="FAQContactForm-email">{{ 'templates.contact.form.email' | t }}</label>
          <input
            type="email"
            name="contact[email]"
            id="FAQContactForm-email"
            autocomplete="email"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            required
          >
        </div>
        
        <div class="form-field">
          <label for="FAQContactForm-body">{{ 'templates.contact.form.message' | t }}</label>
          <textarea
            rows="5"
            name="contact[body]"
            id="FAQContactForm-body"
          >{% if form.body %}{{ form.body }}{% endif %}</textarea>
        </div>
        
        <button type="submit" class="send-button">
          {{ section.settings.button_label | escape }}
        </button>
      {%- endform -%}
    </div>
  {%- endif -%}
</div>

