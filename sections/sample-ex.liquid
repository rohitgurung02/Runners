<div class="pc-all-pricing-table">
  <div class="page-width">
    <ul class="pc-pricing-table">
      {% for block in section.blocks %}
        {% assign plan = block.settings %}
        <li class="pc-pricing-table__item{% if block.settings.popular %} pc-pricing-table__item--popular{% endif %}"
            {% if block.settings.popular %}data-popular="Popular"{% endif %}
            style="box-shadow: {{ block.settings.box_shadow_x }}px {{ block.settings.box_shadow_y }}px {{ block.settings.box_shadow_blur }}px {{ block.settings.box_shadow_spread }}px {{ block.settings.box_shadow_color }};
                   --pc-pricing-table-color: {{ block.settings.accent_color }};"
            onmouseover="this.style.boxShadow='{{ block.settings.hover_box_shadow_x }}px {{ block.settings.hover_box_shadow_y }}px {{ block.settings.hover_box_shadow_blur }}px {{ block.settings.hover_box_shadow_spread }}px {{ block.settings.hover_box_shadow_color }}';"
            onmouseout="this.style.boxShadow='{{ block.settings.box_shadow_x }}px {{ block.settings.box_shadow_y }}px {{ block.settings.box_shadow_blur }}px {{ block.settings.box_shadow_spread }}px {{ block.settings.box_shadow_color }}';">
          
          {% if plan.image %}
            <img
                src="{{ plan.image | image_url }}"
                alt=""
                class="pc-pricing-table__img"
                style="width: {{ plan.image_width }}px; height: auto;"
            />
          {% endif %}
          <h3 class="pc-pricing-table__title" style="
            color: {{ plan.title_color }};
            font-weight: {{ plan.title_font_weight }};
            font-style: {{ plan.title_font_style }};
            letter-spacing: {{ plan.title_letter_spacing }}px;
            text-decoration: {{ plan.title_text_decoration }};
            {% if plan.title_text_decoration != 'none' %}text-decoration-color: {{ plan.title_text_decoration_color }};{% endif %}
            padding-top: {{ plan.title_padding_top }}px;
            padding-bottom: {{ plan.title_padding_bottom }}px;
            font-size: {% case plan.title_text_size %}
              {% when 'small' %}14px
              {% when 'medium' %}18px
              {% when 'large' %}24px
              {% else %}16px
            {% endcase %};
          ">
            {{ plan.title }}
          </h3>
  
          <p class="pc-pricing-table__description">
            <span class="pc-pricing-table__tagline" style="
              color: {{ plan.tagline_text_color }};
              text-align: {{ plan.tagline_text_align }};
              font-weight: {{ plan.tagline_font_weight }};
              font-style: {{ plan.tagline_font_style }};
              letter-spacing: {{ plan.tagline_letter_spacing }}px;
              text-decoration: {{ plan.tagline_text_decoration }};
              {% if plan.tagline_text_decoration != 'none' %}text-decoration-color: {{ plan.tagline_text_decoration_color }};{% endif %}
              padding-top: {{ plan.tagline_padding_top }}px;
              padding-bottom: {{ plan.tagline_padding_bottom }}px;
              font-size: {% case plan.tagline_text_size %}
                {% when 'small' %}14px
                {% when 'medium' %}18px
                {% when 'large' %}24px
                {% else %}16px
              {% endcase %};
            ">
              {{ plan.tagline }}
            </span>
            
            <span class="pc-pricing-table__price" style="
              color: {{ plan.price_text_color }};
              text-align: {{ plan.price_text_align }};
              font-weight: {{ plan.price_font_weight }};
              font-style: {{ plan.price_font_style }};
              letter-spacing: {{ plan.price_letter_spacing }}px;
              text-decoration: {{ plan.price_text_decoration }};
              {% if plan.price_text_decoration != 'none' %}text-decoration-color: {{ plan.price_text_decoration_color }};{% endif %}
              padding-top: {{ plan.price_padding_top }}px;
              padding-bottom: {{ plan.price_padding_bottom }}px;
              font-size: {% case plan.price_text_size %}
                {% when 'small' %}14px
                {% when 'medium' %}18px
                {% when 'large' %}24px
                {% else %}16px
              {% endcase %};
            ">
              {{ plan.price }}
            </span>
            <span class="pc-pricing-table__label" style="
              color: {{ plan.label_text_color }};
              text-align: {{ plan.label_text_align }};
              font-weight: {{ plan.label_font_weight }};
              font-style: {{ plan.label_font_style }};
              letter-spacing: {{ plan.label_letter_spacing }}px;
              text-decoration: {{ plan.label_text_decoration }};
              {% if plan.label_text_decoration != 'none' %}text-decoration-color: {{ plan.label_text_decoration_color }};{% endif %}
              padding-top: {{ plan.label_padding_top }}px;
              padding-bottom: {{ plan.label_padding_bottom }}px;
              font-size: {% case plan.label_text_size %}
                {% when 'small' %}14px
                {% when 'medium' %}18px
                {% when 'large' %}24px
                {% else %}16px
              {% endcase %};
            ">
              {{ plan.label }}
            </span>
            <span class="pc-pricing-table__save" style="
              color: {{ plan.save_text_color }};
              text-align: {{ plan.save_text_align }};
              font-weight: {{ plan.save_font_weight }};
              font-style: {{ plan.save_font_style }};
              letter-spacing: {{ plan.save_letter_spacing }}px;
              text-decoration: {{ plan.save_text_decoration }};
              {% if plan.save_text_decoration != 'none' %}text-decoration-color: {{ plan.save_text_decoration_color }};{% endif %}
              padding-top: {{ plan.save_padding_top }}px;
              padding-bottom: {{ plan.save_padding_bottom }}px;
              font-size: {% case plan.save_text_size %}
                {% when 'small' %}14px
                {% when 'medium' %}18px
                {% when 'large' %}24px
                {% else %}16px
              {% endcase %};
            ">
              {{ plan.save }}
            </span>
          </p>
          
          <ul class="pc-pricing-table__products">
            {% assign included = plan.included_items | split: ',' %}
            {% for item in included %}
              {% assign item_trimmed = item | strip %}
              <li class="pc-pricing-table__product">
                <a href="#" style="color: {{ plan.product_text_color }};">
                  {{ item_trimmed }}
                </a>
              </li>
            {% endfor %}
            {% assign excluded = plan.excluded_items | split: ',' %}
            {% for item in excluded %}
              {% assign item_trimmed = item | strip %}
              <li class="pc-pricing-table__product pc-pricing-table__product--excluded">
                <span style="color: {{ plan.excluded_product_text_color }};">
                  {{ item_trimmed }}
                </span>
              </li>
            {% endfor %}
          </ul>
          
          <a href="{{ plan.button_url | default: '#' }}"
            class="pc-pricing-table__button"
            style="
              background: {{ plan.button_background_color }};
              color: {{ plan.button_text_color }};
              font-size: {{ plan.button_font_size }}px;
              font-weight: {{ plan.button_font_weight }};
              text-transform: {{ plan.button_text_transform }};
              letter-spacing: {{ plan.button_letter_spacing }}px;
              text-decoration: {{ plan.button_text_decoration }};
              border: 1px solid {{ plan.button_border_color }};
              border-radius: {{ plan.button_border_radius }}px;
              padding: {{ plan.button_padding_vertical }}px {{ plan.button_padding_horizontal }}px;
              min-width: {{ plan.button_min_width }}px;
            "
            onmouseover="this.style.background='{{ plan.button_hover_background_color }}'; this.style.color='{{ plan.button_hover_text_color }}'; this.style.borderColor='{{ plan.button_hover_border_color }}';"
            onmouseout="this.style.background='{{ plan.button_background_color }}'; this.style.color='{{ plan.button_text_color }}'; this.style.borderColor='{{ plan.button_border_color }}';"
          >
            {{ plan.button_label }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
 
