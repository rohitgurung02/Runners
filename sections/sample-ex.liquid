          {%- when 'text' -%}
            <span class="pc-content pc-text pc-content-{{ block.id }}">
              {{ block.settings.new_text | escape }}
            </span>
          {%- when 'image' -%}
            {%- if block.settings.image != blank -%}
              <img
                class="pc-image"
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt | escape }}"
                width="{{ image_width }}"
                height="{{ image_height }}"
