{% style %}
  .pc-hover-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .pc-hover-container {
    display: flex;
    gap: {{ section.settings.gap_between }}px;
    height: {{ section.settings.image_height }}px;
  }

  .pc-hover-image {
    position: relative;
    flex: 1;
    overflow: hidden;
    transition: all 0.5s ease;
    border-radius: 4px;
  }

  .pc-hover-image:hover {
    flex: 2;
  }

  .pc-hover-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .pc-hover-image:hover img {
    transform: scale(1.05);
  }

  .pc-image-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
    transform: translateY(100%);
    transition: all 0.5s ease;
    opacity: 0;
  }

  .pc-hover-image:hover .pc-image-content {
    transform: translateY(0);
    opacity: 1;
  }

  .pc-image-title {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_font_size }}px;
    margin-bottom: 10px;
    transition: color 0.3s ease;
  }

  .pc-hover-image:hover .pc-image-title {
    color: {{ block.settings.title_hover_color }};
  }

  .pc-image-description {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_font_size }}px;
    margin-bottom: 15px;
    transition: color 0.3s ease;
  }

  .pc-hover-image:hover .pc-image-description {
    color: {{ block.settings.description_hover_color }};
  }

  .pc-image-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.button_bg }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .pc-image-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
{% endstyle %}

<div class="pc-hover-section">
  <div class="pc-hover-container">
    {% for block in section.blocks %}
    <div class="pc-hover-image">
      {% if block.settings.image != blank %}
        <img src="{{ block.settings.image | img_url: '1200x' }}" alt="{{ block.settings.title | escape }}">
      {% endif %}

      <div class="pc-image-content">
        <h3 class="pc-image-title">{{ block.settings.title }}</h3>
        <div class="pc-image-description">{{ block.settings.description }}</div>
        {% if block.settings.button_text != blank %}
          <a href="{{ block.settings.link }}" class="pc-image-button">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Split Banner Hover Effect",
  "settings": [
    {
      "type": "select",
      "id": "page_width",
      "label": "Section width",
      "options": [
        { "value": "full", "label": "Full width" },
        { "value": "wide", "label": "Wide (1200px)" },
        { "value": "normal", "label": "Normal (1000px)" },
        { "value": "narrow", "label": "Narrow (800px)" }
      ],
      "default": "wide"
    },
    {
      "type": "range",
      "id": "gap_between",
      "label": "Gap between images",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Section height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "default": 450
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Box",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Collection Title"
        },
        {
          "type": "range",
          "id": "title_font_size",
          "label": "Title font size (px)",
          "min": 10,
          "max": 50,
          "step": 1,
          "default": 32
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title color (normal)",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "title_hover_color",
          "label": "Title color (hover)",
          "default": "#ffcc00"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Add your product description here</p>"
        },
        {
          "type": "range",
          "id": "description_font_size",
          "label": "Description font size (px)",
          "min": 10,
          "max": 30,
          "step": 1,
          "default": 16
        },
        {
          "type": "color",
          "id": "description_color",
          "label": "Description color (normal)",
          "default": "#f5f5f5"
        },
        {
          "type": "color",
          "id": "description_hover_color",
          "label": "Description color (hover)",
          "default": "#eeeeee"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "header",
          "content": "Button Colors"
        },
        {
          "type": "color",
          "id": "button_bg",
          "label": "Button background",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button text color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "pwc Split Hover Banner",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}