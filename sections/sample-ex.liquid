{%- style -%}
  .image-comparison {
    max-width: 48.063em;
    margin-right: auto;
    margin-left: auto;
    --position: 50%;
  }

  .image-comparison__slider-wrapper {
    position: relative;
  }

  .image-comparison__label {
    font-size: 0;
    line-height: 0;
  }

  .image-comparison__label,
  .image-comparison__range {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    background-color: transparent;
    border: none;
    appearance: none;
    outline: none;
    cursor: ew-resize;
    z-index: 20;
  }

  @media (hover: hover) {
    .image-comparison__range:hover ~ .image-comparison__slider .image-comparison__thumb {
      transform: scale(1.2);
    }
  }

  .image-comparison .image-comparison__slider-wrapper .image-comparison__range:active,
  .image-comparison .image-comparison__slider-wrapper .image-comparison__range:focus,
  .image-comparison .image-comparison__slider-wrapper .image-comparison__range--active {
    ~ .image-comparison__slider .image-comparison__thumb {
      transform: scale(0.8);
      background-color: rgba({{ section.settings.slider_color | default: '#0066cc' }}, 0.5);
    }
  }

  .image-comparison__image-wrapper--overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: var(--position);
    height: 100%;
    overflow: hidden;
  }

  .image-comparison__figure {
    margin: 0;
    position: relative;
    padding-top: 66.666666667%;
    
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: {{ section.settings.overlay_color | default: '#f5f5f5' }};
      z-index: 1;
    }
  }

  .image-comparison__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    overflow: hidden;
  }

  .image-comparison__figure--overlay .image-comparison__image {
    z-index: 2;
  }

  .image-comparison__caption {
    position: absolute;
    bottom: 12px;
    min-width: max-content;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    color: {{ section.settings.caption_text_color | default: '#ffffff' }};
    font-weight: bold;
    text-transform: uppercase;
    font-size: {{ section.settings.caption_font_size | default: 14 }}px;
    z-index: 3;
  }

  .image-comparison__caption--before {
    left: 12px;
  }

  .image-comparison__caption--after {
    right: 12px;
    text-align: right;
  }

  .image-comparison__caption-body {
    max-width: 40vmin;
    padding: 6px 12px;
    background-color: rgba({{ section.settings.caption_bg_color | default: '#000000' }}, 0.55);
  }

  .image-comparison__slider {
    position: absolute;
    top: 0;
    left: var(--position);
    width: 2px;
    height: 100%;
    background-color: {{ section.settings.slider_line_color | default: '#ffffff' }};
    transition: background-color 0.3s ease-in-out;
    z-index: 10;

    .image-comparison__range--active ~ & {
      background-color: rgba({{ section.settings.slider_line_active_color | default: '#ffffff' }}, 0);
    }
  }

  .image-comparison__thumb {
    position: absolute;
    top: calc(50% - 20px);
    left: calc(50% - 20px);
    width: 40px;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: {{ section.settings.slider_color | default: '#0066cc' }};
    color: {{ section.settings.slider_icon_color | default: '#ffffff' }};
    border-radius: 50%;
    box-shadow: 0 0 22px 0 rgba({{ section.settings.slider_shadow_color | default: '#000000' }}, 0.5);
    transform-origin: center;
    transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out;
    z-index: 11;
  }

  @media screen and (max-width: 40.063em) {
    .image-comparison__caption {
      font-size: 12px;
    }
  }

  .image-comparison__range::-webkit-slider-runnable-track {
    width: 40px;
    height: 40px;
    opacity: 0;
  }

  .image-comparison__range::-moz-range-thumb {
    width: 40px;
    height: 40px;
    opacity: 0;
  }

  .image-comparison__range::-webkit-slider-thumb {
    width: 40px;
    height: 40px;
    opacity: 0;
  }

  .image-comparison__range::-ms-fill-lower {
    background-color: transparent;
  }

  .image-comparison__range::-ms-track {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    margin: 0;
    padding: 0;
    background-color: transparent;
    color: transparent;
    outline: none;
    cursor: col-resize;
  }

  .image-comparison__range::-ms-thumb {
    width: 0.5%;
    height: 100%;
    opacity: 0;
  }

  .image-comparison__range::-ms-tooltip {
    display: none;
  }

  .placeholder-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-svg {
    width: 100%;
    height: 100%;
    fill: #999;
  }
{%- endstyle -%}

<section class="image-comparison" data-component="image-comparison-slider" id="shopify-section-{{ section.id }}">
  <div class="image-comparison__slider-wrapper pc-ba-container">
    <label for="image-comparison-range-{{ section.id }}" class="image-comparison__label">Move image comparison slider</label>
    <input type="range" min="0" max="100" value="50" class="image-comparison__range pc-ba-slider-input" id="image-comparison-range-{{ section.id }}" data-image-comparison-range="">

    <div class="image-comparison__image-wrapper image-comparison__image-wrapper--overlay" data-image-comparison-overlay="">
      <figure class="image-comparison__figure image-comparison__figure--overlay">
        {%- if section.settings.before_image != blank -%}
          <img src="{{ section.settings.before_image | img_url: '1200x' }}" 
               alt="{{ section.settings.before_image.alt | escape }}" 
               class="image-comparison__image"
               loading="lazy"
               width="{{ section.settings.before_image.width }}"
               height="{{ section.settings.before_image.height }}">
        {%- else -%}
          <div class="image-comparison__image placeholder-background">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}

        <figcaption class="image-comparison__caption image-comparison__caption--before">
          <span class="image-comparison__caption-body">{{ section.settings.before_label }}</span>
        </figcaption>
      </figure>
    </div>

    <div class="image-comparison__slider" data-image-comparison-slider="">
      <span class="image-comparison__thumb" data-image-comparison-thumb="">
        <svg class="image-comparison__thumb-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="10" viewBox="0 0 18 10" fill="currentColor">
          <path class="image-comparison__thumb-icon--left" d="M12.121 4.703V.488c0-.302.384-.454.609-.24l4.42 4.214a.33.33 0 0 1 0 .481l-4.42 4.214c-.225.215-.609.063-.609-.24V4.703z"></path>
          <path class="image-comparison__thumb-icon--right" d="M5.879 4.703V.488c0-.302-.384-.454-.609-.24L.85 4.462a.33.33 0 0 0 0 .481l4.42 4.214c.225.215.609.063.609-.24V4.703z"></path>
        </svg>
      </span>
    </div>

    <div class="image-comparison__image-wrapper">
      <figure class="image-comparison__figure">
        {%- if section.settings.after_image != blank -%}
          <img src="{{ section.settings.after_image | img_url: '1200x' }}" 
               alt="{{ section.settings.after_image.alt | escape }}" 
               class="image-comparison__image"
               loading="lazy"
               width="{{ section.settings.after_image.width }}"
               height="{{ section.settings.after_image.height }}">
        {%- else -%}
          <div class="image-comparison__image placeholder-background">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}

        <figcaption class="image-comparison__caption image-comparison__caption--after">
          <span class="image-comparison__caption-body">{{ section.settings.after_label }}</span>
        </figcaption>
      </figure>
    </div>
  </div>
</section>

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const container = document.querySelector(`#shopify-section-${sectionId} .pc-ba-container`);
  const slider = document.querySelector(`#shopify-section-${sectionId} .pc-ba-slider-input`);

  if (slider && container) {
    slider.addEventListener('input', (e) => {
      container.style.setProperty('--position', `${e.target.value}%`);
    });
  }
})();
</script>

