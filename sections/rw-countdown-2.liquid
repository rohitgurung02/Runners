{%- liquid
  assign sec_id = '#shopify-section-' | append: section.id
  assign parts = sec_id | split: '_'
  assign last_lower = parts | last
  assign last_part = last_lower | downcase
-%}

<style>
  {{ sec_id }} .pc-card-carousel{
    box-shadow: 0px 0px 1px 1px #00000042;
  }
  
  {{ sec_id }} {
    --pc-spacer-{{ last_part }}: {{ section.settings.spacer }}px;
    --pc-card-bg-{{ last_part }}: {{ section.settings.card_bg }};
    --pc-subtitle-color-{{ last_part }}: {{ section.settings.subtitle_color }};
    --pc-title-color-{{ last_part }}: {{ section.settings.title_color }};
    --pc-text-color-{{ last_part }}: {{ section.settings.text_color }};
    --pc-button-color-{{ last_part }}: {{ section.settings.button_color }};
    --pc-button-bg-{{ last_part }}: {{ section.settings.button_bg }};
    --pc-button-hover-{{ last_part }}: {{ section.settings.button_hover }};
    --pc-arrow-color-{{ last_part }}: {{ section.settings.arrow_color }};
    --pc-arrow-bg-{{ last_part }}: {{ section.settings.arrow_bg }};
    --pc-arrow-hover-{{ last_part }}: {{ section.settings.arrow_hover }};
    --pc-image-width-{{ last_part }}: {{ section.settings.image_width }}%;
    --pc-image-height-{{ last_part }}: {{ section.settings.image_height }}px;
    --pc-container-width-{{ last_part }}: {{ section.settings.container_width }}%;
    --pc-container-max-width-{{ last_part }}: {{ section.settings.container_max_width }}px;
    --pc-container-height-{{ last_part }}: {{ section.settings.container_height }}px;
    --pc-mobile-container-height-{{ last_part }}: {{ section.settings.mobile_container_height }}px;
  }

  {{ sec_id }} .pc-section-container-{{ last_part }} {
    width: var(--pc-container-width-{{ last_part }});
    max-width: var(--pc-container-max-width-{{ last_part }});
    margin: 0 auto;
    padding: {{ section.settings.container_padding }}px;
  }

  {{ sec_id }} .pc-card-carousel-{{ last_part }} {
    position: relative;
    width: 100%;
    height: var(--pc-container-height-{{ last_part }});
    overflow: hidden;
    border-radius: {{ section.settings.container_radius }}px;
  }

  {{ sec_id }} .pc-card-{{ last_part }} {
    display: none;
    height: 100%;
    background: var(--pc-card-bg-{{ last_part }});
    box-shadow: {% if section.settings.enable_shadow %}0 4px 6px rgba(0, 0, 0, 0.1){% else %}none{% endif %};
    border-radius: {{ section.settings.card_radius }}px;
  }

  {{ sec_id }} .pc-card-{{ last_part }}.pc-active-{{ last_part }} {
    display: flex;
    {% if section.settings.image_position == 'right' %}
      flex-direction: row;
    {% else %}
      flex-direction: row-reverse;
    {% endif %}
  }

  {{ sec_id }} .pc-card-content-{{ last_part }} {
    padding: calc(var(--pc-spacer-{{ last_part }}) * 2);
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: calc(100% - var(--pc-image-width-{{ last_part }}));
    height: 100%;
  }

  {{ sec_id }} .pc-card-subtitle-{{ last_part }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: var(--pc-subtitle-color-{{ last_part }});
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: calc(var(--pc-spacer-{{ last_part }}) / 2);
    font-weight: {{ section.settings.subtitle_weight }};
  }

  {{ sec_id }} .pc-card-title-{{ last_part }} {
    font-size: {{ section.settings.title_size }}px;
    color: var(--pc-title-color-{{ last_part }});
    margin-bottom: var(--pc-spacer-{{ last_part }});
    font-weight: {{ section.settings.title_weight }};
    line-height: 1.2;
  }

  {{ sec_id }} .pc-card-text-{{ last_part }} {
    font-size: {{ section.settings.text_size }}px;
    color: var(--pc-text-color-{{ last_part }});
    margin-bottom: calc(var(--pc-spacer-{{ last_part }}) * 1.5);
    line-height: 1.6;
  }

  {{ sec_id }} .pc-card-button-{{ last_part }} {
    display: inline-block;
    padding: 12px 24px;
    background: var(--pc-button-bg-{{ last_part }});
    color: var(--pc-button-color-{{ last_part }});
    text-decoration: none;
    border-radius: {{ section.settings.button_radius }}px;
    font-weight: {{ section.settings.button_weight }};
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  {{ sec_id }} .pc-card-button-{{ last_part }}:hover {
    background: var(--pc-button-hover-{{ last_part }});
    transform: translateY(-2px);
  }

  {{ sec_id }} .pc-card-image-{{ last_part }} {
    flex-shrink: 0;
    width: var(--pc-image-width-{{ last_part }});
    height: 100%;
  }

  {{ sec_id }} .pc-card-image-{{ last_part }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    {% if section.settings.image_position == 'right' %}
      border-radius: 0 {{ section.settings.card_radius }}px {{ section.settings.card_radius }}px 0;
    {% else %}
      border-radius: {{ section.settings.card_radius }}px 0 0 {{ section.settings.card_radius }}px;
    {% endif %}
  }

  {{ sec_id }} .pc-carousel-nav-{{ last_part }} {
    position: absolute;
    bottom: 20px;
    left: 10%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  {{ sec_id }} .pc-carousel-arrow-{{ last_part }} {
    width: 40px;
    height: 40px;
    background: var(--pc-arrow-bg-{{ last_part }});
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  {{ sec_id }} .pc-carousel-arrow-{{ last_part }}:hover {
    background: var(--pc-arrow-hover-{{ last_part }});
  }

  {{ sec_id }} .pc-carousel-arrow-{{ last_part }} svg {
    width: 20px;
    height: 20px;
    fill: var(--pc-arrow-color-{{ last_part }});
  }

  @media (max-width: 767px) {
    {{ sec_id }} .pc-section-container-{{ last_part }} {
      width: {{ section.settings.mobile_container_width }}%;
      padding: {{ section.settings.mobile_container_padding }}px;
    }

    {{ sec_id }} .pc-card-carousel-{{ last_part }} {
      height: var(--pc-mobile-container-height-{{ last_part }});
    }

    {{ sec_id }} .pc-card-{{ last_part }}.pc-active-{{ last_part }} {
      flex-direction: column;
    }

    {{ sec_id }} .pc-card-content-{{ last_part }} {
      padding: var(--pc-spacer-{{ last_part }});
      width: 100%;
      height: auto;
    }

    {{ sec_id }} .pc-card-image-{{ last_part }} {
      width: 100%;
      height: {{ section.settings.mobile_image_height }}px;
    }

    {{ sec_id }} .pc-card-image-{{ last_part }} img {
      border-radius: 0 0 {{ section.settings.card_radius }}px {{ section.settings.card_radius }}px;
    }

    {{ sec_id }} .pc-card-subtitle-{{ last_part }} {
      font-size: {{ section.settings.mobile_subtitle_size }}px;
    }

    {{ sec_id }} .pc-card-title-{{ last_part }} {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    {{ sec_id }} .pc-card-text-{{ last_part }} {
      font-size: {{ section.settings.mobile_text_size }}px;
    }
  }
</style>

<div class="pc-section-container-{{ last_part }}">
  <div class="pc-card-carousel-{{ last_part }}">
    {% for block in section.blocks %}
      <div class="pc-card-{{ last_part }} {% if forloop.first %}pc-active-{{ last_part }}{% endif %}">
        <div class="pc-card-content-{{ last_part }}">
          {% if block.settings.subtitle != blank %}
            <div class="pc-card-subtitle-{{ last_part }}">{{ block.settings.subtitle }}</div>
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h2 class="pc-card-title-{{ last_part }}">{{ block.settings.title }}</h2>
          {% endif %}
          
          {% if block.settings.text != blank %}
            <p class="pc-card-text-{{ last_part }}">{{ block.settings.text }}</p>
          {% endif %}
          
          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link | default: '#' }}" class="pc-card-button-{{ last_part }}">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
        
        <div class="pc-card-image-{{ last_part }}">
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: block.settings.image.alt | escape }}
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
      </div>
    {% endfor %}
    
    <div class="pc-carousel-nav-{{ last_part }}">
      <div class="pc-carousel-arrow-{{ last_part }}" id="pc-moveLeft-{{ last_part }}">
        <svg viewBox="0 0 24 24">
          <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z"></path>
        </svg>
      </div>
      <div class="pc-carousel-arrow-{{ last_part }}" id="pc-moveRight-{{ last_part }}">
        <svg viewBox="0 0 24 24">
          <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"></path>
        </svg>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ last_part }}';
    const cards = document.querySelectorAll('{{ sec_id }} .pc-card-{{ last_part }}');
    let currentIndex = 0;
    
    function showCard(index) {
      cards.forEach((card, i) => {
        card.classList.toggle('pc-active-{{ last_part }}', i === index);
      });
      currentIndex = index;
    }
    
    document.getElementById('pc-moveLeft-{{ last_part }}').addEventListener('click', function() {
      let newIndex = currentIndex - 1;
      if (newIndex < 0) newIndex = cards.length - 1;
      showCard(newIndex);
    });
    
    document.getElementById('pc-moveRight-{{ last_part }}').addEventListener('click', function() {
      let newIndex = currentIndex + 1;
      if (newIndex >= cards.length) newIndex = 0;
      showCard(newIndex);
    });
 
    let touchStartX = 0;
    let touchEndX = 0;
    
    const carousel = document.querySelector('{{ sec_id }} .pc-card-carousel-{{ last_part }}');
    
    carousel.addEventListener('touchstart', function(e) {
      touchStartX = e.changedTouches[0].screenX;
    }, {passive: true});
    
    carousel.addEventListener('touchend', function(e) {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, {passive: true});
    
    function handleSwipe() {
      if (touchEndX < touchStartX - 50) {
        let newIndex = currentIndex + 1;
        if (newIndex >= cards.length) newIndex = 0;
        showCard(newIndex);
      }
      
      if (touchEndX > touchStartX + 50) {
        let newIndex = currentIndex - 1;
        if (newIndex < 0) newIndex = cards.length - 1;
        showCard(newIndex);
      }
    }
  });
</script>

