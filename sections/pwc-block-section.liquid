
  
    <div class="gridrow">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'column'  %}
            <p>{{ block.settings.heading }}</p>
      
          {% when 'form' %}
             <form action="#" method="post">
                <input type="text" placeholder="Enter your text">
                <button type="submit">Submit</button>
              </form>
          {% when 'grid' %}
            <h2>{{ block.settings.title }}</h2>
            <h3>{{ block.settings.text }}</h3>
            <button>{{ block.settings.btn }}</button>
        {% endcase %}
        
      {% endfor %}
    </div>



{% schema %}
{
  "name": "Lean code group",
  "settings": [],
  "blocks": [
    {
      "type": "column",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Main Heading",
          "label": "Heading"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#ffffff"
        }
      ]
    },
    {
      "type": "form",
      "name": "Form",
      "settings": [
        {
          "type": "text",
          "id": "placeholder",
          "default": "Enter your text",
          "label": "Placeholder Text"
        }
      ]
    },
    {
      "type": "grid",
      "name": "Grid Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "btn",
          "label": "button"
        }
      ]
    },
  ],
  "presets": [
    {
      "name": "Lean code group",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "form"
        },
        {
          "type": "grid"
        },
      ]
    }
  ]
}
{% endschema %}

