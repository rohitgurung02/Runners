<div class="custom-section">
  {% for block in section.blocks %}
    <div class="block-item" style="color: {{ block.settings.text_color }}">
      {% if block.type == 'column' %}
        <p>{{ block.settings.heading }}</p>
      {% elsif block.type == 'form' %}
        <form action="#" method="post">
          <input type="text" placeholder="Enter your text">
          <button type="submit">Submit</button>
        </form>
      {% endif %}
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Lean code group",
  "settings": [],
  "blocks": [
    {
      "type": "column",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Main Heading",
          "label": "Heading"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#ffffff"
        }
      ]
    },
    {
      "type": "form",
      "name": "Form",
      "settings": [
        {
          "type": "text",
          "id": "placeholder",
          "default": "Enter your text",
          "label": "Placeholder Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lean code group",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "form"
        }
      ]
    }
  ]
}
{% endschema %}

