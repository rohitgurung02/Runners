{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-wave-layout-{{ last_part }} class="pc-wave-layout">
  <div class="pc-wave-layout__content">
    {{ section.settings.content }}
  </div>
  <div class="pc-wave pc-wave--primary"></div>
  <div class="pc-wave pc-wave--secondary"></div>
</pc-wave-layout-{{ last_part }}>

<style>
  {{ sec_id }} .pc-wave-layout {
    position: relative;
    width: 100%;
    min-height: {{ section.settings.min_height }}px;
    overflow: hidden;
    padding: {{ section.settings.desktop_padding_top }}px {{ section.settings.desktop_padding_right }}px {{ section.settings.desktop_padding_bottom }}px {{ section.settings.desktop_padding_left }}px;
    background-color: {{ section.settings.background_color }};
    margin-bottom: {{ section.settings.desktop_margin_bottom }}px;
  }

  {{ sec_id }} .pc-wave-layout__content {
    position: relative;
    z-index: 10;
    max-width: {{ section.settings.content_width }}%;
    margin: 0 auto;
    padding: 20px;
    color: {{ section.settings.text_color }};
    text-align: {{ section.settings.text_alignment }};
  }

  {{ sec_id }} .pc-wave {
    position: absolute;
    width: 100%;
    height: {{ section.settings.wave_height }}px;
    bottom: 0;
    left: 0;
    transform-origin: center bottom;
  }

  {{ sec_id }} .pc-wave--primary {
    background-color: {{ section.settings.primary_wave_color }};
    z-index: 5;
    animation: pc-wave-animation-{{ last_part }} 8s ease-in-out infinite alternate;
  }

  {{ sec_id }} .pc-wave--secondary {
    background-color: {{ section.settings.secondary_wave_color }};
    z-index: 1;
    animation: pc-wave-animation-{{ last_part }} 10s ease-in-out infinite alternate-reverse;
    opacity: 0.7;
    height: {{ section.settings.wave_height | times: 0.8 }}px;
  }

  @keyframes pc-wave-animation-{{ last_part }} {
    0% {
      transform: scaleX(1) skew(0, -8deg);
      border-radius: 50% 50% 0 0;
    }
    50% {
      transform: scaleX(1.2) skew(10deg, 0);
      border-radius: 40% 60% 0 0;
    }
    100% {
      transform: scaleX(1) skew(0, 8deg);
      border-radius: 60% 40% 0 0;
    }
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-wave-layout {
      min-height: {{ section.settings.mobile_min_height }}px;
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
      margin-bottom: {{ section.settings.mobile_margin_bottom }}px;
    }

    {{ sec_id }} .pc-wave-layout__content {
      max-width: 90%;
    }

    {{ sec_id }} .pc-wave {
      height: {{ section.settings.mobile_wave_height }}px;
    }

    {{ sec_id }} .pc-wave--secondary {
      height: {{ section.settings.mobile_wave_height | times: 0.8 }}px;
    }
  }
</style>

