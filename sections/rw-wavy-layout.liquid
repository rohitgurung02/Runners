{%- assign parts = sec_id | split: '_' -%}
{%- assign last_lower = parts | last -%}
{%- assign last_part = last_lower | downcase -%}

<pc-product-highlight-{{ last_part }} class="pc-product-highlight">
  <div class="pc-product-highlight__container">
    <div class="pc-product-highlight__first">
      {{ section.settings.first_text }}
      <div class="pc-product-highlight__first-decoration"></div>
    </div>
    <h2 class="pc-product-highlight__title">{{ section.settings.title }}</h2>
    <div class="pc-product-highlight__second">{{ section.settings.description }}</div>
  </div>
</pc-product-highlight-{{ last_part }}>

<style>
  {{ sec_id }} .pc-product-highlight {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin: 0 auto;
    padding: {{ section.settings.desktop_padding_top }}px {{ section.settings.desktop_padding_right }}px {{ section.settings.desktop_padding_bottom }}px {{ section.settings.desktop_padding_left }}px;
    background-color: {{ section.settings.background_color }};
    {% if section.settings.shadow_enabled %}
      box-shadow: 5px 5px 10px #ddd inset, -5px -5px 10px #ddd inset;
    {% endif %}
  }

  {{ sec_id }} .pc-product-highlight__container {
    width: {{ section.settings.container_width }}%;
    max-width: 100%;
    height: auto;
    padding: 20px;
    margin: 50px auto;
    border: 1px solid {{ section.settings.border_color }};
    text-align: center;
    background-color: {{ section.settings.container_background }};
  }

  {{ sec_id }} .pc-product-highlight__first,
  {{ sec_id }} .pc-product-highlight__title {
    background-color: {{ section.settings.highlight_color }};
    position: relative;
    left: -40px;
    color: {{ section.settings.highlight_text_color }};
    font-weight: {{ section.settings.highlight_font_weight }};
  }

  {{ sec_id }} .pc-product-highlight__first {
    width: 200px;
    padding: 10px 0;
    font-size: {{ section.settings.first_text_size }}px;
  }

  {{ sec_id }} .pc-product-highlight__first-decoration::after {
    content: "";
    height: 100%;
    width: 10px;
    position: absolute;
    right: -6px;
    top: 0;
    background-color: {{ section.settings.highlight_accent_color }};
    transform: skew(10deg);
  }

  {{ sec_id }} .pc-product-highlight__first-decoration::before,
  {{ sec_id }} .pc-product-highlight__title::after,
  {{ sec_id }} .pc-product-highlight__title::before {
    content: "";
    border: 10px solid;
    border-color: {{ section.settings.highlight_accent_color }} {{ section.settings.highlight_accent_color }} transparent transparent;
    position: absolute;
    left: 0;
    bottom: -20px;
  }

  {{ sec_id }} .pc-product-highlight__title {
    margin: 40px 0;
    padding: 20px;
    width: calc(100% + 80px);
    font-size: {{ section.settings.title_size }}px;
  }

  {{ sec_id }} .pc-product-highlight__title::after {
    left: auto;
    right: 0;
    border-color: {{ section.settings.highlight_accent_color }} transparent transparent {{ section.settings.highlight_accent_color }};
  }

  {{ sec_id }} .pc-product-highlight__second {
    line-height: 1.6;
    font-size: {{ section.settings.description_size }}px;
    font-style: {{ section.settings.description_style }};
    color: {{ section.settings.description_color }};
  }

  @media (max-width: 768px) {
    {{ sec_id }} .pc-product-highlight {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
    }
    
    {{ sec_id }} .pc-product-highlight__container {
      width: 90%;
    }
    
    {{ sec_id }} .pc-product-highlight__first {
      font-size: {{ section.settings.mobile_first_text_size }}px;
    }
    
    {{ sec_id }} .pc-product-highlight__title {
      font-size: {{ section.settings.mobile_title_size }}px;
    }
    
    {{ sec_id }} .pc-product-highlight__second {
      font-size: {{ section.settings.mobile_description_size }}px;
    }
  }
</style>

