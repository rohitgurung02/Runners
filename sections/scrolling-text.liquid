
<div class="marquee-horizontal tw-relative tw-flex tw-overflow-hidden tw-w-full tw-justify-start tw-items-center">
  <div class="track-horizontal-alt">
    {% for i in (1..5) %}
      <div class="marquee-element marquee-text">
        <span class="marquee_text tw-font-transducer-extended tw-font-black tw-align-super" style="font-size: 42px;line-height: 50px">
          {{ section.settings.main_text }}
        </span>
      </div>
      
      <div class="marquee-element marquee-text">
         <span class="marquee_text tw-font-transducer-extended tw-font-black tw-align-super" style="font-size: 42px;line-height: 50px">
          {{ section.settings.emoji }}
        </span>
      </div>
      
      <div class="marquee-element marquee-text-block">
         <span class="marquee_text tw-font-transducer-extended tw-font-black tw-align-super" style="font-size: 42px;line-height: 50px">
          {{ section.settings.secondary_text }}
        </span>
      </div>
      
     
    {% endfor %}
  </div>
</div>

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  // JavaScript for marquee functionality if needed
});
{% endjavascript %}

{% style %}
.marquee-horizontal {
  overflow: hidden;
  position: relative;
  width: 100%;
}

.track-horizontal-alt {
  display: flex;
  align-items: center;
  white-space: nowrap;
  will-change: transform;
  animation: scroll-horizontal {{ section.settings.speed }}s linear infinite;
}

.marquee-element {
  margin-right: 40px;
}

@keyframes scroll-horizontal {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
{% endstyle %}


