{%- assign sec_id = '#shopify-section-' | append: section.id -%}

{%- liquid
  assign main_text = section.settings.main_text
  assign emoji = section.settings.emoji 
  assign secondary_text =  section.settings.secondary_text
  assign speed = section.settings.speed
-%}

{% style %}
  {{ sec_id }} .pc-marquee-horizontal {
    overflow: hidden;
    position: relative;
    border: 1px solid black;
  }
  
  {{ sec_id }} .pc-track-horizontal-alt {
    height: 60px;
  }
  
  {{ sec_id }} .pc-track-horizontal-alt {
    animation: scroll-horizontal 8s linear infinite;
    display: flex;
    align-items: center;
  }
  
  {{ sec_id }} .pc-marquee-element {
    margin-right: 40px; /* Adjust spacing between elements */
  }
  
  {{ sec_id }} .pc-marquee_text {
    font-size: 42px;
    line-height: 50px;
  }

  {{ sec_id }} .pc-marquee-element span {
    font-size: 42px;
    font-weight: 600;
    line-height: 50px;
  }
  
  {{ sec_id }} .pc-marquee-element p {
    margin: 0;
    font-size: 42px;
    font-weight: 600;
  }
  
  {{ sec_id }} .pc-marquee-horizontal {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  {{ sec_id }} .pc-track-horizontal-alt {
    display: flex;
    align-items: center;
    white-space: nowrap;
    will-change: transform;
    animation: scroll-horizontal {{ speed }}s linear infinite;
  }

  @keyframes scroll-horizontal {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes scroll-horizontal {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
{% endstyle %}

<div class="pc-marquee-horizontal tw-relative tw-flex tw-overflow-hidden tw-w-full tw-justify-start tw-items-center">
  <div class="pc-track-horizontal-alt">
    {% for i in (1..5) %}
      <div class="pc-marquee-element pc-marquee-text">
        <span class="pc-marquee_text tw-font-transducer-extended tw-font-black tw-align-super">
          {{ main_text }}
        </span>
      </div>
      
      <div class="pc-marquee-element pc-marquee-text">
         <span class="pc-marquee_text tw-font-transducer-extended tw-font-black tw-align-super">
          {{ emoji }}
        </span>
      </div>
      
      <div class="pc-marquee-element pc-marquee-text-block">
         <span class="pc-marquee_text tw-font-transducer-extended tw-font-black tw-align-super">
          {{ secondary_text }}
        </span>
      </div>
    {% endfor %}
  </div>
</div>

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  // JavaScript for marquee functionality if needed
});
{% endjavascript %}

{% schema %}
{
  "name": "Marquee Scroller",
  "settings": [
    {
      "type": "text",
      "id": "main_text",
      "label": "Main Text",
      "default": "Main Text"
    },
    {
      "type": "text",
      "id": "emoji",
      "label": "Emoji/Symbol",
      "default": "ðŸš€"
    },
    {
      "type": "richtext",
      "id": "secondary_text",
      "label": "Secondary Text",
      "default": "<p>Secondary Text</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "s",
      "label": "Animation Speed",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "PWC - Scrolling-List #1"
    }
  ]
}
{% endschema %}
