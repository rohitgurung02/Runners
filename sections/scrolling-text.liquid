{%- assign sec_id = '#shopify-section-' | append: section.id -%}
 
{%- liquid
  assign speed = section.settings.speed
-%}
 
<style>
  
  {{ sec_id }} .pc-marquee-element {
    margin-right: 40px;
    flex-shrink: 0;
    margin-top: 10px;
    display: flex;
    align-items: center;
  }
  
  {{ sec_id }} .pc-marquee_text {
    font-size: 42px;
    line-height: 50px;
    font-weight: 600;
  }
  
  {{ sec_id }} .pc-marquee-image {
    height: 50px;
    width: auto;
    object-fit: contain;
  }
  
  @keyframes smooth-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  {{ sec_id }} .pc-track-horizontal-alt {
    animation: smooth-scroll {{ speed }}s linear infinite;
  }
</style>
 
<div class="pc-marquee-horizontal tw-relative tw-flex tw-overflow-hidden tw-w-full tw-justify-start tw-items-center">
  <div class="pc-track-horizontal-alt">
    <!-- Double the content for seamless looping -->
    {% for i in (1..10) %}
      {% for block in section.blocks %}
        <div class="pc-marquee-element" {{ block.shopify_attributes }}>
  {% case block.type %}
    {% when 'text' %}
      <span class="pc-marquee_text tw-font-transducer-extended tw-font-black tw-align-super {{ block.settings.heading_size }}">
        {{ block.settings.text }}
      </span>
    
    {% when 'emoji' %}
      <span class="pc-marquee_text tw-font-transducer-extended tw-font-black tw-align-super ">
        {{ block.settings.emoji }}
      </span>
    
    {% when 'image' %}
      {% if block.settings.image != blank %}
        <img class="pc-marquee-image" src="{{ block.settings.image | img_url: '100x' }}" alt="{{ block.settings.image.alt }}" width="auto" height="50" loading="lazy">
      {% endif %}
  {% endcase %}
</div>
      {% endfor %}
    {% endfor %}
  </div>
</div>
 
