{%- assign sec_id = '#shopify-section-' | append: section.id -%}

{%- liquid
  assign speed = section.settings.speed
  assign border_color = section.settings.border_color
  assign border_width = section.settings.border_width
  assign background_color = section.settings.background_color 
  assign direction = section.settings.direction
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
-%}

<style>
  {{ sec_id }} .pc-marquee-horizontal {
    background-color: {{ background_color }};
    overflow: hidden;
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    margin-top: {{ margin_top }}px;
    margin-bottom: {{ margin_bottom }}px;
    {% if border_width > 0 %}
      border: {{ border_width }}px solid {{ border_color }};
    {% endif %}
  }

  {{ sec_id }} .pc-track-horizontal-alt {
    height: 72px;
    display: flex;
    align-items: center;
    gap: 40px;
    will-change: transform;
    animation: {% if direction == 'left' %}scroll-left{% else %}scroll-right{% endif %} {{ speed }}s linear infinite;
  }

  {{ sec_id }} .pc-marquee-element {
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }

  {{ sec_id }} .pc-marquee_text {
    line-height: 50px;
    font-weight: 600;
  }

  {{ sec_id }} .pc-marquee-image {
    height: 50px;
    width: auto;
    object-fit: contain;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  @keyframes scroll-right {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0);
    }
  }
</style>

<div class="pc-marquee-horizontal">
  <div class="pc-track-horizontal-alt">
    {% for block in section.blocks %}
      <div class="pc-marquee-element" {{ block.shopify_attributes }}>
        {% case block.type %}
          {% when 'text' %}
            <span class="pc-marquee_text"
                  style="
                    font-size: {{ block.settings.custom_heading_size }}px; 
                    color: {{ block.settings.color }};
                    font-family: {{ block.settings.heading_font | font_family }};
                  ">
              {{ block.settings.heading }}
            </span>
          {% when 'emoji' %}
            <span class="pc-marquee_text" 
                  style="font-size: {{ block.settings.emoji_size }}px;">
              {{ block.settings.emoji }}
            </span>
          {% when 'image' %}
            {% if block.settings.image != blank %}
              <img class="pc-marquee-image" 
                   src="{{ block.settings.image | image_url }}" 
                   alt="{{ block.settings.image.alt }}" 
                   width="auto" 
                   height="50" 
                   loading="lazy">
            {% endif %}
        {% endcase %}
      </div>
    {% endfor %}
  </div>
</div>




