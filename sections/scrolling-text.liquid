{%- assign sec_id = '#shopify-section-' | append: section.id -%}
 
<style>
  {{ sec_id }} .pc-marquee-horizontal {
    overflow: hidden;
    position: relative;
    border: 1px solid black;
  }
  
  {{ sec_id }} .pc-track-horizontal-alt {
    height: 120px; /* Increased height for multiline content */
    display: flex;
    align-items: center;
    width: fit-content;
    will-change: transform;
    gap: 40px; /* Space between columns */
  }
  
  {{ sec_id }} .marquee-column {
    flex-shrink: 0;
    padding: 12px;
    min-width: 250px; /* Adjust column width */
  }
  
  {{ sec_id }} .marquee-heading {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 8px;
  }
  
  {{ sec_id }} .marquee-description {
    font-size: 16px;
    line-height: 1.4;
  }
  
  {{ sec_id }} .marquee-emoji {
    font-size: 28px;
    margin-right: 10px;
    vertical-align: middle;
  }
  
  @keyframes smooth-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  
  {{ sec_id }} .pc-track-horizontal-alt {
    animation: smooth-scroll {{ section.settings.speed }}s linear infinite;
  }
</style>
 
<div class="pc-marquee-horizontal">
  <div class="pc-track-horizontal-alt">
    <!-- Render blocks twice for seamless looping -->
    {% for i in (1..2) %}
      {% for block in section.blocks %}
        <div class="marquee-column" {{ block.shopify_attributes }}>
          {% if block.settings.emoji != blank %}
            <span class="marquee-emoji">{{ block.settings.emoji }}</span>
          {% endif %}
          <h3 class="marquee-heading">{{ block.settings.heading }}</h3>
          <div class="marquee-description">{{ block.settings.description }}</div>
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>

