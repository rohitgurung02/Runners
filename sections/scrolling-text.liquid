{%- assign sec_id = '#shopify-section-' | append: section.id -%}

{%- liquid
  assign speed = section.settings.speed
  assign border_color = section.settings.border_color
  assign border_width = section.settings.border_width
  assign background_color = section.settings.background_color 
  assign direction = section.settings.direction
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
-%}

<style>
  {{ sec_id }} .pc-marquee-horizontal {
    background-color: {{ background_color }};
    overflow: hidden;
    display: flex;
    align-items: center;
    {% if border_width > 0 %}
      border-top: {{ border_width }}px solid {{ border_color }};
      border-bottom: {{ border_width }}px solid {{ border_color }};
    {% endif %}
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    margin-top: {{ margin_top }}px;
    margin-bottom: {{ margin_bottom }}px;
  }

  {{ sec_id }} .pc-track-horizontal-alt {
    display: flex;
    gap: 40px;
    animation: scroll-animation {{ speed }}s linear infinite;
    white-space: nowrap;
  }

  {{ sec_id }} .pc-marquee-element {
    display: inline-block;
    margin-right: 40px;
  }

  @keyframes scroll-animation {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>

<div class="pc-marquee-horizontal">
  <div class="pc-track-horizontal-alt">
    {% for block in section.blocks %}
      {%- liquid
        assign heading = block.settings.heading
        assign custom_font_family = block.settings.custom_font_family
        assign custom_heading_size = block.settings.custom_heading_size
        assign color = block.settings.color
        assign emoji = block.settings.emoji
        assign emoji_size = block.settings.emoji_size
        assign image = block.settings.image
      -%}

      <div class="pc-marquee-element">
        {% case block.type %}
          {% when 'text' %}
            <span style="
              font-size: {{ custom_heading_size }}px;
              font-family: {{ custom_font_family }};
              color: {{ color }};
            ">
              {{ heading }}
            </span>
          
          {% when 'emoji' %}
            <span style="font-size: {{ emoji_size }}px;">
              {{ emoji }}
            </span>
            
          {% when 'image' %}
            {% if block.settings.image != blank %}
              <img class="pc-marquee-image" src="{{ block.settings.image | img_url: '100x' }}" alt="{{ image.alt }}" width="auto" height="50" loading="lazy">
            {% endif %}
        {% endcase %}
      </div>
    {% endfor %}
  </div>
  
  <!-- Duplicate the track for infinite seamless loop -->
  <div class="pc-track-horizontal-alt">
    {% for block in section.blocks %}
      <div class="pc-marquee-element">
        {% case block.type %}
          {% when 'text' %}
            <span style="
              font-size: {{ custom_heading_size }}px;
              font-family: {{ custom_font_family }};
              color: {{ color }};
            ">
              {{ heading }}
            </span>
          
          {% when 'emoji' %}
            <span style="font-size: {{ emoji_size }}px;">
              {{ emoji }}
            </span>
            
          {% when 'image' %}
            {% if block.settings.image != blank %}
              <img class="pc-marquee-image" src="{{ block.settings.image | img_url: '100x' }}" alt="{{ image.alt }}" width="auto" height="50" loading="lazy">
            {% endif %}
        {% endcase %}
      </div>
    {% endfor %}
  </div>
</div>


