{%- assign sec_id = '#shopify-section-' | append: section.id -%}

{%- liquid
  assign speed = section.settings.speed
  assign border_color = section.settings.border_color
  assign border_width = section.settings.border_width
  assign background_color = section.settings.background_color 
  assign direction = section.settings.direction
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign custom_font = section.settings.custom_font
-%}

<style>
  /* Font face declaration */
  {{ custom_font | font_face: font_display: 'swap' }}

   {{ sec_id }} span {
   font-family: {{ settings.custom_font.family }};
    font-weight: {{ settings.custom_font.weight }};
    font-style: {{ settings.custom_font.style }};
  }
  
  {{ sec_id }} .pc-marquee-horizontal {
    background-color: {{ background_color }};
    overflow: hidden;
    {% if border_width > 0 %}
      border-top: {{ border_width }}px solid {{ border_color }};
      border-bottom: {{ border_width }}px solid {{ border_color }};
    {% endif %}
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    margin-top: {{ margin_top }}px;
    margin-bottom: {{ margin_bottom }}px;
  }
  
  {{ sec_id }} .pc-track-horizontal-alt {
    height: 72px;
    display: flex;
    align-items: center;
    gap: 20px;
    will-change: transform;
    width: max-content;
  }
  
  {{ sec_id }} .pc-marquee-element {
    flex-shrink: 0;
    margin-top: 10px;
    display: flex;
    align-items: center;
  }
  
  {{ sec_id }} .pc-marquee_text {
    font-size: 42px;
    line-height: 50px;
    font-weight: 600;
    font-family: {{ custom_font.family }}, {{ custom_font.fallback_families }};
  }
  
  {{ sec_id }} .pc-marquee-image {
    height: 50px;
    width: auto;
    object-fit: contain;
  }


  /* Improved seamless animation */
  @keyframes scroll-left {
    0% {
    transform: translateX(100%); /* Start from the right end */
  }
  100% {
    transform: translateX(-100%); /* End at the left end */
  }
  }

   @keyframes scroll-right {
  0% {
    transform: translateX(-0%); /* Start from the left end */
  }
  100% {
    transform: translateX(100%); /* End at the right end */
  }
  } 
  
  {{ sec_id }} .pc-track-horizontal-alt {
    animation: {% if direction == 'left' %}scroll-left{% else %}scroll-right{% endif %} {{ speed }}s linear infinite;
  }
</style>

<div class="pc-marquee-horizontal tw-relative tw-flex tw-overflow-hidden tw-w-full tw-justify-start tw-items-center">
  <div class="pc-track-horizontal-alt">
    <!-- First set of blocks (visible) -->
    {% for block in section.blocks %}
      <div class="pc-marquee-element" {{ block.shopify_attributes }}>
        {% case block.type %}
          {% when 'text' %}
            <span class="pc-marquee_text" 
                  style="font-size: {{ block.settings.custom_heading_size }}px; 
                         color: {{ block.settings.color }}">
              {{ block.settings.heading }}
            </span>
          
          {% when 'emoji' %}
            <span class="pc-marquee_text" 
                  style="font-size: {{ block.settings.emoji_size }}px;">
              {{ block.settings.emoji }}
            </span>
            
          {% when 'image' %}
            {% if block.settings.image != blank %}
              <img class="pc-marquee-image" 
                   src="{{ block.settings.image | img_url: '100x' }}" 
                   alt="{{ block.settings.image.alt }}" 
                   width="auto" 
                   height="50" 
                   loading="lazy">
            {% endif %}
        {% endcase %}
      </div>
    {% endfor %}
    
    <!-- Second set of blocks (duplicate for seamless looping) -->
    {% for block in section.blocks %}
      <div class="pc-marquee-element" {{ block.shopify_attributes }}>
        {% case block.type %}
          {% when 'text' %}
            <span class="pc-marquee_text" 
                  style="font-size: {{ block.settings.custom_heading_size }}px; 
                         color: {{ block.settings.color }}">
              {{ block.settings.heading }}
            </span>
          
          {% when 'emoji' %}
            <span class="pc-marquee_text" 
                  style="font-size: {{ block.settings.emoji_size }}px;">
              {{ block.settings.emoji }}
            </span>
            
          {% when 'image' %}
            {% if block.settings.image != blank %}
              <img class="pc-marquee-image" 
                   src="{{ block.settings.image | img_url: '100x' }}" 
                   alt="{{ block.settings.image.alt }}" 
                   width="auto" 
                   height="50" 
                   loading="lazy">
            {% endif %}
        {% endcase %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Marquee Scroller",
  "settings": [
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Border Width",
      "default": 2
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 2,
      "max": 15,
      "step": 1,
      "unit": "s",
      "label": "Animation Speed",
      "default": 5
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Animation Direction",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 8
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 12
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Item",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Add your text here",
          "label": "Text Content"
        },
        {
          "type": "range",
          "id": "custom_heading_size",
          "min": 10,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Heading Size",
          "default": 24
        },
        {
          "type": "color",
          "id": "color",
          "label": "Text Color",
          "default": "#FFFFFF"
        }
      ]
    },
    {
      "type": "emoji",
      "name": "Emoji/Symbol",
      "settings": [
        {
          "type": "text",
          "id": "emoji",
          "label": "Emoji or Symbol",
          "default": "ðŸš€"
        },
        {
          "type": "range",
          "id": "emoji_size",
          "min": 12,
          "max": 100,
          "step": 2,
          "unit": "px",
          "label": "Emoji Size",
          "default": 24
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Scroller",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "emoji"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}