    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Text alignment"
    },
    {
      "type": "header",
      "content": "Button"
    },    
    {
      "type": "text",
      "id": "button_label",
      "default": "View all",
      "label": "Button label"
