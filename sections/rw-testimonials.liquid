<script>
document.addEventListener('DOMContentLoaded', function() {
  const sliderId = '{{ last_part }}';
  const container = document.querySelector(`pc-testimonial-slider-${sliderId}`);
  const imageContainer = document.getElementById(`pc-image-container-${sliderId}`);
  const nameElement = document.getElementById(`pc-name-${sliderId}`);
  const designationElement = document.getElementById(`pc-designation-${sliderId}`);
  const quoteElement = document.getElementById(`pc-quote-${sliderId}`);
  const prevButton = document.getElementById(`pc-prev-button-${sliderId}`);
  const nextButton = document.getElementById(`pc-next-button-${sliderId}`);
  const images = imageContainer.querySelectorAll('.pc-testimonial-image');
  
  let currentIndex = 0;
  const testimonials = [
    {%- for block in section.blocks -%}
      {
        name: {{ block.settings.name | json }},
        designation: {{ block.settings.designation | json }},
        quote: {{ block.settings.quote | json }}
      }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
  ];
  
  // Initialize
  updateTestimonial();
  setActiveImage();
  
  // Event listeners
  prevButton.addEventListener('click', showPrevTestimonial);
  nextButton.addEventListener('click', showNextTestimonial);
  
  // Keyboard navigation
  container.addEventListener('keydown', function(e) {
    if (e.key === 'ArrowLeft') {
      showPrevTestimonial();
    } else if (e.key === 'ArrowRight') {
      showNextTestimonial();
    }
  });
  
  // Functions
  function showPrevTestimonial() {
    currentIndex = (currentIndex - 1 + testimonials.length) % testimonials.length;
    updateTestimonial();
    setActiveImage();
  }
  
  function showNextTestimonial() {
    currentIndex = (currentIndex + 1) % testimonials.length;
    updateTestimonial();
    setActiveImage();
  }
  
  function updateTestimonial() {
    const testimonial = testimonials[currentIndex];
    nameElement.textContent = testimonial.name;
    designationElement.textContent = testimonial.designation;
    quoteElement.textContent = testimonial.quote;
  }
  
  function setActiveImage() {
    images.forEach((img, index) => {
      if (index === currentIndex) {
        img.style.opacity = '1';
        img.style.transform = 'translateZ(0)';
        img.style.zIndex = '1';
      } else {
        img.style.opacity = '0';
        img.style.transform = index < currentIndex ? 'translateZ(-100px)' : 'translateZ(100px)';
        img.style.zIndex = '0';
      }
    });
  }
});
</script>